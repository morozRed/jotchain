<div class="card" data-turbo-frame="entry_<%= entry.id %>">
  <div class="flex justify-between items-start mb-4">
    <div>
      <h3 class="text-lg font-semibold text-text-primary"><%= formatted_date %></h3>
      <%= win_badge %>
    </div>
    <% if editable %>
      <div class="flex gap-2">
        <%= link_to "Edit", edit_entry_path(entry), class: "text-sm text-accent hover:text-accent-hover", data: { turbo_frame: "entry_#{entry.id}" } %>
        <%= button_to "Delete", entry_path(entry), method: :delete, class: "text-sm text-red-500 hover:text-red-700", data: { turbo_confirm: "Are you sure?" } %>
      </div>
    <% end %>
  </div>

  <div class="grid md:grid-cols-2 gap-6">
    <div>
      <h4 class="text-sm font-medium text-text-secondary mb-2">✅ Done Today</h4>
      <div class="space-y-1">
        <% if content_lines.any? %>
          <% content_lines.each do |line| %>
            <p class="text-sm text-text-primary"><%= line %></p>
          <% end %>
        <% else %>
          <p class="text-sm text-text-tertiary italic">Nothing logged</p>
        <% end %>
      </div>
    </div>

    <div>
      <h4 class="text-sm font-medium text-text-secondary mb-2">→ Next Up</h4>
      <div class="space-y-1">
        <% if next_actions_lines.any? %>
          <% next_actions_lines.each do |line| %>
            <p class="text-sm text-text-primary"><%= line %></p>
          <% end %>
        <% else %>
          <p class="text-sm text-text-tertiary italic">No next actions</p>
        <% end %>
      </div>
    </div>
  </div>
</div>