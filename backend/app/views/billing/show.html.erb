<turbo-frame id="billing-content">
  <div class="mx-auto max-w-3xl px-6 lg:px-8">
    <div class="space-y-6">
    <!-- Current Plan Section -->
    <div class="card">
      <div class="flex justify-between items-start mb-6">
        <div>
          <h2 class="text-lg font-semibold text-text-primary">Current Plan</h2>
          <p class="text-sm text-text-secondary mt-1">Manage your subscription and billing</p>
        </div>
        <% if @subscription&.pro? && @subscription.stripe_subscription_id.present? %>
          <%= button_to "Manage Billing",
              portal_billing_path,
              method: :post,
              class: "btn-secondary text-sm" %>
        <% end %>
      </div>

      <div class="bg-gray-50 rounded-lg p-6">
        <div class="flex justify-between items-center">
          <div>
            <p class="text-sm font-medium text-text-secondary">Plan</p>
            <p class="text-2xl font-bold text-text-primary mt-1">
              <%= @subscription.plan_display_name %>
            </p>
            <% if @subscription.pro? %>
              <p class="text-sm text-text-secondary mt-2">
                <% if @subscription.cancel_at_period_end? %>
                  <span class="text-amber-600">Cancels on <%= @subscription.current_period_end&.strftime("%B %d, %Y") %></span>
                <% else %>
                  Renews on <%= @subscription.current_period_end&.strftime("%B %d, %Y") %>
                <% end %>
              </p>
            <% end %>
          </div>

          <% if @subscription.free? %>
            <div class="text-right">
              <p class="text-sm text-text-secondary mb-2">Upgrade to Pro</p>
              <p class="text-3xl font-bold text-accent">$5<span class="text-sm text-text-secondary font-normal">/mo</span></p>
            </div>
          <% elsif @subscription.cancel_at_period_end? %>
            <%= button_to "Reactivate Subscription",
                reactivate_subscription_billing_path,
                method: :post,
                class: "btn-primary" %>
          <% end %>
        </div>

        <% if @subscription.free? %>
          <div class="mt-6 p-4 bg-amber-50 rounded-lg border border-amber-200">
            <p class="text-sm text-amber-800">
              <strong>Free Plan Limitations:</strong>
              • Only 3 days of entry history
              • No AI-powered insights
              • No export functionality
            </p>
          </div>
        <% end %>
      </div>

      <!-- Usage Stats -->
      <div class="mt-6 grid grid-cols-2 gap-4">
        <div class="bg-gray-50 rounded-lg p-4">
          <p class="text-xs font-medium text-text-secondary uppercase tracking-wide">Entries This Month</p>
          <p class="text-2xl font-bold text-text-primary mt-1">
            <%= current_user.entries.where('created_at >= ?', Time.current.beginning_of_month).count %>
          </p>
        </div>
        <div class="bg-gray-50 rounded-lg p-4">
          <p class="text-xs font-medium text-text-secondary uppercase tracking-wide">AI Insights Used</p>
          <p class="text-2xl font-bold text-text-primary mt-1">
            <%= @current_usage %>
            <% if @subscription.ai_insights_allowed? %>
              <span class="text-sm text-text-secondary font-normal">/ unlimited</span>
            <% else %>
              <span class="text-sm text-text-secondary font-normal">(not available)</span>
            <% end %>
          </p>
        </div>
      </div>
    </div>

    <!-- Pricing Plans -->
    <% if @subscription.free? || @subscription.cancel_at_period_end? %>
      <div class="card">
        <h2 class="text-lg font-semibold text-text-primary mb-6">Choose Your Plan</h2>

        <!-- Billing Toggle -->
        <div class="flex justify-center mb-8">
          <div class="bg-gray-100 border border-gray-200 rounded-full p-1 flex shadow-sm">
            <button
              id="monthly-tab"
              onclick="toggleBilling('monthly')"
              class="px-6 py-2 rounded-full text-sm font-medium transition-all duration-200 bg-accent text-white">
              Monthly
            </button>
            <button
              id="yearly-tab"
              onclick="toggleBilling('yearly')"
              class="px-6 py-2 rounded-full text-sm font-medium transition-all duration-200 text-text-secondary">
              Yearly
              <span class="text-xs ml-1">(Save $10)</span>
            </button>
          </div>
        </div>

        <!-- Pricing Cards -->
        <div class="grid md:grid-cols-2 gap-6">
          <!-- Free Plan -->
          <div class="border-2 <%= @subscription.free? ? 'border-accent' : 'border-gray-200' %> rounded-2xl p-6 relative flex flex-col">
            <% if @subscription.free? %>
              <div class="absolute -top-3 left-1/2 transform -translate-x-1/2">
                <span class="bg-accent text-white text-xs font-semibold px-3 py-1 rounded-full">
                  CURRENT PLAN
                </span>
              </div>
            <% end %>
            <h3 class="text-xl font-bold mb-2 <%= @subscription.free? ? 'mt-2' : '' %>">Free Plan</h3>
            <p class="text-3xl font-bold mb-4">$0<span class="text-sm text-text-secondary font-normal">/forever</span></p>

            <ul class="space-y-2 mb-6 flex-grow">
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-accent mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"></path>
                </svg>
                <span class="text-sm">3 days of entry history</span>
              </li>
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-accent mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"></path>
                </svg>
                <span class="text-sm">Unlimited daily entries</span>
              </li>
              <li class="flex items-start gap-2 opacity-50">
                <svg class="w-5 h-5 text-gray-400 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"></path>
                </svg>
                <span class="text-sm line-through">AI-powered insights</span>
              </li>
              <li class="flex items-start gap-2 opacity-50">
                <svg class="w-5 h-5 text-gray-400 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"></path>
                </svg>
                <span class="text-sm line-through">Export functionality</span>
              </li>
            </ul>

            <% if @subscription.free? %>
              <button class="w-full btn-secondary mt-auto" disabled>Current Plan</button>
            <% end %>
          </div>

          <!-- Pro Plan -->
          <div class="border-2 border-accent rounded-2xl p-6 relative flex flex-col">
            <div class="absolute -top-3 left-1/2 transform -translate-x-1/2">
              <span class="bg-accent text-white text-xs font-semibold px-3 py-1 rounded-full">
                RECOMMENDED
              </span>
            </div>

            <h3 class="text-xl font-bold mb-2 mt-2">Pro Plan</h3>
            <p class="text-3xl font-bold mb-4">
              $<span id="price-amount">5</span><span class="text-sm text-text-secondary font-normal">/<span id="price-period">month</span></span>
            </p>
            <p id="price-comparison" class="text-xs text-text-secondary mb-4 invisible">
              That's just $4.17 per month!
            </p>

            <ul class="space-y-2 mb-6 flex-grow">
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-accent mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"></path>
                </svg>
                <span class="text-sm">Unlimited history & recall</span>
              </li>
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-accent mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"></path>
                </svg>
                <span class="text-sm">AI-powered content suggestions</span>
              </li>
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-accent mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"></path>
                </svg>
                <span class="text-sm">Export in multiple formats</span>
              </li>
              <li class="flex items-start gap-2">
                <svg class="w-5 h-5 text-accent mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"></path>
                </svg>
                <span class="text-sm">Priority support</span>
              </li>
            </ul>

            <div class="mt-auto">
              <%= form_with url: checkout_billing_path, method: :post, local: true do |f| %>
                <%= f.hidden_field :price_id, value: Rails.configuration.stripe[:price_ids][:monthly], id: "selected-price-id" %>
                <%= f.submit "Upgrade to Pro", class: "w-full btn-primary" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Payment History -->
    <% if @subscription.pro? %>
      <div class="card">
        <h2 class="text-lg font-semibold text-text-primary mb-4">Billing Management</h2>
        <p class="text-sm text-text-secondary mb-6">
          Manage your payment methods, download invoices, and update billing information through our secure billing portal.
        </p>
        <%= button_to "Open Billing Portal",
            portal_billing_path,
            method: :post,
            class: "btn-primary" %>

        <% unless @subscription.cancel_at_period_end? %>
          <div class="mt-4 pt-4 border-t border-border">
            <%= button_to "Cancel Subscription",
                cancel_subscription_billing_path,
                method: :post,
                data: {
                  turbo_confirm: "Are you sure you want to cancel your subscription? You'll lose access to Pro features at the end of your billing period."
                },
                class: "text-sm text-red-600 hover:text-red-700" %>
          </div>
        <% end %>
      </div>
    <% end %>
    </div>
  </div>
</turbo-frame>

<script>
  function toggleBilling(type) {
    const monthlyTab = document.getElementById('monthly-tab');
    const yearlyTab = document.getElementById('yearly-tab');
    const priceAmount = document.getElementById('price-amount');
    const pricePeriod = document.getElementById('price-period');
    const priceComparison = document.getElementById('price-comparison');
    const priceInput = document.getElementById('selected-price-id');

    if (type === 'yearly') {
      yearlyTab.classList.add('bg-accent', 'text-white');
      yearlyTab.classList.remove('text-text-secondary');
      monthlyTab.classList.remove('bg-accent', 'text-white');
      monthlyTab.classList.add('text-text-secondary');

      priceAmount.textContent = '50';
      pricePeriod.textContent = 'year';
      priceComparison.classList.remove('invisible');
      priceComparison.classList.add('visible');
      priceInput.value = '<%= Rails.configuration.stripe[:price_ids][:yearly] %>';
    } else {
      monthlyTab.classList.add('bg-accent', 'text-white');
      monthlyTab.classList.remove('text-text-secondary');
      yearlyTab.classList.remove('bg-accent', 'text-white');
      yearlyTab.classList.add('text-text-secondary');

      priceAmount.textContent = '5';
      pricePeriod.textContent = 'month';
      priceComparison.classList.remove('visible');
      priceComparison.classList.add('invisible');
      priceInput.value = '<%= Rails.configuration.stripe[:price_ids][:monthly] %>';
    }
  }
</script>
