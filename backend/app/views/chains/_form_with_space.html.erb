<%= form_with model: chain, url: chains_path, class: "space-y-5", data: { turbo: false } do |form| %>
  <% if chain.errors.present? %>
    <div class="rounded-xl border border-rose-400/30 bg-rose-500/10 p-4 text-sm text-rose-200">
      <p class="font-semibold">Cannot save chain yet:</p>
      <ul class="mt-2 list-inside list-disc space-y-1">
        <% chain.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-2">
    <%= form.label :space_id, "Space", class: "block text-xs font-semibold uppercase tracking-wide text-slate-300" %>
    <%= form.collection_select :space_id, Space.order(:name), :id, :name, { prompt: "Select a space" }, class: "block w-full rounded-xl border border-white/10 bg-slate-950/60 px-4 py-3 text-sm text-white focus:border-indigo-400 focus:outline-none focus:ring-2 focus:ring-indigo-400/40" %>
  </div>

  <div class="space-y-2">
    <%= form.label :name, class: "block text-xs font-semibold uppercase tracking-wide text-slate-300" %>
    <%= form.text_field :name, required: true, placeholder: "1-1 with Andrew", class: "block w-full rounded-xl border border-white/10 bg-slate-950/60 px-4 py-3 text-sm text-white placeholder:text-slate-500 focus:border-indigo-400 focus:outline-none focus:ring-2 focus:ring-indigo-400/40" %>
  </div>

  <div class="space-y-2">
    <%= form.label :purpose, class: "block text-xs font-semibold uppercase tracking-wide text-slate-300" %>
    <%= form.text_field :purpose, placeholder: "Track mentoring conversations and growth signals.", class: "block w-full rounded-xl border border-white/10 bg-slate-950/60 px-4 py-3 text-sm text-white placeholder:text-slate-500 focus:border-indigo-400 focus:outline-none focus:ring-2 focus:ring-indigo-400/40" %>
  </div>

  <div class="space-y-2">
    <%= form.label :description, class: "block text-xs font-semibold uppercase tracking-wide text-slate-300" %>
    <%= form.text_area :description, rows: 4, placeholder: "Optional context that appears on the chain dashboard and frames AI prompts.", class: "block w-full rounded-xl border border-white/10 bg-slate-950/60 px-4 py-3 text-sm text-white placeholder:text-slate-500 focus:border-indigo-400 focus:outline-none focus:ring-2 focus:ring-indigo-400/40" %>
  </div>

  <div class="grid gap-4 md:grid-cols-2">
    <div class="space-y-2">
      <%= form.label :status, class: "block text-xs font-semibold uppercase tracking-wide text-slate-300" %>
      <%= form.select :status, options_for_select(Chain.statuses.keys.map { |key| [key.titleize, key] }, chain.status), {}, class: "block w-full rounded-xl border border-white/10 bg-slate-950/60 px-4 py-3 text-sm text-white focus:border-indigo-400 focus:outline-none focus:ring-2 focus:ring-indigo-400/40" %>
    </div>
    <div class="space-y-2">
      <%= form.label :color, "Accent color", class: "block text-xs font-semibold uppercase tracking-wide text-slate-300" %>
      <%= form.color_field :color, class: "h-11 w-16 rounded-xl border border-white/10 bg-slate-950/70 p-1" %>
    </div>
  </div>

  <%= form.submit "Create chain", class: "w-full rounded-xl bg-indigo-500 px-4 py-3 text-sm font-semibold text-slate-950 shadow-sm hover:bg-indigo-400 focus:outline-none focus:ring-2 focus:ring-indigo-300 focus:ring-offset-2 focus:ring-offset-slate-950" %>
<% end %>
