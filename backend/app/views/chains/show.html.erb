<% content_for :title, "#{@chain.name} · #{@chain.space.name}" %>

<section class="space-y-10">
  <header class="rounded-3xl border border-white/10 bg-gradient-to-br from-slate-900/80 via-slate-900/40 to-slate-950/90 p-8">
    <div class="flex flex-col gap-6 lg:flex-row lg:items-start lg:justify-between">
      <div>
        <p class="text-xs uppercase tracking-[0.35em] text-indigo-200/70">Chain</p>
        <h1 class="mt-2 text-4xl font-semibold text-white"><%= @chain.name %></h1>
        <p class="mt-3 text-sm leading-6 text-slate-300/90">
          <%= @chain.description.presence || "Use this chain to track a specific ritual, project, or relationship. Notes captured here fuel future summaries." %>
        </p>
        <% if @chain.purpose.present? %>
          <div class="mt-4 rounded-2xl border border-indigo-400/20 bg-indigo-500/10 p-4 text-sm text-indigo-100/80">
            <p class="text-xs uppercase tracking-[0.3em] text-indigo-200/80">Purpose</p>
            <p class="mt-1"><%= @chain.purpose %></p>
          </div>
        <% end %>
      </div>
      <div class="grid w-full max-w-xs grid-cols-2 gap-4 rounded-2xl border border-white/10 bg-slate-950/80 p-4 text-center text-xs text-slate-300/70">
        <div>
          <p class="uppercase tracking-[0.35em] text-slate-500">Notes</p>
          <p class="mt-2 text-2xl font-semibold text-white"><%= @chain.links.count %></p>
        </div>
        <div>
          <p class="uppercase tracking-[0.35em] text-slate-500">Last update</p>
          <% if (last = @chain.last_activity_on) %>
            <p class="mt-2 text-base font-semibold text-white"><%= last.strftime("%b %d") %></p>
          <% else %>
            <p class="mt-2 text-base font-semibold text-white">–</p>
          <% end %>
        </div>
      </div>
    </div>
  </header>

  <div class="grid gap-8 lg:grid-cols-[minmax(0,420px)_minmax(0,1fr)]">
    <aside class="space-y-5">
      <div class="rounded-2xl border border-white/10 bg-slate-900/70 p-5">
        <p class="text-xs uppercase tracking-[0.35em] text-indigo-200/70">Log a note</p>
        <h2 class="mt-2 text-xl font-semibold text-white">Add a link to this chain</h2>
        <p class="mt-2 text-sm text-slate-400">
          Capture the punchline, add tags, mention collaborators, and connect to other chains. We’ll use this structure to unlock AI insights next.
        </p>
        <div class="mt-6">
          <%= render "links/form", chain: @chain, link: @link %>
        </div>
      </div>

      <div class="rounded-2xl border border-white/10 bg-slate-900/70 p-5 text-sm text-slate-400">
        <p class="font-semibold text-slate-200">Structure as you go</p>
        <ul class="mt-3 list-disc space-y-2 pl-4">
          <li>Use tags for themes like Leadership, Revenue, or Product Quality.</li>
          <li>Mentions help surface who is involved when summarizing later.</li>
          <li>Linked chains weave context across spaces for deeper insights.</li>
        </ul>
      </div>
    </aside>

    <div class="space-y-5">
      <div class="flex flex-col gap-4 rounded-2xl border border-white/10 bg-slate-900/70 p-5">
        <div class="flex flex-col gap-2 md:flex-row md:items-center md:justify-between">
          <div>
            <p class="text-xs uppercase tracking-[0.35em] text-indigo-200/70">Timeline</p>
            <h2 class="mt-2 text-2xl font-semibold text-white">Notes in this chain</h2>
          </div>
          <div class="flex flex-wrap gap-2 text-xs">
            <% Link.categories.keys.each do |category| %>
              <% active = @filters.category == category %>
              <%= link_to category.titleize, chain_path(@chain, request.query_parameters.merge(category: active ? nil : category)), class: [
                    "rounded-full border px-3 py-1 font-semibold transition",
                    active ? "border-indigo-400/40 bg-indigo-500/20 text-indigo-100" : "border-white/10 text-slate-300/80 hover:border-indigo-400/40 hover:text-white"
                  ].join(" ") %>
            <% end %>
            <%= link_to "Clear", chain_path(@chain), class: "rounded-full border border-white/10 px-3 py-1 font-semibold text-slate-400 hover:border-indigo-400/40 hover:text-white" %>
          </div>
        </div>

        <%= form_with url: chain_path(@chain), method: :get, local: true, class: "grid gap-3 md:grid-cols-3" do |form| %>
          <%= form.hidden_field :category, value: @filters.category if @filters.category.present? %>
          <div>
            <%= form.label :tag, "Filter by tag", class: "text-xs font-semibold uppercase tracking-wide text-slate-400" %>
            <%= form.text_field :tag, value: @filters.tag, placeholder: "Leadership", class: "mt-1 block w-full rounded-xl border border-white/10 bg-slate-950/60 px-3 py-2 text-sm text-white placeholder:text-slate-500 focus:border-indigo-400 focus:outline-none focus:ring-2 focus:ring-indigo-400/40" %>
          </div>
          <div>
            <%= form.label :mention, "Filter by mention", class: "text-xs font-semibold uppercase tracking-wide text-slate-400" %>
            <%= form.text_field :mention, value: @filters.mention, placeholder: "Andrew Chen", class: "mt-1 block w-full rounded-xl border border-white/10 bg-slate-950/60 px-3 py-2 text-sm text-white placeholder:text-slate-500 focus:border-indigo-400 focus:outline-none focus:ring-2 focus:ring-indigo-400/40" %>
          </div>
          <div class="flex items-end">
            <%= form.submit "Apply", class: "w-full rounded-xl bg-indigo-500 px-4 py-2 text-sm font-semibold text-slate-950 shadow-sm hover:bg-indigo-400" %>
          </div>
        <% end %>
      </div>

      <div id="links_timeline" class="space-y-4">
        <% @links.each do |link| %>
          <%= render "links/card", link: link %>
        <% end %>

        <% if @links.empty? %>
          <div class="rounded-2xl border border-dashed border-slate-700/80 bg-slate-900/50 p-8 text-center text-sm text-slate-400">
            No notes yet. Capture your first link using the form on the left to start building momentum.
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
