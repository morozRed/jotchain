<% content_for :title, "Dashboard - JotChain" %>

<div id="flash-container"></div>

<div class="max-w-7xl mx-auto px-2 sm:px-4 lg:px-8 py-4 sm:py-8">
  <div class="grid grid-cols-1 xl:grid-cols-3 gap-4 sm:gap-6">
    <!-- Left Column - Main Content -->
    <div class="xl:col-span-2 space-y-4 sm:space-y-8">
      <!-- Previous Entry -->
      <% if @yesterday_entry %>
        <div class="bg-gradient-to-br from-white to-orange-50/30 rounded-lg shadow-sm border border-accent/20 p-6" data-controller="collapsible">
          <div class="flex justify-between items-start mb-4">
            <div>
              <h3 class="text-lg font-bold text-text-primary mb-2">
                <span class="inline-block animate-pulse mr-2">üëã</span>
                Hey there, here's your context to get going!
              </h3>
              <p class="text-sm text-accent font-medium">From your last entry on <%= @yesterday_entry.entry_date.strftime("%B %d, %Y") %></p>
            </div>
            <button data-action="click->collapsible#toggle"
                    data-collapsible-target="toggle"
                    class="p-1 rounded-lg hover:bg-accent/10 transition-all"
                    title="Show more">
              <svg class="w-5 h-5 text-accent transform rotate-transition" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
          </div>

          <div data-collapsible-target="content" class="space-y-4 overflow-hidden line-clamp-3">
            <% if @yesterday_entry.content.present? %>
              <div>
                <h4 class="text-xs font-semibold text-text-tertiary uppercase tracking-wider mb-2">What you worked on</h4>
                <div class="text-sm text-text-secondary leading-relaxed">
                  <%= render_markdown(@yesterday_entry.content).html_safe %>
                </div>
              </div>
            <% end %>

            <% if @yesterday_entry.next_actions.present? %>
              <div>
                <h4 class="text-xs font-semibold text-text-tertiary uppercase tracking-wider mb-2">Next actions</h4>
                <div class="text-sm text-text-secondary leading-relaxed">
                  <%= render_markdown(@yesterday_entry.next_actions).html_safe %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
      <!-- Journal Entry Card -->
      <div class="bg-white rounded-lg shadow-sm border border-border relative" data-controller="tooltip">
        <!-- First-time User Tooltip Bubble -->
        <div data-tooltip-target="bubble" class="hidden absolute -top-2 left-1/2 transform -translate-x-1/2 z-10">
          <div class="bg-accent text-white px-4 py-3 rounded-lg shadow-lg relative max-w-xs">
            <div class="flex items-start gap-3">
              <div class="flex-1">
                <p class="text-sm font-medium mb-1">Welcome to JotChain!</p>
                <p class="text-xs opacity-90">Start here! Write about what you did today in the form below. Switch between tabs to track what's next and celebrate your wins.</p>
              </div>
              <button data-action="click->tooltip#dismiss" class="text-white hover:text-gray-200 transition-colors">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
              </button>
            </div>
            <!-- Arrow pointing down -->
            <div class="absolute -bottom-2 left-1/2 transform -translate-x-1/2">
              <div class="w-0 h-0 border-l-[8px] border-l-transparent border-r-[8px] border-r-transparent border-t-[8px] border-t-accent"></div>
            </div>
          </div>
        </div>

        <div class="p-6">
          <h2 class="text-lg font-semibold text-text-primary mb-4">Daily Entry</h2>

          <!-- Tab Navigation -->
          <div data-controller="tabs">
            <%= form_with model: @entry, url: @entry.persisted? ? entry_path(@entry) : entries_path,
                          data: { controller: "autosave", turbo: true }, class: "space-y-4" do |form| %>
              <%= form.hidden_field :entry_date, value: @today %>
              <div class="border-b border-border mb-6">
                <nav class="-mb-px flex space-x-8" role="tablist" aria-label="Entry tabs">
                  <button type="button"
                          id="today-tab"
                          class="py-2 px-1 border-b-2 border-accent text-accent font-medium text-sm transition-colors"
                          data-tabs-target="tab"
                          data-action="click->tabs#switch"
                          role="tab"
                          aria-selected="true"
                          aria-controls="today-panel">
                    Today
                  </button>
                  <button type="button"
                          id="next-tab"
                          class="py-2 px-1 border-b-2 border-transparent text-text-secondary font-medium text-sm transition-colors"
                          data-tabs-target="tab"
                          data-action="click->tabs#switch"
                          role="tab"
                          aria-selected="false"
                          aria-controls="next-panel">
                    Next
                  </button>
                  <button type="button"
                          id="win-tab"
                          class="py-2 px-1 border-b-2 border-transparent text-text-secondary font-medium text-sm transition-colors"
                          data-tabs-target="tab"
                          data-action="click->tabs#switch"
                          role="tab"
                          aria-selected="false"
                          aria-controls="win-panel">
                    Win
                  </button>
                </nav>
              </div>

              <!-- Tab Panels -->
              <div class="mt-6">
                <!-- Today Panel -->
                <div data-tabs-target="panel" role="tabpanel" id="today-panel" aria-labelledby="today-tab">
                  <label for="entry_content" class="block text-sm font-medium text-text-primary mb-2">What did you work on today?</label>
                  <div data-controller="lexxy-editor" data-lexxy-editor-placeholder-value="Describe what you accomplished, learned, or worked on...">
                    <%= form.hidden_field :content,
                        id: "entry_content",
                        data: {
                          lexxy_editor_target: "input",
                          autosave_target: "content"
                        } %>
                    <div data-lexxy-editor-target="editor"
                         class="lexxy-editor w-full px-4 py-3 border border-border rounded-lg focus:outline-none focus:ring-2 focus:ring-accent focus:border-accent min-h-[150px] text-text-primary">
                    </div>
                  </div>
                </div>

                <!-- Next Panel -->
                <div data-tabs-target="panel" class="hidden" role="tabpanel" id="next-panel" aria-labelledby="next-tab">
                  <label for="entry_next_actions" class="block text-sm font-medium text-text-primary mb-2">What's next?</label>
                  <div data-controller="lexxy-editor" data-lexxy-editor-placeholder-value="What will you focus on tomorrow? List your next actions...">
                    <%= form.hidden_field :next_actions,
                        id: "entry_next_actions",
                        data: {
                          lexxy_editor_target: "input",
                          autosave_target: "next_actions"
                        } %>
                    <div data-lexxy-editor-target="editor"
                         class="lexxy-editor w-full px-4 py-3 border border-border rounded-lg focus:outline-none focus:ring-2 focus:ring-accent focus:border-accent min-h-[150px] text-text-primary">
                    </div>
                  </div>
                </div>

                <!-- Win Panel -->
                <div data-tabs-target="panel" class="hidden" role="tabpanel" id="win-panel" aria-labelledby="win-tab">
                  <label for="entry_win_description" class="block text-sm font-medium text-text-primary mb-2">What did you win at today? üèÜ</label>
                  <div data-controller="lexxy-editor" data-lexxy-editor-placeholder-value="Describe your achievement and why it matters...">
                    <%= form.hidden_field :win_description,
                        id: "entry_win_description",
                        data: {
                          lexxy_editor_target: "input",
                          autosave_target: "win_description"
                        } %>
                    <div data-lexxy-editor-target="editor"
                         class="lexxy-editor w-full px-4 py-3 border border-border rounded-lg focus:outline-none focus:ring-2 focus:ring-accent focus:border-accent min-h-[150px] text-text-primary">
                    </div>
                  </div>
                </div>
              </div>

            <!-- Submit Button -->
            <div class="flex justify-between items-center">
              <!-- Last Updated Status -->
              <div id="autosave-status" class="flex items-center gap-1.5">
                <svg class="w-3 h-3 text-text-tertiary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div class="text-[10px] text-text-tertiary">
                  <span class="opacity-60" data-autosave-target="status">Auto-save enabled</span>
                </div>
              </div>
              <%= form.submit "Save Entry", class: "px-6 py-2 bg-accent text-white font-medium rounded-lg hover:bg-accent-hover transition-colors" %>
            </div>
          <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Column - Sidebar -->
    <div class="space-y-4 sm:space-y-8">
      <!-- Streak -->
      <div class="bg-white rounded-lg shadow-sm border border-border p-6">
        <h3 class="text-base font-semibold text-text-primary mb-4">Streak</h3>

        <div class="grid grid-cols-2 gap-4 mb-8">
          <div>
            <p class="text-sm text-text-secondary">Current Streak</p>
            <p class="text-2xl font-bold text-text-primary"><%= current_user.current_streak %></p>
          </div>
          <div>
            <p class="text-sm text-text-secondary">Longest Streak</p>
            <p class="text-2xl font-bold text-text-primary"><%= current_user.longest_streak %></p>
          </div>
        </div>

        <!-- Calendar Heatmap -->
        <div class="space-y-2">
          <!-- Calendar Grid with week day labels -->
          <div class="flex gap-2">
            <!-- Week day labels (vertical, aligned with rows) -->
            <div class="flex flex-col gap-1 text-xs text-text-tertiary">
              <div class="h-5 flex items-center justify-end pr-1">S</div>
              <div class="h-5 flex items-center justify-end pr-1">M</div>
              <div class="h-5 flex items-center justify-end pr-1">T</div>
              <div class="h-5 flex items-center justify-end pr-1">W</div>
              <div class="h-5 flex items-center justify-end pr-1">T</div>
              <div class="h-5 flex items-center justify-end pr-1">F</div>
              <div class="h-5 flex items-center justify-end pr-1">S</div>
            </div>

            <!-- Calendar Grid -->
            <div aria-label="Contribution calendar showing daily activity">
              <%= render StreakGridComponent.new(user: current_user) %>
            </div>
          </div>

          <!-- Legend -->
          <div class="flex items-center gap-2 text-xs text-text-tertiary mt-3">
            <span>Less</span>
            <div class="flex gap-1">
              <div class="w-5 h-5 bg-gray-100 rounded-sm"></div>
              <div class="w-5 h-5 bg-accent opacity-25 rounded-sm"></div>
              <div class="w-5 h-5 bg-accent opacity-50 rounded-sm"></div>
              <div class="w-5 h-5 bg-accent opacity-75 rounded-sm"></div>
              <div class="w-5 h-5 bg-accent rounded-sm"></div>
            </div>
            <span>More</span>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
