<% content_for :title, "Dashboard - JotChain" %>

<div id="flash-container"></div>

<div class="max-w-7xl mx-auto px-2 sm:px-4 lg:px-8 py-4 sm:py-8">
  <div class="grid grid-cols-1 xl:grid-cols-3 gap-4 sm:gap-6">
    <!-- Left Column - Main Content -->
    <div class="xl:col-span-2 space-y-4 sm:space-y-8">
      <!-- Previous Entry -->
      <% if @yesterday_entry %>
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
          <div class="flex items-center gap-2 mb-5">
            <%= heroicon "arrow-path", options: { class: "w-6 h-6 text-blue-600" } %>
            <h2 class="text-lg font-semibold text-gray-900">Continue from Yesterday</h2>
          </div>

          <div class="space-y-5">
            <% if @yesterday_entry.content.present? %>
              <div class="flex gap-3">
                <div class="flex-shrink-0">
                  <div class="w-7 h-7 bg-green-50 rounded-lg flex items-center justify-center">
                    <%= heroicon "calendar", variant: :solid, options: { class: "w-4 h-4 text-green-600" } %>
                  </div>
                </div>
                <div class="flex-1">
                  <h3 class="text-sm font-semibold text-gray-900 mb-1.5">What We Did</h3>
                  <div class="text-sm text-gray-600 leading-relaxed">
                    <%= render_markdown(@yesterday_entry.content).html_safe %>
                  </div>
                </div>
              </div>
            <% end %>

            <% if @yesterday_entry.next_actions.present? %>
              <div class="flex gap-3">
                <div class="flex-shrink-0">
                  <div class="w-7 h-7 bg-blue-50 rounded-lg flex items-center justify-center">
                    <%= heroicon "adjustments-vertical", variant: :solid, options: { class: "w-4 h-4 text-blue-600" } %>
                  </div>
                </div>
                <div class="flex-1">
                  <h3 class="text-sm font-semibold text-gray-900 mb-1.5">What We Planned</h3>
                  <div class="text-sm text-gray-600 leading-relaxed">
                    <%= render_markdown(@yesterday_entry.next_actions).html_safe %>
                  </div>
                </div>
              </div>
            <% end %>

            <% if @yesterday_entry.win_description.present? %>
              <div class="flex gap-3">
                <div class="flex-shrink-0">
                  <div class="w-7 h-7 bg-yellow-50 rounded-lg flex items-center justify-center">
                    <%= heroicon "star", variant: :solid, options: { class: "w-4 h-4 text-yellow-500" } %>
                  </div>
                </div>
                <div class="flex-1">
                  <h3 class="text-sm font-semibold text-gray-900 mb-1.5">Yesterday's Win</h3>
                  <div class="text-sm text-gray-600 leading-relaxed">
                    <%= render_markdown(@yesterday_entry.win_description).html_safe %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
      <!-- Journal Entry Card -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200" data-controller="tooltip">
        <!-- First-time User Tooltip Bubble -->
        <div data-tooltip-target="bubble" class="hidden absolute -top-2 left-1/2 transform -translate-x-1/2 z-10">
          <div class="bg-accent text-white px-4 py-3 rounded-lg shadow-lg relative max-w-xs">
            <div class="flex items-start gap-3">
              <div class="flex-1">
                <p class="text-sm font-medium mb-1">Welcome to JotChain!</p>
                <p class="text-xs opacity-90">Start here! Write about what you did today in the form below. Switch between sections to track what's next and celebrate your wins.</p>
              </div>
              <button data-action="click->tooltip#dismiss" class="text-white hover:text-gray-200 transition-colors">
                <%= heroicon "x-mark", options: { class: "w-4 h-4" } %>
              </button>
            </div>
            <!-- Arrow pointing down -->
            <div class="absolute -bottom-2 left-1/2 transform -translate-x-1/2">
              <div class="w-0 h-0 border-l-[8px] border-l-transparent border-r-[8px] border-r-transparent border-t-[8px] border-t-accent"></div>
            </div>
          </div>
        </div>

        <!-- Card Header -->
        <div class="px-6 pt-6 pb-4">
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-2">
              <div class="p-1.5 bg-accent/10 rounded-lg">
                <%= heroicon "calendar", options: { class: "w-4 h-4 text-accent" } %>
              </div>
              <div>
                <h3 class="text-sm font-medium text-gray-900">Today's Entry</h3>
                <p class="text-xs text-gray-500"><%= @today.strftime("%A, %b %d") %></p>
              </div>
            </div>
            <div id="autosave-badge" class="hidden">
              <span class="text-xs bg-green-50 text-green-700 border border-green-200 px-2 py-0.5 rounded-full">
                Saved
              </span>
            </div>
          </div>
        </div>

        <!-- Card Content -->
        <div class="px-6 pb-6 pt-0">
          <div data-controller="tabs unified-entry">
            <%= form_with model: @entry, url: @entry.persisted? ? entry_path(@entry) : entries_path,
                          data: { turbo: true } do |form| %>
              <%= form.hidden_field :entry_date, value: @today %>

              <!-- Hidden fields for all three content types -->
              <%= form.hidden_field :content,
                  id: "entry_content",
                  data: {
                    unified_entry_target: "contentField"
                  } %>
              <%= form.hidden_field :next_actions,
                  id: "entry_next_actions",
                  data: {
                    unified_entry_target: "nextActionsField"
                  } %>
              <%= form.hidden_field :win_description,
                  id: "entry_win_description",
                  data: {
                    unified_entry_target: "winDescriptionField"
                  } %>

              <!-- Container that looks like a textarea -->
              <div class="border border-gray-200 rounded-xl bg-white focus-within:ring-2 focus-within:ring-accent/20 focus-within:border-accent transition-all">

                <!-- Top section with tabs -->
                <div class="p-3 pb-1">
                  <div class="flex gap-1">
                    <button type="button"
                            id="today-tab"
                            class="px-3 py-1.5 text-xs font-medium rounded-lg bg-accent text-white shadow-sm transition-all"
                            data-tabs-target="tab"
                            data-action="click->tabs#switch click->unified-entry#switchTab"
                            data-tab-name="today"
                            role="tab"
                            aria-selected="true">
                      Done Today
                    </button>
                    <button type="button"
                            id="next-tab"
                            class="px-3 py-1.5 text-xs font-medium rounded-lg bg-gray-100 text-gray-600 hover:bg-gray-200 transition-all"
                            data-tabs-target="tab"
                            data-action="click->tabs#switch click->unified-entry#switchTab"
                            data-tab-name="next"
                            role="tab"
                            aria-selected="false">
                      Next Up
                    </button>
                    <button type="button"
                            id="win-tab"
                            class="px-3 py-1.5 text-xs font-medium rounded-lg bg-gray-100 text-gray-600 hover:bg-gray-200 transition-all"
                            data-tabs-target="tab"
                            data-action="click->tabs#switch click->unified-entry#switchTab"
                            data-tab-name="wins"
                            role="tab"
                            aria-selected="false">
                      Wins
                    </button>
                  </div>
                </div>

                <!-- Middle section with transparent textarea -->
                <div class="px-3 py-2">
                  <textarea
                    data-unified-entry-target="editor"
                    placeholder="What did you accomplish today? Describe what you completed, learned, or made progress on..."
                    class="w-full h-[160px] border-0 outline-none bg-transparent text-text-primary resize-none placeholder-gray-400">
                  </textarea>
                </div>

                <!-- Bottom toolbar -->
                <div class="p-3 pt-1 flex justify-between items-center">
                  <!-- Keyboard shortcut hint on left -->
                  <div class="text-xs text-gray-400">
                  </div>

                  <!-- Save button and keyboard shortcut on right -->
                  <div class="flex items-center gap-2">
                    <button type="submit"
                            class="bg-accent text-white hover:bg-accent/90 h-8 px-3 text-xs font-medium shadow-sm rounded-lg flex items-center gap-1 transition-colors">
                      Save
                    </button>
                  </div>
                </div>

              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Column - Sidebar -->
    <div class="space-y-4 sm:space-y-8">
      <!-- Streak -->
      <div class="bg-white rounded-lg shadow-sm border border-border p-6">
        <h3 class="text-base font-semibold text-text-primary mb-4">Streak</h3>

        <div class="grid grid-cols-2 gap-4 mb-8">
          <div>
            <p class="text-sm text-text-secondary">Current Streak</p>
            <p class="text-2xl font-bold text-text-primary"><%= current_user.current_streak %></p>
          </div>
          <div>
            <p class="text-sm text-text-secondary">Longest Streak</p>
            <p class="text-2xl font-bold text-text-primary"><%= current_user.longest_streak %></p>
          </div>
        </div>

        <!-- Calendar Heatmap -->
        <div class="space-y-2">
          <!-- Calendar Grid with week day labels -->
          <div class="flex gap-2">
            <!-- Week day labels (vertical, aligned with rows) -->
            <div class="flex flex-col gap-1 text-xs text-text-tertiary">
              <div class="h-5 flex items-center justify-end pr-1">S</div>
              <div class="h-5 flex items-center justify-end pr-1">M</div>
              <div class="h-5 flex items-center justify-end pr-1">T</div>
              <div class="h-5 flex items-center justify-end pr-1">W</div>
              <div class="h-5 flex items-center justify-end pr-1">T</div>
              <div class="h-5 flex items-center justify-end pr-1">F</div>
              <div class="h-5 flex items-center justify-end pr-1">S</div>
            </div>

            <!-- Calendar Grid -->
            <div aria-label="Contribution calendar showing daily activity">
              <%= render StreakGridComponent.new(user: current_user) %>
            </div>
          </div>

          <!-- Legend -->
          <div class="flex items-center gap-2 text-xs text-text-tertiary mt-3">
            <span>Less</span>
            <div class="flex gap-1">
              <div class="w-5 h-5 bg-gray-100 rounded-sm"></div>
              <div class="w-5 h-5 bg-accent opacity-25 rounded-sm"></div>
              <div class="w-5 h-5 bg-accent opacity-50 rounded-sm"></div>
              <div class="w-5 h-5 bg-accent opacity-75 rounded-sm"></div>
              <div class="w-5 h-5 bg-accent rounded-sm"></div>
            </div>
            <span>More</span>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
