<% content_for :title, "Settings - JotChain" %>

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <h1 class="text-2xl font-bold text-text-primary mb-8">Account Settings</h1>

  <!-- Tabs Navigation -->
  <div data-controller="tabs" data-tabs-active-tab-value="<%= @active_tab || 'profile' %>">
    <div class="border-b border-border mb-6">
      <nav class="-mb-px flex space-x-8" aria-label="Tabs">
        <button
          data-tabs-target="tab"
          data-action="click->tabs#switch"
          class="<%= @active_tab == 'profile' ? 'border-accent text-accent' : 'border-transparent text-text-secondary' %> hover:text-text-primary hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm cursor-pointer transition-colors"
          aria-selected="<%= @active_tab == 'profile' ? 'true' : 'false' %>"
        >
          Profile
        </button>
        <button
          data-tabs-target="tab"
          data-action="click->tabs#switch"
          class="<%= @active_tab == 'password' ? 'border-accent text-accent' : 'border-transparent text-text-secondary' %> hover:text-text-primary hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm cursor-pointer transition-colors"
          aria-selected="<%= @active_tab == 'password' ? 'true' : 'false' %>"
        >
          Password
        </button>
        <button
          data-tabs-target="tab"
          data-action="click->tabs#switch"
          class="<%= @active_tab == 'billing' ? 'border-accent text-accent' : 'border-transparent text-text-secondary' %> hover:text-text-primary hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm cursor-pointer transition-colors"
          aria-selected="<%= @active_tab == 'billing' ? 'true' : 'false' %>"
        >
          Billing
        </button>
        <button
          data-tabs-target="tab"
          data-action="click->tabs#switch"
          class="<%= @active_tab == 'danger-zone' ? 'border-accent text-accent' : 'border-transparent text-text-secondary' %> hover:text-text-primary hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm cursor-pointer transition-colors"
          aria-selected="<%= @active_tab == 'danger-zone' ? 'true' : 'false' %>"
        >
          Danger Zone
        </button>
      </nav>
    </div>

    <!-- Profile Tab Panel -->
    <div data-tabs-target="panel" id="profile-panel" class="<%= @active_tab == 'profile' ? '' : 'hidden' %>">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
        <div class="card">
          <h2 class="text-lg font-semibold text-text-primary mb-4">Profile Information</h2>

          <% if resource.errors.any? && !resource.errors.added?(:current_password, :blank) %>
            <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
              <h3 class="text-sm font-medium text-red-800 mb-2">Please correct the following errors:</h3>
              <ul class="text-sm text-red-700 list-disc list-inside">
                <% resource.errors.full_messages.each do |message| %>
                  <% unless message.include?("Current password") %>
                    <li><%= message %></li>
                  <% end %>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="space-y-4">
            <div>
              <%= f.label :email, class: "block text-sm font-medium text-text-primary mb-2" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field" %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div class="p-3 bg-amber-50 border border-amber-200 rounded-lg">
                <p class="text-sm text-amber-800">
                  Currently waiting confirmation for: <strong><%= resource.unconfirmed_email %></strong>
                </p>
              </div>
            <% end %>

            <div>
              <%= f.label :current_password, class: "block text-sm font-medium text-text-primary mb-2" %>
              <%= f.password_field :current_password, autocomplete: "current-password", class: "input-field" %>
              <p class="mt-1 text-xs text-text-secondary">We need your current password to confirm your changes</p>
            </div>
          </div>
        </div>

        <!-- Actions for Profile tab -->
        <div class="flex items-center gap-4 mt-6">
          <%= f.submit "Update Profile", class: "btn-primary" %>
          <%= link_to "Cancel", root_path, class: "btn-secondary" %>
        </div>
      <% end %>
    </div>

    <!-- Password Tab Panel -->
    <div data-tabs-target="panel" id="password-panel" class="<%= @active_tab == 'password' ? '' : 'hidden' %>">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
        <div class="card">
          <h2 class="text-lg font-semibold text-text-primary mb-4">Change Password</h2>
          <p class="text-sm text-text-secondary mb-4">Leave blank if you don't want to change it</p>

          <% if resource.errors.any? && (resource.errors.added?(:current_password, :blank) || resource.errors.added?(:password, :blank) || resource.errors.added?(:password_confirmation, :blank)) %>
            <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
              <h3 class="text-sm font-medium text-red-800 mb-2">Please correct the following errors:</h3>
              <ul class="text-sm text-red-700 list-disc list-inside">
                <% resource.errors.full_messages.each do |message| %>
                  <% if message.include?("Current password") || message.include?("Password") %>
                    <li><%= message %></li>
                  <% end %>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="space-y-4">
            <div>
              <%= f.label :password, "New Password", class: "block text-sm font-medium text-text-primary mb-2" %>
              <%= f.password_field :password, autocomplete: "new-password", class: "input-field" %>
              <% if @minimum_password_length %>
                <p class="mt-1 text-xs text-text-secondary">Minimum <%= @minimum_password_length %> characters</p>
              <% end %>
            </div>

            <div>
              <%= f.label :password_confirmation, "Confirm New Password", class: "block text-sm font-medium text-text-primary mb-2" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-field" %>
            </div>

            <div>
              <%= f.label :current_password, class: "block text-sm font-medium text-text-primary mb-2" %>
              <%= f.password_field :current_password, autocomplete: "current-password", class: "input-field" %>
              <p class="mt-1 text-xs text-text-secondary">We need your current password to confirm your changes</p>
            </div>
          </div>
        </div>

        <!-- Actions for Password tab -->
        <div class="flex items-center gap-4 mt-6">
          <%= f.submit "Update Password", class: "btn-primary" %>
          <%= link_to "Cancel", root_path, class: "btn-secondary" %>
        </div>
      <% end %>
    </div>

    <!-- Billing Tab Panel -->
    <div data-tabs-target="panel" id="billing-panel" class="<%= @active_tab == 'billing' ? '' : 'hidden' %>">
      <turbo-frame id="billing-content" src="<%= billing_path %>">
        <div class="card">
          <div class="flex items-center justify-center py-8">
            <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-accent"></div>
          </div>
        </div>
      </turbo-frame>
    </div>

    <!-- Danger Zone Tab Panel -->
    <div data-tabs-target="panel" id="danger-zone-panel" class="<%= @active_tab == 'danger-zone' ? '' : 'hidden' %>">
      <div class="card border-red-200 bg-red-50">
        <h2 class="text-lg font-semibold text-red-800 mb-4">Danger Zone</h2>
        <p class="text-sm text-red-700 mb-4">Once you delete your account, there is no going back. Please be certain.</p>

        <%= button_to "Delete Account",
            registration_path(resource_name),
            method: :delete,
            data: {
              turbo_confirm: "Are you absolutely sure? This action cannot be undone.",
              turbo_method: :delete
            },
            class: "px-4 py-2 bg-red-600 hover:bg-red-700 text-white font-medium rounded-lg transition-colors" %>
      </div>
    </div>
  </div>
</div>