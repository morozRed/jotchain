<div class="min-h-screen bg-background flex items-center justify-center px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <!-- Logo and Title -->
    <div class="text-center">
      <div class="flex justify-center mb-4">
        <svg class="w-12 h-12 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
        </svg>
      </div>
      <h2 class="text-3xl font-bold text-text-primary">Welcome back</h2>
      <p class="mt-2 text-sm text-text-secondary">Sign in to your JotChain account</p>
    </div>

    <!-- Form Card -->
    <div class="bg-white rounded-lg shadow-sm border border-border p-8">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-text-primary mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "w-full px-4 py-2 border border-border rounded-lg focus:outline-none focus:ring-2 focus:ring-accent focus:border-accent transition-colors",
              placeholder: "Enter your email" %>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium text-text-primary mb-2" %>
          <%= f.password_field :password, autocomplete: "current-password",
              class: "w-full px-4 py-2 border border-border rounded-lg focus:outline-none focus:ring-2 focus:ring-accent focus:border-accent transition-colors",
              placeholder: "Enter your password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <%= f.check_box :remember_me, class: "h-4 w-4 text-accent focus:ring-accent border-gray-300 rounded" %>
              <%= f.label :remember_me, class: "ml-2 block text-sm text-text-secondary" %>
            </div>
            <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-sm text-accent hover:text-accent-hover" %>
          </div>
        <% end %>

        <div>
          <%= f.submit "Sign in", class: "w-full px-6 py-3 bg-accent text-white font-medium rounded-lg hover:bg-accent-hover transition-colors cursor-pointer" %>
        </div>
      <% end %>

      <div class="mt-6 text-center">
        <p class="text-sm text-text-secondary">
          Don't have an account?
          <%= link_to "Sign up", new_registration_path(resource_name), class: "text-accent hover:text-accent-hover font-medium" %>
        </p>
      </div>
    </div>
  </div>
</div>
