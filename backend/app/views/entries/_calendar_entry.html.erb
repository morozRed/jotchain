<div class="space-y-3">
  <div class="flex items-center justify-between">
    <h4 class="font-medium text-text-primary">
      <%= entry.entry_date.strftime('%A, %B %d, %Y') %>
    </h4>
    <% if entry.is_win? %>
      <div class="flex items-center gap-1">
        <%= heroicon "star", variant: :solid, options: { class: "h-3 w-3 text-accent" } %>
        <span class="text-xs text-accent font-medium">Win</span>
      </div>
    <% end %>
  </div>

  <% if entry.content.present? %>
    <div>
      <h5 class="text-xs font-medium text-text-secondary mb-1">Done Today</h5>
      <div class="text-sm text-text-primary leading-relaxed">
        <%= truncate(strip_tags(render_markdown(entry.content)), length: 200) %>
      </div>
    </div>
  <% end %>

  <% if entry.next_actions.present? %>
    <div>
      <h5 class="text-xs font-medium text-text-secondary mb-1">Next Up</h5>
      <div class="text-sm text-text-primary leading-relaxed">
        <%= truncate(strip_tags(render_markdown(entry.next_actions)), length: 200) %>
      </div>
    </div>
  <% end %>

  <% if entry.win_description.present? %>
    <div>
      <h5 class="text-xs font-medium text-text-secondary mb-1 flex items-center gap-1">
        <%= heroicon "star", variant: :solid, options: { class: "h-3 w-3 text-accent" } %>
        Professional Win
      </h5>
      <div class="text-sm text-text-primary leading-relaxed">
        <%= truncate(strip_tags(render_markdown(entry.win_description)), length: 200) %>
      </div>
    </div>
  <% end %>

  <div class="pt-2 border-t border-border">
    <%= link_to entry_path(entry), class: "text-xs text-accent hover:text-accent-hover transition-colors" do %>
      View full entry â†’
    <% end %>
  </div>
</div>
