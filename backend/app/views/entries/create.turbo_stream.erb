<%# Update the autosave status to show saved %>
<%= turbo_stream.replace "autosave-status" do %>
  <div id="autosave-status" class="flex items-center gap-2">
    <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
    </svg>
    <div class="text-xs text-text-tertiary">
      <span class="opacity-70">Entry created successfully</span>
    </div>
  </div>
<% end %>

<%# Update a small saved badge on the dashboard if present %>
<%= turbo_stream.replace "autosave-badge" do %>
  <div id="autosave-badge">
    <span class="text-xs bg-green-50 text-green-700 border border-green-200 px-2 py-0.5 rounded-full">Saved</span>
  </div>
<% end %>


<%# Show success notification %>
<%= turbo_stream.append "flash-container" do %>
  <div class="fixed bottom-4 right-4 z-50 bg-green-50 border border-green-200 rounded-lg shadow-sm p-3 flex items-center gap-2"
       data-turbo-temporary="true"
       data-controller="flash-message"
       data-flash-message-auto-dismiss-value="true">
    <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
    </svg>
    <span class="text-sm text-green-800">Entry created successfully</span>
  </div>
<% end %>