<% content_for :title, "Entry - #{@entry.entry_date.strftime('%B %d, %Y')} - JotChain" %>

<div class="max-w-4xl mx-auto">
  <!-- Header with navigation -->
  <div class="mb-6">
    <div class="flex items-center justify-between mb-4">
      <%= link_to entries_path, class: "text-text-secondary hover:text-text-primary transition-colors" do %>
        <svg class="w-5 h-5 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to Entries
      <% end %>

      <div class="flex gap-2">
        <% if @entry.previous_entry %>
          <%= link_to entry_path(@entry.previous_entry), class: "btn-secondary text-sm" do %>
            <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Previous
          <% end %>
        <% end %>
        <% if @entry.next_entry %>
          <%= link_to entry_path(@entry.next_entry), class: "btn-secondary text-sm" do %>
            Next
            <svg class="w-4 h-4 inline ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="flex items-start justify-between">
      <div>
        <h1 class="text-2xl font-bold text-text-primary flex items-center gap-3">
          <%= @entry.entry_date.strftime("%B %d, %Y") %>
          <% if @entry.is_win? %>
            <% case @entry.win_level %>
            <% when 'minor' %>
              <span class="win-badge-minor text-sm">Minor Win</span>
            <% when 'major' %>
              <span class="win-badge-major text-sm">Major Win</span>
            <% when 'career_defining' %>
              <span class="win-badge-career text-sm">Career Defining</span>
            <% end %>
          <% end %>
        </h1>
        <p class="text-text-secondary text-sm"><%= @entry.entry_date.strftime("%A") %></p>
      </div>

      <%= link_to edit_entry_path(@entry), class: "btn-secondary text-sm" do %>
        <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
        Edit
      <% end %>
    </div>
  </div>

  <!-- Entry Content -->
  <div class="card">
    <% if @entry.content.blank? && @entry.next_actions.blank? && @entry.win_description.blank? %>
      <div class="text-center py-8 text-text-secondary">
        <p class="text-lg mb-2">No content for this entry</p>
        <p class="text-sm">Click Edit to add your journal entry</p>
      </div>
    <% else %>
      <% has_multiple_sections = [@entry.content.present?, @entry.next_actions.present?, @entry.win_description.present?].count(true) > 1 %>

      <% if @entry.content.present? || @entry.next_actions.present? %>
        <div class="<%= has_multiple_sections && @entry.content.present? && @entry.next_actions.present? ? 'grid grid-cols-1 lg:grid-cols-2 gap-6' : '' %>">
          <% if @entry.content.present? %>
            <div>
              <h3 class="text-xs font-semibold text-text-tertiary tracking-wider mb-2">What I Did</h3>
              <div class="text-text-primary">
                <%= simple_format(@entry.content) %>
              </div>
            </div>
          <% end %>

          <% if @entry.next_actions.present? %>
            <div>
              <h3 class="text-xs font-semibold text-text-tertiary tracking-wider mb-2">What Next</h3>
              <div class="text-text-primary">
                <%= simple_format(@entry.next_actions) %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>

      <% if @entry.is_win? && @entry.win_description.present? %>
        <div class="<%= (@entry.content.present? || @entry.next_actions.present?) ? 'mt-6 pt-6 border-t border-border' : '' %>">
          <div class="bg-gradient-to-r from-accent/5 to-transparent p-4 rounded-lg">
            <h3 class="text-xs font-semibold text-accent tracking-wider mb-2">Win Description</h3>
            <div class="text-text-primary">
              <%= simple_format(@entry.win_description) %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <!-- Quick Actions -->
  <div class="flex justify-between items-center mt-4">
    <div class="text-xs text-text-tertiary">
      Created <%= @entry.created_at.strftime("%B %d at %I:%M %p") %>
    </div>

    <%= link_to entry_path(@entry), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this entry?" }, class: "text-sm text-red-600 hover:text-red-700" do %>
      <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
      </svg>
      Delete Entry
    <% end %>
  </div>
</div>
