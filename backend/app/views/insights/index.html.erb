<% content_for :title, "AI Insights - JotChain" %>

<div class="max-w-4xl mx-auto">
  <!-- Header -->
  <div class="mb-8">
    <h1 class="text-3xl font-mono font-bold text-text-primary mb-2">AI Insights</h1>
    <p class="text-text-secondary">Generate content ideas and summaries from your journal entries</p>
  </div>

  <% if @has_entries %>
    <!-- Stats -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
      <div class="card">
        <div class="text-2xl font-bold text-text-primary"><%= @entries_count %></div>
        <div class="text-sm text-text-secondary">Total Entries</div>
      </div>
      <div class="card">
        <div class="text-2xl font-bold text-wins-major"><%= @wins_count %></div>
        <div class="text-sm text-text-secondary">Total Wins</div>
      </div>
      <div class="card">
        <div class="text-2xl font-bold text-accent"><%= current_user.current_streak %></div>
        <div class="text-sm text-text-secondary">Current Streak</div>
      </div>
    </div>

    <!-- Generation Options -->
    <div class="card mb-6" data-controller="insights">
      <div class="flex justify-between items-start mb-4">
        <h2 class="text-lg font-semibold text-text-primary">Generate Insights</h2>
        <!-- Timeframe Selector (moved to top right) -->
        <select data-insights-target="timeframe" class="px-3 py-1.5 text-sm border border-border rounded-lg focus:outline-none focus:ring-2 focus:ring-accent focus:border-accent bg-white">
          <option value="week">Past Week</option>
          <option value="month">Past Month</option>
          <option value="quarter">Past Quarter</option>
        </select>
      </div>

      <div class="space-y-4">
        <!-- Insight Type Selection -->
        <div>
          <label class="block text-sm font-medium text-text-primary mb-2">What would you like to generate?</label>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-2">
            <button data-insights-target="typeButton" data-type="tweets"
                    data-action="click->insights#selectType"
                    class="p-3 border border-border rounded-lg hover:border-accent hover:bg-accent/5 transition-all text-center focus:outline-none focus:ring-2 focus:ring-accent">
              <div class="w-6 h-6 mx-auto mb-1 text-accent font-bold text-xl flex items-center justify-center">𝕏</div>
              <span class="text-xs">X Posts Ideas</span>
            </button>

            <button data-insights-target="typeButton" data-type="blog"
                    data-action="click->insights#selectType"
                    class="p-3 border border-border rounded-lg hover:border-accent hover:bg-accent/5 transition-all text-center focus:outline-none focus:ring-2 focus:ring-accent">
              <svg class="w-6 h-6 mx-auto mb-1 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
              <span class="text-xs">Blog Posts Ideas</span>
            </button>

            <button data-insights-target="typeButton" data-type="wins_summary"
                    data-action="click->insights#selectType"
                    class="p-3 border border-border rounded-lg hover:border-accent hover:bg-accent/5 transition-all text-center focus:outline-none focus:ring-2 focus:ring-accent">
              <svg class="w-6 h-6 mx-auto mb-1 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span class="text-xs">Wins Summary</span>
            </button>

            <button data-insights-target="typeButton" data-type="meeting_prep"
                    data-action="click->insights#selectType"
                    class="p-3 border border-border rounded-lg hover:border-accent hover:bg-accent/5 transition-all text-center focus:outline-none focus:ring-2 focus:ring-accent">
              <svg class="w-6 h-6 mx-auto mb-1 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
              <span class="text-xs">Meeting Prep</span>
            </button>
          </div>
        </div>

        <!-- Meeting Type (shown only for meeting prep) -->
        <div data-insights-target="meetingTypeContainer" class="hidden">
          <label class="block text-sm font-medium text-text-primary mb-2">Meeting Type</label>
          <select data-insights-target="meetingType" class="w-full md:w-auto px-4 py-2 border border-border rounded-lg focus:outline-none focus:ring-2 focus:ring-accent focus:border-accent">
            <option value="weekly">Weekly Team Meeting</option>
            <option value="monthly">Monthly Review</option>
          </select>
        </div>

        <!-- Generate Button -->
        <div class="flex justify-end">
          <button data-action="click->insights#generate"
                  class="px-6 py-2 bg-accent text-white font-medium rounded-lg hover:bg-accent-hover transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
                  data-insights-target="generateButton">
            Generate Insights
          </button>
        </div>
      </div>
    </div>

    <!-- Results Container -->
    <div data-insights-target="resultsContainer" class="hidden">
      <div class="card">
        <div class="flex justify-between items-start mb-4">
          <h3 class="text-lg font-semibold text-text-primary" data-insights-target="resultsTitle">Results</h3>
          <button data-action="click->insights#copyAll"
                  class="text-sm text-accent hover:text-accent-hover"
                  data-insights-target="copyButton">
            Copy All
          </button>
        </div>

        <!-- Loading State -->
        <div data-insights-target="loadingState" class="hidden py-8 text-center">
          <div class="inline-flex items-center gap-2 text-text-secondary">
            <svg class="animate-spin h-5 w-5" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <span>Generating insights...</span>
          </div>
        </div>

        <!-- Results Content -->
        <div data-insights-target="resultsContent" class="space-y-4"></div>

        <!-- Error State -->
        <div data-insights-target="errorState" class="hidden">
          <div class="bg-red-50 border border-red-200 rounded-lg p-4">
            <p class="text-red-800" data-insights-target="errorMessage"></p>
          </div>
        </div>
      </div>
    </div>

  <% else %>
    <!-- Empty State -->
    <div class="card text-center py-12">
      <div class="text-4xl mb-4">💡</div>
      <h3 class="text-lg font-semibold text-text-primary mb-2">No entries yet</h3>
      <p class="text-text-secondary mb-4">Start journaling to unlock AI-powered insights!</p>
      <%= link_to "Create Your First Entry", new_entry_path, class: "btn-primary" %>
    </div>
  <% end %>
</div>
