<div style="padding: 24px 32px 12px; border-bottom: 1px solid rgba(129, 140, 248, 0.22); background: rgba(8, 15, 28, 0.65);">
  <table role="presentation" width="100%" cellpadding="0" cellspacing="0">
    <tr>
      <td style="font-size: 20px; font-weight: 700; color: #f8fafc;">
        <table role="presentation" cellpadding="0" cellspacing="0">
          <tr>
            <td style="vertical-align: middle; padding-right: 8px;">
              <img src="https://jotchain.com/favicon.png" alt="Jotchain" width="24" height="24" style="display: block; border: 0; width: 24px; height: 24px;" />
            </td>
            <td style="vertical-align: middle; font-size: 20px; font-weight: 700; color: #f8fafc;">
              JotChain
            </td>
          </tr>
        </table>
      </td>
      <% if defined?(@header_tagline) && @header_tagline.present? %>
        <td style="text-align: right; font-size: 13px; color: rgba(148, 163, 184, 0.85);">
          <%= @header_tagline %>
        </td>
      <% end %>
    </tr>
  </table>
</div>
