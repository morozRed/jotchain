<div class="mx-auto max-w-md mt-8">
  <h1 class="text-3xl font-bold mb-6">Sign Up for JotChain</h1>
  <p class="text-gray-600 mb-6">Log today. Start tomorrow ahead.</p>

  <%= form_with(model: @user, url: registration_path) do |f| %>
    <% if @user.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded p-4 mb-4">
        <ul class="list-disc list-inside text-red-600">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.label :email_address, class: "block text-sm font-medium mb-2" %>
      <%= f.email_field :email_address, class: "w-full px-3 py-2 border rounded-lg", placeholder: "you@example.com", required: true %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-sm font-medium mb-2" %>
      <%= f.password_field :password, class: "w-full px-3 py-2 border rounded-lg", required: true %>
    </div>

    <div class="mb-6">
      <%= f.label :password_confirmation, class: "block text-sm font-medium mb-2" %>
      <%= f.password_field :password_confirmation, class: "w-full px-3 py-2 border rounded-lg", required: true %>
    </div>

    <div>
      <%= f.submit "Sign Up", class: "w-full bg-teal-500 text-white py-2 px-4 rounded-lg hover:bg-teal-600 cursor-pointer" %>
    </div>
  <% end %>

  <div class="mt-6 text-center">
    <p class="text-sm text-gray-600">
      Already have an account?
      <%= link_to "Sign In", new_session_path, class: "text-teal-600 hover:underline" %>
    </p>
  </div>
</div>