<div class="mx-auto max-w-md mt-8">
  <h1 class="text-3xl font-bold mb-6">Sign In to JotChain</h1>

  <% if flash[:alert] %>
    <div class="bg-red-50 border border-red-200 rounded p-4 mb-4">
      <p class="text-red-600"><%= flash[:alert] %></p>
    </div>
  <% end %>

  <% if flash[:notice] %>
    <div class="bg-green-50 border border-green-200 rounded p-4 mb-4">
      <p class="text-green-600"><%= flash[:notice] %></p>
    </div>
  <% end %>

  <%= form_with url: session_path do |form| %>
    <div class="mb-4">
      <%= form.label :email_address, "Email", class: "block text-sm font-medium mb-2" %>
      <%= form.email_field :email_address,
          class: "w-full px-3 py-2 border rounded-lg",
          placeholder: "you@example.com",
          required: true,
          autofocus: true,
          autocomplete: "username",
          value: params[:email_address] %>
    </div>

    <div class="mb-6">
      <%= form.label :password, class: "block text-sm font-medium mb-2" %>
      <%= form.password_field :password,
          class: "w-full px-3 py-2 border rounded-lg",
          required: true,
          autocomplete: "current-password",
          maxlength: 72 %>
    </div>

    <div>
      <%= form.submit "Sign In", class: "w-full bg-teal-500 text-white py-2 px-4 rounded-lg hover:bg-teal-600 cursor-pointer" %>
    </div>
  <% end %>

  <div class="mt-6 text-center">
    <p class="text-sm text-gray-600">
      <%= link_to "Forgot password?", new_password_path, class: "text-teal-600 hover:underline" %>
    </p>
    <p class="text-sm text-gray-600 mt-2">
      Don't have an account?
      <%= link_to "Sign Up", new_registration_path, class: "text-teal-600 hover:underline" %>
    </p>
  </div>
</div>