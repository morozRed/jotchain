<!-- AI Insights Section -->
<div class="bg-white border border-border rounded-xl shadow-sm">
  <div class="p-6">
    <!-- Header -->
    <div class="flex items-center justify-between mb-4">
      <div class="flex items-center gap-3">
        <div class="p-2 bg-accent/10 rounded-lg">
          <%= heroicon "sparkles", options: { class: "w-5 h-5 text-accent" } %>
        </div>
        <div>
          <h3 class="text-lg font-semibold text-text-primary">AI Insights</h3>
          <p class="text-sm text-text-secondary">Generate content from your journal entries</p>
        </div>
      </div>
      <% if can_use_ai_insights %>
        <%= link_to insights_path, class: "text-sm text-accent hover:text-accent/80 font-medium transition-colors" do %>
          View All ‚Üí
        <% end %>
      <% end %>
    </div>

    <% if can_use_ai_insights %>
      <% if has_entries %>
        <!-- Quick Actions for Pro Users -->
        <div class="grid grid-cols-2 sm:grid-cols-4 gap-3">
          <%= link_to insights_path(preset: 'tweets'), class: "group p-4 border border-border rounded-lg hover:border-accent hover:bg-accent/5 transition-all text-center" do %>
            <div class="w-8 h-8 mx-auto mb-2 text-accent font-bold text-2xl flex items-center justify-center group-hover:scale-110 transition-transform">ùïè</div>
            <span class="text-xs font-medium text-text-primary group-hover:text-accent">X Posts</span>
          <% end %>

          <%= link_to insights_path(preset: 'blog'), class: "group p-4 border border-border rounded-lg hover:border-accent hover:bg-accent/5 transition-all text-center" do %>
            <svg class="w-8 h-8 mx-auto mb-2 text-accent group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
            <span class="text-xs font-medium text-text-primary group-hover:text-accent">Blog Ideas</span>
          <% end %>

          <%= link_to insights_path(preset: 'wins'), class: "group p-4 border border-border rounded-lg hover:border-accent hover:bg-accent/5 transition-all text-center" do %>
            <svg class="w-8 h-8 mx-auto mb-2 text-accent group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-xs font-medium text-text-primary group-hover:text-accent">Wins Summary</span>
          <% end %>

          <%= link_to insights_path(preset: 'meeting'), class: "group p-4 border border-border rounded-lg hover:border-accent hover:bg-accent/5 transition-all text-center" do %>
            <svg class="w-8 h-8 mx-auto mb-2 text-accent group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
            <span class="text-xs font-medium text-text-primary group-hover:text-accent">Meeting Prep</span>
          <% end %>
        </div>

        <div class="mt-4 text-center">
          <%= link_to insights_path, class: "inline-flex items-center px-4 py-2 bg-accent text-white text-sm font-medium rounded-lg hover:bg-accent/90 transition-colors shadow-sm" do %>
            Generate Custom Insights
            <%= heroicon "arrow-right", options: { class: "w-4 h-4 ml-2" } %>
          <% end %>
        </div>
      <% else %>
        <!-- Empty State for Pro Users -->
        <div class="text-center py-8">
          <div class="text-4xl mb-3">üí°</div>
          <p class="text-sm text-text-secondary mb-4">Start journaling to unlock AI-powered insights!</p>
          <%= link_to new_entry_path, class: "inline-flex items-center px-4 py-2 bg-accent text-white text-sm font-medium rounded-lg hover:bg-accent/90 transition-colors" do %>
            Create Your First Entry
          <% end %>
        </div>
      <% end %>
    <% else %>
      <!-- Upgrade Banner for Free Users -->
      <div class="bg-accent/5 border border-accent/20 rounded-lg p-6">
        <div class="flex items-start gap-3">
          <svg class="w-6 h-6 text-purple-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
          </svg>
          <div class="flex-1">
            <h4 class="text-sm font-semibold text-purple-900 mb-1">Unlock AI-Powered Insights</h4>
            <p class="text-xs text-purple-700 mb-3">
              Transform your journal entries into actionable content:
            </p>
            <ul class="space-y-1 mb-4">
              <li class="flex items-center gap-2 text-xs text-purple-700">
                <svg class="w-4 h-4 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Generate X posts and blog ideas
              </li>
              <li class="flex items-center gap-2 text-xs text-purple-700">
                <svg class="w-4 h-4 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Create weekly wins summaries
              </li>
              <li class="flex items-center gap-2 text-xs text-purple-700">
                <svg class="w-4 h-4 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Prepare for meetings with AI insights
              </li>
            </ul>
            <div class="flex items-center justify-between">
              <%= link_to billing_path, class: "inline-flex items-center px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white text-sm font-medium rounded-lg transition-colors" do %>
                Upgrade to Pro
                <%= heroicon "sparkles", options: { class: "w-4 h-4 ml-2" } %>
              <% end %>
              <span class="text-xs text-purple-600 font-medium">Only $5/month</span>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>