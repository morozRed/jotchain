<aside class="fixed inset-y-0 left-0 z-50 flex w-64 flex-col border-r border-white/10 bg-slate-950/95 backdrop-blur">
  <!-- Logo and Branding -->
  <div class="flex items-center gap-3 border-b border-white/10 px-6 py-5">
    <div class="flex h-10 w-10 items-center justify-center rounded-xl bg-indigo-500/20 text-indigo-300">
      <span class="text-lg font-semibold">JC</span>
    </div>
    <div>
      <p class="text-sm font-semibold tracking-wide text-indigo-300">JotChain</p>
      <p class="text-xs text-slate-400">Chain your momentum</p>
    </div>
  </div>

  <!-- Navigation Links -->
  <nav class="flex-1 space-y-1 px-3 py-4" data-controller="sidebar">
    <div class="mb-6">
      <p class="mb-2 px-3 text-xs font-semibold uppercase tracking-wider text-slate-500">Navigate</p>

      <!-- Expandable Spaces Menu -->
      <div class="mb-2">
        <button data-action="click->sidebar#toggle" class="flex w-full items-center gap-3 rounded-lg px-3 py-2.5 text-sm font-medium text-slate-300 transition-colors hover:bg-white/5 hover:text-white">
          <svg data-sidebar-target="chevron" class="h-4 w-4 transition-transform duration-200" style="transform: rotate(-90deg)" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
          </svg>
          <span>Spaces</span>
          <% if @sidebar_spaces.any? %>
            <span class="ml-auto flex h-5 w-5 items-center justify-center rounded-full bg-slate-800 text-xs text-slate-400">
              <%= @sidebar_spaces.count %>
            </span>
          <% end %>
        </button>

        <!-- Spaces List -->
        <div data-sidebar-target="spacesMenu" class="overflow-hidden transition-all duration-200" style="max-height: 0">
          <div class="ml-6 mt-1 space-y-0.5">
            <% @sidebar_spaces.each do |space| %>
              <%= link_to space_path(space), class: "flex items-center gap-2 rounded-lg px-3 py-2 text-sm text-slate-400 transition-colors hover:bg-white/5 hover:text-slate-300 #{controller_name == 'spaces' && @space&.id == space.id ? 'bg-indigo-500/10 text-indigo-300' : ''}" do %>
                <div class="h-2 w-2 rounded-full" style="background-color: <%= space.primary_color %>"></div>
                <span class="truncate"><%= space.name %></span>
                <% if space.chains.any? %>
                  <span class="ml-auto text-xs text-slate-500"><%= space.chains.count %></span>
                <% end %>
              <% end %>
            <% end %>

            <% if @sidebar_spaces.empty? %>
              <p class="px-3 py-2 text-xs text-slate-500 italic">No spaces yet</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Stats Section -->
    <div class="mb-6">
      <p class="mb-2 px-3 text-xs font-semibold uppercase tracking-wider text-slate-500">Overview</p>
      <div class="space-y-2 rounded-lg bg-slate-900/50 p-3">
        <div class="flex items-center justify-between text-sm">
          <span class="text-slate-400">Spaces</span>
          <span class="font-semibold text-white"><%= Space.count %></span>
        </div>
        <div class="flex items-center justify-between text-sm">
          <span class="text-slate-400">Chains</span>
          <span class="font-semibold text-white"><%= Chain.count %></span>
        </div>
        <div class="flex items-center justify-between text-sm">
          <span class="text-slate-400">Notes</span>
          <span class="font-semibold text-white"><%= Link.count %></span>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div>
      <p class="mb-2 px-3 text-xs font-semibold uppercase tracking-wider text-slate-500">Quick Actions</p>
      <div class="space-y-1.5">
        <%= link_to new_space_path, data: { turbo_frame: "modal" }, class: "flex w-full items-center gap-2 rounded-lg px-3 py-2 text-sm font-medium text-slate-300 transition-colors hover:bg-indigo-500/10 hover:text-indigo-300" do %>
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          <span>New Space</span>
        <% end %>
        <%= link_to new_chain_path, data: { turbo_frame: "modal" }, class: "flex w-full items-center gap-2 rounded-lg px-3 py-2 text-sm font-medium text-slate-300 transition-colors hover:bg-indigo-500/10 hover:text-indigo-300" do %>
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          <span>New Chain</span>
        <% end %>
        <%= link_to new_link_path, data: { turbo_frame: "modal" }, class: "flex w-full items-center gap-2 rounded-lg px-3 py-2 text-sm font-medium text-slate-300 transition-colors hover:bg-indigo-500/10 hover:text-indigo-300" do %>
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          <span>New Note</span>
        <% end %>
      </div>
    </div>
  </nav>

  <!-- User Section at Bottom -->
  <div class="border-t border-white/10 p-4">
    <div class="flex items-center gap-3">
      <div class="h-10 w-10 rounded-full border border-white/20 bg-gradient-to-br from-indigo-600/30 to-blue-500/30"></div>
      <div class="flex-1 min-w-0">
        <p class="text-sm font-medium text-white truncate">User</p>
        <p class="text-xs text-slate-400 truncate">user@example.com</p>
      </div>
    </div>
  </div>
</aside>
