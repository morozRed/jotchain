<aside class="fixed inset-y-0 left-0 z-50 flex w-64 flex-col border-r border-white/10 bg-slate-950/95 backdrop-blur">
  <!-- Logo and Branding -->
  <div class="flex items-center gap-3 border-b border-white/10 px-6 py-5">
    <div class="flex h-10 w-10 items-center justify-center rounded-xl bg-indigo-500/20 text-indigo-300">
      <span class="text-lg font-semibold">JC</span>
    </div>
    <div>
      <p class="text-sm font-semibold tracking-wide text-indigo-300">JotChain</p>
      <p class="text-xs text-slate-400">Chain your momentum</p>
    </div>
  </div>

  <!-- Navigation Links -->
  <nav class="flex-1 space-y-1 px-3 py-4">
    <div class="mb-6">
      <p class="mb-2 px-3 text-xs font-semibold uppercase tracking-wider text-slate-500">Navigate</p>
      <%= link_to spaces_path, class: "flex items-center gap-3 rounded-lg px-3 py-2.5 text-sm font-medium text-slate-300 transition-colors hover:bg-white/5 hover:text-white #{current_page?(spaces_path) || current_page?(root_path) ? 'bg-indigo-500/10 text-indigo-300' : ''}" do %>
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
        </svg>
        <span>Spaces</span>
      <% end %>
      <%= link_to "#", class: "flex items-center gap-3 rounded-lg px-3 py-2.5 text-sm font-medium text-slate-500 transition-colors hover:bg-white/5 hover:text-slate-300" do %>
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span>Timeline</span>
      <% end %>
      <%= link_to "#", class: "flex items-center gap-3 rounded-lg px-3 py-2.5 text-sm font-medium text-slate-500 transition-colors hover:bg-white/5 hover:text-slate-300" do %>
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
        <span>Insights</span>
      <% end %>
    </div>

    <!-- Stats Section -->
    <div class="mb-6">
      <p class="mb-2 px-3 text-xs font-semibold uppercase tracking-wider text-slate-500">Overview</p>
      <div class="space-y-2 rounded-lg bg-slate-900/50 p-3">
        <div class="flex items-center justify-between text-sm">
          <span class="text-slate-400">Spaces</span>
          <span class="font-semibold text-white"><%= Space.count %></span>
        </div>
        <div class="flex items-center justify-between text-sm">
          <span class="text-slate-400">Chains</span>
          <span class="font-semibold text-white"><%= Chain.count %></span>
        </div>
        <div class="flex items-center justify-between text-sm">
          <span class="text-slate-400">Notes</span>
          <span class="font-semibold text-white"><%= Link.count %></span>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div>
      <p class="mb-2 px-3 text-xs font-semibold uppercase tracking-wider text-slate-500">Quick Actions</p>
      <div class="space-y-1.5">
        <button type="button"
                onclick="window.openModal('space_modal')"
                class="flex w-full items-center gap-2 rounded-lg px-3 py-2 text-sm font-medium text-slate-300 transition-colors hover:bg-indigo-500/10 hover:text-indigo-300">
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          <span>New Space</span>
        </button>
        <button type="button"
                onclick="window.openModal('chain_modal')"
                class="flex w-full items-center gap-2 rounded-lg px-3 py-2 text-sm font-medium text-slate-300 transition-colors hover:bg-indigo-500/10 hover:text-indigo-300">
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          <span>New Chain</span>
        </button>
        <button type="button"
                onclick="window.openModal('link_modal')"
                class="flex w-full items-center gap-2 rounded-lg px-3 py-2 text-sm font-medium text-slate-300 transition-colors hover:bg-indigo-500/10 hover:text-indigo-300">
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          <span>New Note</span>
        </button>
      </div>
    </div>
  </nav>

  <!-- User Section at Bottom -->
  <div class="border-t border-white/10 p-4">
    <div class="flex items-center gap-3">
      <div class="h-10 w-10 rounded-full border border-white/20 bg-gradient-to-br from-indigo-600/30 to-blue-500/30"></div>
      <div class="flex-1 min-w-0">
        <p class="text-sm font-medium text-white truncate">User</p>
        <p class="text-xs text-slate-400 truncate">user@example.com</p>
      </div>
    </div>
  </div>
</aside>
