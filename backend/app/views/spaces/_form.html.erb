<%= form_with model: space, class: "space-y-5" do |form| %>
  <% if space.errors.present? %>
    <div class="rounded-xl border border-rose-400/30 bg-rose-500/10 p-4 text-sm text-rose-200">
      <p class="font-semibold">Please fix the following:</p>
      <ul class="mt-2 list-inside list-disc space-y-1 text-rose-100/80">
        <% space.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-2">
    <%= form.label :name, class: "block text-xs font-semibold uppercase tracking-wide text-slate-300" %>
    <%= form.text_field :name, required: true, autofocus: true, placeholder: "Product leadership", class: "block w-full rounded-xl border border-white/10 bg-slate-950/60 px-4 py-3 text-sm text-white placeholder:text-slate-500 focus:border-indigo-400 focus:outline-none focus:ring-2 focus:ring-indigo-400/40" %>
  </div>

  <div class="space-y-2">
    <%= form.label :description, class: "block text-xs font-semibold uppercase tracking-wide text-slate-300" %>
    <%= form.text_area :description, rows: 4, placeholder: "Track 1-1s, launches, and growth signals for the product org.", class: "block w-full rounded-xl border border-white/10 bg-slate-950/60 px-4 py-3 text-sm text-white placeholder:text-slate-500 focus:border-indigo-400 focus:outline-none focus:ring-2 focus:ring-indigo-400/40" %>
  </div>

  <div class="space-y-2">
    <%= form.label :color, "Accent color (optional)", class: "block text-xs font-semibold uppercase tracking-wide text-slate-300" %>
    <%= form.color_field :color, class: "h-11 w-16 rounded-xl border border-white/10 bg-slate-950/70 p-1" %>
  </div>

  <%= form.submit space.persisted? ? "Update space" : "Create space", class: "w-full rounded-xl bg-indigo-500 px-4 py-3 text-sm font-semibold text-slate-950 shadow-sm transition hover:bg-indigo-400 focus:outline-none focus:ring-2 focus:ring-indigo-300 focus:ring-offset-2 focus:ring-offset-slate-950" %>
<% end %>
