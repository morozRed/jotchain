<% content_for :title, "Spaces · JotChain" %>

<section class="flex flex-col gap-10">
  <header class="flex flex-col gap-4">
    <div class="flex items-center justify-between gap-4">
      <div>
        <p class="text-xs uppercase tracking-[0.3em] text-indigo-300/70">Spaces</p>
        <h1 class="mt-1 text-3xl font-semibold text-white">Where your chains live</h1>
      </div>
    </div>
    <p class="max-w-2xl text-sm text-slate-400">
      Spaces are high-level closets for your workstreams—keep 1-1s, launches, hiring loops, and personal growth logs organized before layering on AI summaries.
    </p>
  </header>

  <div id="spaces_list" class="space-y-4">
    <% if @spaces.any? %>
      <%= render partial: "spaces/card", collection: @spaces, as: :space %>
    <% else %>
      <div id="empty_spaces_state" class="rounded-xl border border-dashed border-slate-700/70 bg-slate-900/40 p-8 text-center text-sm text-slate-400">
        No spaces yet. Click "New Space" in the sidebar to create your first workspace.
      </div>
    <% end %>
  </div>
</section>
