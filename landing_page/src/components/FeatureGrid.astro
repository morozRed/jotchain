---
interface Props {
	items: Array<{
		title: string;
		description: string;
		icon?: string;
	}>;
}

const { items } = Astro.props;
---

<div class="feature-grid">
	{items.map((item) => (
		<div class="feature-card">
			{item.icon && <span class="feature-card__icon">{item.icon}</span>}
			<h3>{item.title}</h3>
			<p>{item.description}</p>
		</div>
	))}
</div>

<style>
	.feature-grid {
		display: grid;
		gap: 1.5rem;
		grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
	}

	.feature-card {
		padding: 1.5rem;
		border-radius: var(--radius);
		background: var(--surface);
		border: 1px solid var(--border-subtle);
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
		gap: 0.75rem;
		transition: border-color 0.15s ease, transform 0.2s ease;
		position: relative;
		overflow: hidden;
	}

	/* Grain texture */
	.feature-card::after {
		content: '';
		position: absolute;
		inset: 0;
		background: var(--grain-pattern);
		opacity: 0.04;
		pointer-events: none;
	}

	.feature-card:hover {
		border-color: var(--border-strong);
		transform: translateY(-2px);
	}

	.feature-card__icon {
		font-size: 1.5rem;
		color: var(--primary);
	}

	.feature-card h3 {
		font-family: var(--font-body);
		font-size: 1rem;
		font-weight: 600;
		margin: 0;
		text-align: center;
		color: var(--text-primary);
	}

	.feature-card p {
		color: var(--text-secondary);
		line-height: 1.5;
		margin: 0;
		text-align: center;
		font-size: 0.95rem;
	}
</style>

