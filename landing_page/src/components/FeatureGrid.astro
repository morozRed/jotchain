---
interface Props {
	items: Array<{
		title: string;
		description: string;
		icon?: string;
	}>;
}

const { items } = Astro.props;
---

<div class="feature-grid">
	{items.map((item) => (
		<div class="feature-card">
			{item.icon && <span class="feature-card__icon">{item.icon}</span>}
			<h3>{item.title}</h3>
			<p>{item.description}</p>
		</div>
	))}
</div>

<style>
	.feature-grid {
		display: grid;
		gap: 1.8rem;
		grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
	}

	.feature-card {
		padding: 1.8rem;
		border-radius: 20px;
		background: rgba(10, 14, 24, 0.82);
		border: 1px solid rgba(148, 163, 184, 0.1);
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
		gap: 1.1rem;
		box-shadow: inset 0 1px 0 rgba(148, 163, 184, 0.06);
		transition: all 0.3s ease;
	}

	.feature-card:hover {
		background: rgba(13, 18, 28, 0.92);
		border-color: rgba(129, 140, 248, 0.25);
		transform: translateY(-2px);
		box-shadow: inset 0 1px 0 rgba(148, 163, 184, 0.1), 0 12px 32px -16px rgba(129, 140, 248, 0.35);
	}

	.feature-card__icon {
		font-size: 1.5rem;
	}

	.feature-card h3 {
		font-size: 1.25rem;
		margin: 0;
		text-align: center;
	}

	.feature-card p {
		color: var(--text-secondary);
		line-height: 1.6;
		margin: 0;
		text-align: center;
	}
</style>

