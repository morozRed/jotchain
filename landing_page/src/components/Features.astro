<section id="features" class="py-20 px-4 sm:px-6 lg:px-8">
  <div class="max-w-6xl mx-auto">
    <!-- Section header -->
    <div class="text-center mb-16">
      <h2 class="font-mono text-3xl sm:text-4xl md:text-5xl font-bold mb-4">
        Key Features
      </h2>
      <p class="text-lg text-text-secondary">
        Everything you need to stay on track
      </p>
    </div>

    <!-- Features grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Daily Log (Done/Next) -->
      <div class="border border-border rounded-xl p-6 hover:shadow-lg transition-all duration-300">
        <div class="w-12 h-12 bg-accent/10 rounded-lg flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold mb-2">Daily Log</h3>
        <p class="text-text-secondary text-sm mb-4">
          Simple Done/Next format
        </p>
        <p class="text-xs text-text-tertiary">
          Track what you accomplished and what's coming next. Two minutes to complete, endless value.
        </p>
      </div>

      <!-- Yesterday's Context Recall -->
      <div class="border border-border rounded-xl p-6 hover:shadow-lg transition-all duration-300">
        <div class="w-12 h-12 bg-accent/10 rounded-lg flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold mb-2">Yesterday's Context</h3>
        <p class="text-text-secondary text-sm mb-4">
          Instant recall when you start
        </p>
        <p class="text-xs text-text-tertiary">
          See yesterday's log front and center every morning. Never waste time remembering where you left off.
        </p>
      </div>

      <!-- Streak Grid (Vertical Chain) -->
      <div class="border border-border rounded-xl p-6 hover:shadow-lg transition-all duration-300">
        <div class="w-12 h-12 bg-accent/10 rounded-lg flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-accent" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z"></path>
            <path d="M9.879 16.121A3 3 0 1012.015 11L11 14H9c0 .768.293 1.536.879 2.121z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold mb-2">Streak Grid</h3>
        <p class="text-text-secondary text-sm mb-4">
          Vertical chain visualization
        </p>
        <p class="text-xs text-text-tertiary">
          Build momentum with a visual streak chain. Watch your consistency grow week by week.
        </p>
      </div>

      <!-- Wins Tracking -->
      <div class="border border-border rounded-xl p-6 hover:shadow-lg transition-all duration-300">
        <div class="w-12 h-12 bg-accent/10 rounded-lg flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-accent" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold mb-2">Wins Tracking</h3>
        <p class="text-text-secondary text-sm mb-4">
          Flag and export achievements
        </p>
        <p class="text-xs text-text-tertiary">
          Mark your wins as they happen. Export them formatted for reviews, resumes, or LinkedIn.
        </p>
      </div>

      <!-- Content Ideas -->
      <div class="border border-border rounded-xl p-6 hover:shadow-lg transition-all duration-300">
        <div class="w-12 h-12 bg-accent/10 rounded-lg flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold mb-2">Content Ideas</h3>
        <p class="text-text-secondary text-sm mb-4">
          Blog & tweet suggestions
        </p>
        <p class="text-xs text-text-tertiary">
          Get AI-powered suggestions for blog posts and tweets from your daily logs. Fuel your personal brand.
        </p>
      </div>

      <!-- Weekly Summaries -->
      <div class="border border-border rounded-xl p-6 hover:shadow-lg transition-all duration-300">
        <div class="w-12 h-12 bg-accent/10 rounded-lg flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold mb-2">Weekly Summaries</h3>
        <p class="text-text-secondary text-sm mb-4">
          Automated progress reports
        </p>
        <p class="text-xs text-text-tertiary">
          Get weekly summaries of your accomplishments. Perfect for team updates or personal reflection.
        </p>
      </div>
    </div>

    <!-- Additional features mention -->
    <div class="mt-16 text-center">
      <div class="inline-flex items-center gap-8 text-sm text-text-secondary">
        <span class="flex items-center gap-2">
          <svg class="w-4 h-4 text-success" fill="currentColor" viewBox="0 0 24 24">
            <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"></path>
          </svg>
          End-to-end encrypted
        </span>
        <span class="flex items-center gap-2">
          <svg class="w-4 h-4 text-success" fill="currentColor" viewBox="0 0 24 24">
            <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"></path>
          </svg>
          Markdown support
        </span>
      </div>
    </div>
  </div>
</section>
