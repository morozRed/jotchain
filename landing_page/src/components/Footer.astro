---
const currentYear = new Date().getFullYear();
---

<footer class="bg-white border-t border-border py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-6xl mx-auto">
    <!-- Footer content -->
    <div class="grid md:grid-cols-3 gap-8 mb-8">
      <!-- Brand section -->
      <div>
        <div class="mb-4">
          <span class="font-mono font-bold text-lg">JotChain</span>
        </div>
        <p class="text-text-secondary text-sm">
          Log today. Start tomorrow ahead.
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="font-semibold mb-4 text-text-primary">Product</h4>
        <ul class="space-y-2">
          <li>
            <a href="#features" class="text-text-secondary hover:text-text-primary transition-colors text-sm">
              Features
            </a>
          </li>
          <li>
            <a href="#pricing" class="text-text-secondary hover:text-text-primary transition-colors text-sm">
              Pricing
            </a>
          </li>
          <li>
            <a href="#how-it-works" class="text-text-secondary hover:text-text-primary transition-colors text-sm">
              How it Works
            </a>
          </li>
        </ul>
      </div>

      <!-- Company Links -->
      <div>
        <h4 class="font-semibold mb-4 text-text-primary">Company</h4>
        <ul class="space-y-2">
          <li>
            <a href="#" class="text-text-secondary hover:text-text-primary transition-colors text-sm">
              Contact
            </a>
          </li>
          <li>
            <a href="/privacy" class="text-text-secondary hover:text-text-primary transition-colors text-sm">
              Privacy
            </a>
          </li>
          <li>
            <a href="/terms" class="text-text-secondary hover:text-text-primary transition-colors text-sm">
              Terms
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom section -->
    <div class="pt-8 border-t border-border">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <!-- Copyright -->
        <p class="text-text-tertiary text-sm">
          Â© {currentYear} JotChain. All rights reserved.
        </p>

        <!-- Social links -->
        <div class="flex items-center gap-4">
          <a href="https://twitter.com/jotchain" aria-label="Twitter" class="text-text-secondary hover:text-accent transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <!-- Beta notice -->
    <div class="mt-4 text-center">
      <span class="inline-flex items-center gap-2 text-xs text-accent bg-accent/10 px-3 py-1 rounded-full">
        <span class="relative flex h-2 w-2">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-accent opacity-75"></span>
          <span class="relative inline-flex rounded-full h-2 w-2 bg-accent"></span>
        </span>
        Currently in Beta
      </span>
    </div>
  </div>
</footer>