---
import { getCollection } from 'astro:content';

const appSignupUrl = 'https://app.jotchain.com/sign_up';

// Get popular professions and use cases for footer links
const allProfessions = await getCollection('professions');
const allUseCases = await getCollection('use-cases');

// Select popular ones (for now, just take first few)
const popularProfessions = allProfessions.slice(0, 3);
const popularUseCases = allUseCases.slice(0, 3);
---

<footer class="footer">
	<div class="footer__inner">
		<div class="footer__brand">
			<a href="/" class="brand">
				<span class="brand__glyph"></span>
				<span class="brand__name">JotChain</span>
			</a>
			<p class="footer__tagline">A work log that turns into updates, reviews, and summaries.</p>
		</div>

		<div class="footer__links">
			<div class="footer__section">
				<h3>Product</h3>
				<nav>
					<a href="/#pricing">Pricing</a>
					<a href={appSignupUrl}>Start trial</a>
				</nav>
			</div>
			<div class="footer__section">
				<h3>Use Cases</h3>
				<nav>
					{popularUseCases.map((useCase) => (
						<a href={`/use-cases/${useCase.slug}`}>{useCase.data.name}</a>
					))}
				</nav>
			</div>
			<div class="footer__section">
				<h3>For</h3>
				<nav>
					{popularProfessions.map((profession) => (
						<a href={`/for/${profession.slug}`}>{profession.data.name}</a>
					))}
				</nav>
			</div>
			<div class="footer__section">
				<h3>Company</h3>
				<nav>
					<a href="/blog">Blog</a>
					<a href="mailto:grig@jotchain.com">Contact</a>
					<a href="/privacy">Privacy</a>
					<a href="/terms">Terms</a>
				</nav>
			</div>
		</div>
	</div>

	<div class="footer__bottom">
		<span>Â© {new Date().getFullYear()} JotChain</span>
	</div>
</footer>

<style>
	.footer {
		width: calc(100% - 2rem);
		max-width: var(--max-width);
		margin: 2rem auto 1rem;
		background: rgba(255, 255, 255, 0.85);
		backdrop-filter: blur(12px);
		-webkit-backdrop-filter: blur(12px);
		border: 1px solid var(--border-subtle);
		border-radius: var(--radius);
		box-shadow: 0 4px 12px rgba(31, 35, 40, 0.04);
	}

	@media (min-width: 768px) {
		.footer {
			width: calc(100% - 3rem);
			margin: 3rem auto 1.25rem;
		}
	}

	.footer__inner {
		display: flex;
		flex-direction: column;
		gap: 2.5rem;
		max-width: var(--max-width);
		margin: 0 auto;
		padding: 3rem 1.5rem 2rem;
	}

	@media (min-width: 768px) {
		.footer__inner {
			flex-direction: row;
			justify-content: space-between;
			padding: 3rem 2.5rem 2rem;
		}
	}

	.footer__brand {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
		max-width: 280px;
	}

	.brand {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
	}

	.brand:hover {
		color: var(--text-primary);
	}

	.brand__glyph {
		width: 24px;
		height: 24px;
		border-radius: 6px;
		background: url('/favicon.svg') center/cover;
	}

	.brand__name {
		font-family: var(--font-heading);
		font-size: 0.9rem;
		font-weight: 600;
		color: var(--text-primary);
	}

	.footer__tagline {
		font-size: 0.875rem;
		color: var(--text-muted);
		line-height: 1.5;
	}

	.footer__links {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 2rem 1.5rem;
	}

	@media (min-width: 640px) {
		.footer__links {
			grid-template-columns: repeat(4, 1fr);
			gap: 2rem;
		}
	}

	.footer__section h3 {
		font-family: var(--font-body);
		font-size: 0.8rem;
		font-weight: 600;
		color: var(--text-primary);
		margin-bottom: 0.75rem;
		text-transform: uppercase;
		letter-spacing: 0.03em;
	}

	.footer__section nav {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.footer__section nav a {
		font-size: 0.875rem;
		color: var(--text-secondary);
		transition: color 0.15s ease;
		position: relative;
		display: inline-block;
		width: fit-content;
	}

	.footer__section nav a::after {
		content: '';
		position: absolute;
		bottom: -1px;
		left: 0;
		width: 100%;
		height: 1px;
		background: var(--primary);
		transform: scaleX(0);
		transform-origin: right;
		transition: transform 0.25s ease;
	}

	.footer__section nav a:hover {
		color: var(--primary);
	}

	.footer__section nav a:hover::after {
		transform: scaleX(1);
		transform-origin: left;
	}

	.footer__bottom {
		padding: 1.25rem 1.5rem;
		border-top: 1px solid var(--border-subtle);
		font-size: 0.8rem;
		color: var(--text-muted);
	}

	@media (min-width: 768px) {
		.footer__bottom {
			padding: 1.25rem 2.5rem;
		}
	}
</style>
