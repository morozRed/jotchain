<header class="fixed top-0 left-0 right-0 z-50 bg-white border-b border-border">
  <nav class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="hover:opacity-80 transition-opacity">
          <span class="font-mono font-bold text-xl"><span class="text-accent">Jot</span>Chain</span>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        <a href="#features" class="text-text-secondary hover:text-text-primary transition-colors">
          Features
        </a>
        <a href="#pricing" class="text-text-secondary hover:text-text-primary transition-colors">
          Pricing
        </a>
      </div>

      <!-- CTA Buttons -->
      <div class="flex items-center gap-4">
        <button class="btn-primary text-sm px-4 py-2">
          Sign in â†’
        </button>
      </div>

      <!-- Mobile menu button -->
      <button class="md:hidden text-text-primary p-2" id="mobile-menu-button">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div class="hidden md:hidden" id="mobile-menu">
      <div class="px-2 pt-2 pb-3 space-y-1 bg-bg-secondary rounded-lg mt-2 mb-2 border border-border">
        <a href="#features" class="block px-3 py-2 text-text-secondary hover:text-text-primary transition-colors">
          Features
        </a>
        <a href="#pricing" class="block px-3 py-2 text-text-secondary hover:text-text-primary transition-colors">
          Pricing
        </a>
        <div class="pt-2 border-t border-bg-tertiary/20">
          <button class="block w-full text-left px-3 py-2 text-text-secondary hover:text-text-primary transition-colors">
            Login
          </button>
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Close mobile menu when clicking on a link
  const mobileLinks = mobileMenu?.querySelectorAll('a');
  mobileLinks?.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });
</script>
