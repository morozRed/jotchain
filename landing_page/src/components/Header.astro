---
const appSignupUrl = 'https://app.jotchain.com/sign_up';
---

<header class="header">
	<div class="header__inner">
		<a href="/" class="brand">
			<span class="brand__glyph"></span>
			<span class="brand__name">JotChain</span>
		</a>
		<nav class="header__nav">
			<a href="/#features">Features</a>
			<a href="/#pricing">Pricing</a>
			<a href="/blog">Blog</a>
		</nav>
		<div class="header__actions">
			<a class="button button--primary" href={appSignupUrl}>Start free trial</a>
		</div>
	</div>
</header>

<style>
	.header {
		position: sticky;
		top: 1rem;
		z-index: 50;
		width: calc(100% - 2rem);
		max-width: var(--max-width);
		margin: 1rem auto 0;
		background: var(--surface);
		border: 1px solid var(--border-subtle);
		border-radius: var(--radius);
		box-shadow: 0 4px 12px rgba(31, 35, 40, 0.04);
	}

	@media (min-width: 768px) {
		.header {
			top: 1.25rem;
			width: calc(100% - 3rem);
			margin: 1.25rem auto 0;
		}
	}

	.header__inner {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 1.5rem;
		padding: 0.75rem 1.25rem;
	}

	@media (min-width: 768px) {
		.header__inner {
			padding: 0.75rem 1.5rem;
		}
	}

	.brand {
		display: inline-flex;
		align-items: center;
		gap: 0.6rem;
		cursor: pointer;
		transition: opacity 0.15s ease;
	}

	.brand:hover {
		opacity: 0.8;
		color: var(--text-primary);
	}

	.brand__glyph {
		width: 26px;
		height: 26px;
		border-radius: 8px;
		background: url('/favicon.svg') center/cover;
	}

	.brand__name {
		font-family: var(--font-heading);
		font-size: 0.95rem;
		font-weight: 600;
		color: var(--text-primary);
		letter-spacing: -0.01em;
	}

	.header__nav {
		display: none;
		gap: 2rem;
		font-size: 0.9rem;
		font-weight: 500;
		color: var(--text-secondary);
	}

	.header__nav a {
		transition: color 0.15s ease;
	}

	.header__nav a:hover {
		color: var(--text-primary);
	}

	.header__actions {
		display: inline-flex;
		gap: 0.75rem;
		align-items: center;
	}

	.header__actions .button {
		padding: 0.5rem 1rem;
		font-size: 0.875rem;
	}

	@media (min-width: 768px) {
		.header__nav {
			display: flex;
		}
	}

	/* Mobile menu - simplified for now */
	@media (max-width: 767px) {
		.header__actions .button {
			padding: 0.5rem 0.875rem;
			font-size: 0.8rem;
		}
	}
</style>
