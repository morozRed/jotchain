<section class="relative min-h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8 py-20">
  <div class="relative z-10 max-w-7xl mx-auto w-full">
    <!-- Two column layout -->
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">

      <!-- Left side: Pile of apps -->
      <div class="relative order-2 lg:order-1">
        <div class="relative h-[400px] lg:h-[500px] flex items-center justify-center">
          <!-- Central message -->
          <div class="absolute z-20 text-center">
            <p class="text-xl font-bold">
              <span class="text-text-secondary">Your work notes are everywhere.</span>
              <br />
              <span class="text-accent">Your context is nowhere.</span>
            </p>
          </div>

          <!-- Scattered app icons -->
          <!-- Notion - top left -->
          <div class="absolute top-12 left-8 transform -rotate-12 opacity-60 hover:opacity-100 transition-all hover:scale-110">
            <div class="bg-white rounded-lg shadow-lg p-4 border border-border">
              <img src="/src/icons/notion.svg" alt="Notion" class="w-12 h-12" />
            </div>
          </div>

          <!-- Obsidian - top right -->
          <div class="absolute top-10 right-10 transform rotate-15 opacity-60 hover:opacity-100 transition-all hover:scale-110">
            <div class="bg-white rounded-lg shadow-lg p-4 border border-border">
              <img src="/src/icons/obsidian.svg" alt="Obsidian" class="w-12 h-12" />
            </div>
          </div>

          <!-- Google - bottom right -->
          <div class="absolute bottom-24 right-12 transform rotate-8 opacity-60 hover:opacity-100 transition-all hover:scale-110">
            <div class="bg-white rounded-lg shadow-lg p-3 border border-border">
              <img src="/src/icons/google.svg" alt="Google Docs" class="w-11 h-11" />
            </div>
          </div>

          <!-- Apple - bottom left -->
          <div class="absolute bottom-20 left-10 transform -rotate-6 opacity-60 hover:opacity-100 transition-all hover:scale-110">
            <div class="bg-white rounded-lg shadow-lg p-3 border border-border">
              <img src="/src/icons/apple.svg" alt="Apple Notes" class="w-11 h-11" />
            </div>
          </div>

          <!-- Paper notebook emoji - middle top -->
          <div class="absolute top-32 left-1/2 transform -translate-x-1/2 rotate-3 opacity-60 hover:opacity-100 transition-all hover:scale-110">
            <div class="bg-white rounded-lg shadow-lg p-4 border border-border">
              <span class="text-4xl">ðŸ““</span>
            </div>
          </div>

          <!-- Additional scattered elements for depth -->
          <div class="absolute bottom-12 right-20 w-2 h-2 bg-accent rounded-full opacity-40"></div>
          <div class="absolute top-24 right-1/3 w-3 h-3 bg-accent rounded-full opacity-30"></div>
          <div class="absolute bottom-1/3 left-16 w-2 h-2 bg-accent rounded-full opacity-40"></div>
        </div>
      </div>

      <!-- Right side: Hero content -->
      <div class="order-1 lg:order-2 text-center lg:text-left">
        <!-- Trust indicators -->
        <div class="flex flex-wrap items-center justify-center lg:justify-start gap-4 sm:gap-6 mb-8 text-sm text-text-secondary">
          <span class="flex items-center gap-2">
            <svg class="w-4 h-4 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            </svg>
            Encrypted
          </span>
          <span class="flex items-center gap-2">
            <svg class="w-4 h-4 text-accent" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z"></path>
              <path d="M9.879 16.121A3 3 0 1012.015 11L11 14H9c0 .768.293 1.536.879 2.121z"></path>
            </svg>
            Streak-tracked
          </span>
          <span class="flex items-center gap-2">
            <svg class="w-4 h-4 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Win-ready
          </span>
        </div>

        <!-- Main headline -->
        <h1 class="font-mono text-4xl sm:text-5xl md:text-6xl font-bold mb-6">
          Log today.
          <br />
          <span class="text-accent">Start tomorrow ahead.</span>
        </h1>

        <!-- Subtext -->
        <p class="text-lg sm:text-xl text-text-secondary max-w-xl mb-10">
          The 2-minute daily habit that saves hours of context-switching.
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start items-center lg:items-start">
          <button class="btn-primary text-base px-6 py-3">
            Start jotting â†’
          </button>
        </div>

        <!-- Small preview snippet -->
        <div class="mt-12 p-4 bg-bg-secondary border border-border rounded-lg max-w-md">
          <div class="flex items-center gap-2 mb-3">
            <span class="text-lg">ðŸ”¥</span>
            <span class="text-accent font-semibold">12 day streak</span>
          </div>
          <div class="space-y-2 text-sm">
            <div class="flex items-start gap-2">
              <svg class="w-4 h-4 text-success mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"></path>
              </svg>
              <span class="text-text-primary">Yesterday: Shipped v2.0 features</span>
            </div>
            <div class="flex items-start gap-2">
              <svg class="w-4 h-4 text-text-tertiary mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
              </svg>
              <span class="text-text-primary">Today: Customer feedback review</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>