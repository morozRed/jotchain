<section id="how-it-works" class="py-20 px-4 sm:px-6 lg:px-8">
  <div class="max-w-6xl mx-auto">
    <!-- Section header -->
    <div class="text-center mb-16">
      <h2 class="font-mono text-3xl sm:text-4xl md:text-5xl font-bold mb-4">
        How It Works
      </h2>
      <p class="text-lg text-text-secondary">
        Three simple steps to stay ahead
      </p>
    </div>

    <!-- Timeline steps -->
    <div class="relative">
      <!-- Connection line for desktop -->
      <div class="hidden md:block absolute left-1/2 transform -translate-x-px h-full w-0.5 bg-gradient-to-b from-accent via-accent/50 to-transparent"></div>

      <div class="space-y-4 md:space-y-6">
        <!-- Step 1: Jot -->
        <div class="relative flex flex-col md:flex-row items-center">
          <div class="md:w-1/2 md:pr-12 md:text-right mb-8 md:mb-0">
            <h3 class="text-2xl font-semibold mb-2">Jot</h3>
            <p class="text-text-secondary mb-4">
              Write down what you did and what's next
            </p>
            <div class="border border-border rounded-lg p-4 text-left">
              <p class="text-sm font-mono text-text-tertiary mb-2">Daily entry:</p>
              <p class="text-sm text-text-primary">
                <strong>Done:</strong> Fixed auth bug, Updated API docs<br/>
                <strong>Next:</strong> Dashboard redesign, Write tests
              </p>
            </div>
          </div>
          <div class="hidden md:block absolute left-1/2 transform -translate-x-1/2 w-4 h-4 bg-accent rounded-full ring-4 ring-white"></div>
          <div class="md:w-1/2 md:pl-12">
            <!-- Icon removed for cleaner look -->
          </div>
        </div>

        <!-- Step 2: Recall -->
        <div class="relative flex flex-col md:flex-row-reverse items-center">
          <div class="md:w-1/2 md:pl-12 mb-8 md:mb-0">
            <h3 class="text-2xl font-semibold mb-2">Recall</h3>
            <p class="text-text-secondary mb-4">
              See yesterday's log when you come back
            </p>
            <div class="border border-border rounded-lg p-4">
              <p class="text-sm font-mono text-text-tertiary mb-2">Yesterday's context:</p>
              <p class="text-sm text-text-primary">
                You completed: Auth fix, API docs<br/>
                Today's focus: Dashboard redesign
              </p>
            </div>
          </div>
          <div class="hidden md:block absolute left-1/2 transform -translate-x-1/2 w-4 h-4 bg-accent rounded-full ring-4 ring-white"></div>
          <div class="md:w-1/2 md:pr-12">
            <!-- Icon removed for cleaner look -->
          </div>
        </div>

        <!-- Step 3: Grow -->
        <div class="relative flex flex-col md:flex-row items-center">
          <div class="md:w-1/2 md:pr-12 md:text-right mb-8 md:mb-0">
            <h3 class="text-2xl font-semibold mb-2">Grow</h3>
            <p class="text-text-secondary mb-4">
              Track streaks and wins over time
            </p>
            <div class="border border-border rounded-lg p-4 text-left">
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-sm font-mono text-text-tertiary mb-2">Your progress:</p>
                  <p class="text-sm text-text-primary">
                    12 day streak<br/>
                    8 wins this month<br/>
                    87% consistency
                  </p>
                </div>
                <!-- Mini vertical streak grid -->
                <div class="flex gap-1">
                  <div class="flex flex-col gap-1">
                    <div class="w-2 h-2 bg-accent rounded-sm"></div>
                    <div class="w-2 h-2 bg-accent rounded-sm"></div>
                    <div class="w-2 h-2 bg-accent rounded-sm"></div>
                    <div class="w-2 h-2 bg-accent rounded-sm"></div>
                  </div>
                  <div class="flex flex-col gap-1">
                    <div class="w-2 h-2 bg-accent rounded-sm"></div>
                    <div class="w-2 h-2 bg-accent rounded-sm"></div>
                    <div class="w-2 h-2 bg-accent rounded-sm"></div>
                    <div class="w-2 h-2 bg-accent rounded-sm"></div>
                  </div>
                  <div class="flex flex-col gap-1">
                    <div class="w-2 h-2 bg-accent rounded-sm"></div>
                    <div class="w-2 h-2 bg-accent rounded-sm"></div>
                    <div class="w-2 h-2 bg-accent rounded-sm"></div>
                    <div class="w-2 h-2 bg-accent rounded-sm"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="hidden md:block absolute left-1/2 transform -translate-x-1/2 w-4 h-4 bg-accent rounded-full ring-4 ring-white"></div>
          <div class="md:w-1/2 md:pl-12">
            <!-- Icon removed for cleaner look -->
          </div>
        </div>
      </div>
    </div>

    <!-- CTA -->
    <div class="text-center mt-20">
      <p class="text-xl text-text-secondary mb-6">
        Ready to never lose context again?
      </p>
      <button class="btn-primary text-base px-6 py-3">
        Start Your Streak â†’
      </button>
    </div>
  </div>
</section>
