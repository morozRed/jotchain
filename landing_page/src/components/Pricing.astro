<style>
  /* Tab Switch Styles */
  .tab-button {
    cursor: pointer;
    position: relative;
  }

  .tab-button:not(.tab-active) {
    color: var(--text-secondary);
  }

  .tab-button:not(.tab-active):hover {
    color: var(--text-primary);
  }

  .tab-button.tab-active {
    background-color: var(--accent);
    color: white;
  }

  .tab-button.tab-active span {
    color: white;
    opacity: 0.9;
  }
</style>

<script>
  const monthlyTab = document.getElementById('monthly-tab');
  const yearlyTab = document.getElementById('yearly-tab');
  const priceAmount = document.getElementById('price-amount');
  const pricePeriod = document.getElementById('price-period');
  const priceComparison = document.getElementById('price-comparison');
  const popularBadge = document.getElementById('popular-badge');

  function setActiveTab(isYearly: boolean) {
    if (monthlyTab && yearlyTab && priceAmount && pricePeriod && priceComparison && popularBadge) {
      if (isYearly) {
        // Yearly pricing
        yearlyTab.classList.add('tab-active');
        monthlyTab.classList.remove('tab-active');
        priceAmount.textContent = '50';
        pricePeriod.textContent = 'year';
        priceComparison.style.display = 'block';
        popularBadge.style.display = 'block';
      } else {
        // Monthly pricing
        monthlyTab.classList.add('tab-active');
        yearlyTab.classList.remove('tab-active');
        priceAmount.textContent = '5';
        pricePeriod.textContent = 'month';
        priceComparison.style.display = 'none';
        popularBadge.style.display = 'none';
      }
    }
  }

  // Add click listeners
  if (monthlyTab && yearlyTab) {
    monthlyTab.addEventListener('click', () => setActiveTab(false));
    yearlyTab.addEventListener('click', () => setActiveTab(true));

    // Initialize with yearly selected
    setActiveTab(true);
  }
</script>
