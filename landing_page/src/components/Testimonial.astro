---
interface Props {
	quote: string;
	author: string;
}

const { quote, author } = Astro.props;
---

<blockquote class="testimonial">
	<p class="testimonial__quote">"{quote}"</p>
	<cite class="testimonial__author">â€” {author}</cite>
</blockquote>

<style>
	.testimonial {
		padding: 2rem;
		border-radius: 20px;
		background: rgba(12, 14, 22, 0.55);
		border: 1px solid rgba(124, 125, 254, 0.14);
		display: flex;
		flex-direction: column;
		gap: 1rem;
		margin: 0;
		transition: all 0.3s ease;
	}

	.testimonial:hover {
		background: rgba(15, 18, 28, 0.75);
		border-color: rgba(129, 140, 248, 0.28);
		transform: translateY(-2px);
	}

	.testimonial__quote {
		color: var(--text-primary);
		line-height: 1.6;
		font-size: 1.05rem;
		margin: 0;
		font-style: normal;
	}

	.testimonial__author {
		color: var(--text-secondary);
		font-size: 0.95rem;
		font-style: normal;
	}
</style>

