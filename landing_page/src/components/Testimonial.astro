---
interface Props {
	quote: string;
	author: string;
}

const { quote, author } = Astro.props;
---

<blockquote class="testimonial">
	<p class="testimonial__quote">"{quote}"</p>
	<cite class="testimonial__author">â€” {author}</cite>
</blockquote>

<style>
	.testimonial {
		padding: 1.75rem;
		border-radius: var(--radius);
		background: var(--surface);
		border: 1px solid var(--border-subtle);
		display: flex;
		flex-direction: column;
		gap: 1rem;
		margin: 0;
		position: relative;
		transition: border-color 0.15s ease;
		overflow: hidden;
	}

	/* Grain texture */
	.testimonial::after {
		content: '';
		position: absolute;
		inset: 0;
		background: var(--grain-pattern);
		opacity: 0.05;
		pointer-events: none;
	}

	/* Accent bar on left */
	.testimonial::before {
		content: '';
		position: absolute;
		left: 0;
		top: 0;
		bottom: 0;
		width: 3px;
		background: var(--primary);
		border-radius: 3px 0 0 3px;
	}

	.testimonial:hover {
		border-color: var(--border-strong);
	}

	.testimonial__quote {
		color: var(--text-primary);
		line-height: 1.6;
		font-size: 1rem;
		margin: 0;
		font-style: normal;
	}

	.testimonial__author {
		color: var(--text-muted);
		font-size: 0.875rem;
		font-style: normal;
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.testimonial__author::before {
		content: '';
		width: 4px;
		height: 4px;
		border-radius: 50%;
		background: var(--primary);
		opacity: 0.6;
	}
</style>

