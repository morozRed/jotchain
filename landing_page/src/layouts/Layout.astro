---
const {
	title = 'JotChain Â· Never Blank in Stand-Ups Again',
	description = 'Quick daily logging, AI-powered summaries, delivered before every meeting. JotChain helps engineers show up prepared for stand-ups, syncs, and reviews.',
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body class="page">
		<div class="page__background" aria-hidden="true"></div>
		<div class="page__mesh" aria-hidden="true"></div>
		<main class="page__content">
			<slot />
		</main>
	</body>
</html>

<style is:global>
	:root {
		color-scheme: dark;
		--surface-base: #070a12;
		--surface-muted: rgba(14, 18, 27, 0.72);
		--surface-card: rgba(11, 15, 24, 0.88);
		--stroke-faint: rgba(148, 163, 184, 0.15);
		--text-primary: #f8fafc;
		--text-secondary: rgba(203, 213, 225, 0.86);
		--accent-primary: #818cf8;
		--accent-secondary: #22d3ee;
		--accent-hot: #f472b6;
		--max-width: 1120px;
		--glow-faint: rgba(129, 140, 248, 0.2);
	}

	*,
	*::before,
	*::after {
		box-sizing: border-box;
	}

	html,
	body {
		margin: 0;
		padding: 0;
		min-height: 100%;
		font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
		background: var(--surface-base);
		color: var(--text-primary);
		scroll-behavior: smooth;
	}

	body {
		position: relative;
		overflow-x: hidden;
		-webkit-font-smoothing: antialiased;
	}

	a {
		color: inherit;
		text-decoration: none;
		transition: opacity 0.2s ease;
	}

	a:hover {
		opacity: 0.8;
	}

	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		font-weight: 600;
		letter-spacing: -0.02em;
		margin: 0;
	}

	p {
		margin: 0;
	}

	button,
	input {
		font: inherit;
	}

	.page {
		isolation: isolate;
	}

	.page__background {
		position: fixed;
		inset: 0;
		z-index: -2;
		background:
			radial-gradient(36% 40% at 18% 18%, rgba(129, 140, 248, 0.32), transparent 70%),
			radial-gradient(28% 32% at 82% 12%, rgba(45, 212, 191, 0.25), transparent 70%),
			linear-gradient(180deg, #070a12 0%, #0a0f1c 60%, #05070d 100%);
		filter: saturate(105%);
		pointer-events: none;
	}

	.page__mesh {
		position: fixed;
		inset: 0;
		z-index: -3;
		opacity: 0.18;
		background:
			repeating-linear-gradient(
				120deg,
				rgba(148, 163, 184, 0.12) 0 1px,
				rgba(148, 163, 184, 0.02) 1px 18px
			);
		mask-image: radial-gradient(60% 60% at 50% 20%, rgba(0, 0, 0, 0.9), transparent 95%);
	}

	.page__content {
		position: relative;
		z-index: 1;
		padding: 3rem 1.5rem 5rem;
		display: flex;
		flex-direction: column;
		align-items: center;
		width: 100%;
	}

	@media (min-width: 768px) {
		.page__content {
			padding: 3.5rem 2.5rem 6rem;
		}
	}
</style>
