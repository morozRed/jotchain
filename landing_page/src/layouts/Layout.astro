---
import SEO from '../components/SEO.astro';

const {
	title = 'JotChain · Your work leaves patterns',
	description = 'Jotchain observes short work notes over time and surfaces quiet signals about interruptions, unplanned work, and invisible impact — without metrics or pressure.',
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<link rel="manifest" href="/manifest.json" />
		<meta name="generator" content={Astro.generator} />
		<SEO title={title} description={description} />

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Martian+Mono:wdth,wght@75..112.5,100..800&display=swap"
			rel="stylesheet"
		/>
		<script defer data-website-id="dfid_1iJfYwcKKgUffc4aiHx46" data-domain="jotchain.com" src="https://datafa.st/js/script.js">
		</script>
	</head>
	<body class="page">
		<main class="page__content">
			<slot />
		</main>
	</body>
</html>

<style is:global>
	:root {
		color-scheme: light;

		/* Typography */
		--font-heading: 'Martian Mono', ui-monospace, SFMono-Regular, monospace;
		--font-body: ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;

		/* Backgrounds - warm paper tones */
		--background: #F8F7F4;
		--surface: #FFFFFF;
		--surface-alt: #FCFBF8;
		--subtle: #F3F2EE;

		/* Borders - hairline neutral */
		--border-subtle: #E7E5E1;
		--border: #DEDAD3;
		--border-strong: #CFC8BE;

		/* Text - near black, never pure */
		--text-primary: #1F2328;
		--text-secondary: #5B636D;
		--text-muted: #7A828C;
		--placeholder: #9AA2AC;

		/* Accent - Warm Coral */
		--primary: #D35F3E;
		--primary-hover: #B54E32;
		--primary-foreground: #FFFFFF;
		--primary-soft-bg: #FDF4F1;
		--primary-soft-border: #F5D4CA;

		/* Layout */
		--max-width: 1120px;
		--content-width: 760px;

		/* Radius - subtle */
		--radius: 0.75rem;
		--radius-sm: 0.5rem;

		/* Shadow - layered system */
		--shadow-sm: 0 1px 2px rgba(31, 35, 40, 0.04);
		--shadow-md:
			0 2px 4px rgba(31, 35, 40, 0.04),
			0 8px 16px rgba(31, 35, 40, 0.06);
		--shadow-lg:
			0 4px 8px rgba(31, 35, 40, 0.04),
			0 12px 24px rgba(31, 35, 40, 0.08),
			0 24px 48px rgba(31, 35, 40, 0.06);
		--shadow-coral: 0 8px 24px rgba(211, 95, 62, 0.18);
	}

	*,
	*::before,
	*::after {
		box-sizing: border-box;
	}

	html,
	body {
		margin: 0;
		padding: 0;
		min-height: 100%;
		font-family: var(--font-body);
		background: var(--background);
		color: var(--text-primary);
		scroll-behavior: smooth;
	}

	body {
		position: relative;
		overflow-x: hidden;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	}

	a {
		color: inherit;
		text-decoration: none;
		transition: color 0.15s ease;
	}

	a:hover {
		color: var(--primary);
	}

	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		font-family: var(--font-heading);
		font-weight: 600;
		letter-spacing: -0.02em;
		margin: 0;
		color: var(--text-primary);
	}

	p {
		margin: 0;
	}

	button,
	input {
		font: inherit;
	}

	.page {
		isolation: isolate;
	}

	.page__content {
		position: relative;
		z-index: 1;
		padding: 0 1.5rem;
		display: flex;
		flex-direction: column;
		align-items: center;
		width: 100%;
		min-height: 100vh;
	}

	@media (min-width: 768px) {
		.page__content {
			padding: 0 2.5rem;
		}
	}

	/* Fade-in animations for page load */
	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(16px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.fade-in {
		animation: fadeInUp 0.6s cubic-bezier(0.22, 1, 0.36, 1) forwards;
		opacity: 0;
	}

	.fade-in-1 { animation-delay: 0ms; }
	.fade-in-2 { animation-delay: 80ms; }
	.fade-in-3 { animation-delay: 160ms; }
	.fade-in-4 { animation-delay: 240ms; }
	.fade-in-5 { animation-delay: 320ms; }

	/* Button styles */
	.button {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		gap: 0.5rem;
		padding: 0.75rem 1.5rem;
		border-radius: var(--radius);
		font-weight: 600;
		font-size: 0.95rem;
		border: 1px solid transparent;
		cursor: pointer;
		transition:
			transform 0.2s cubic-bezier(0.34, 1.56, 0.64, 1),
			box-shadow 0.2s ease,
			background 0.15s ease,
			border-color 0.15s ease;
	}

	.button--primary {
		background: var(--primary);
		color: var(--primary-foreground);
		border-color: var(--primary);
	}

	.button--primary:hover {
		background: var(--primary-hover);
		border-color: var(--primary-hover);
		color: var(--primary-foreground);
		transform: translateY(-2px);
		box-shadow: var(--shadow-coral);
	}

	.button--primary:active {
		transform: translateY(0);
		box-shadow: none;
	}

	.button--secondary {
		background: var(--surface);
		color: var(--text-primary);
		border-color: var(--border);
	}

	.button--secondary:hover {
		background: var(--subtle);
		border-color: var(--border-strong);
		color: var(--text-primary);
		transform: translateY(-1px);
	}

	.button--secondary:active {
		transform: translateY(0);
	}

	/* Section spacing */
	.section {
		width: 100%;
		max-width: var(--max-width);
		padding: 5rem 0;
	}

	.section__header {
		text-align: center;
		max-width: 600px;
		margin: 0 auto 3rem;
	}

	.section__header h2 {
		font-size: clamp(1.5rem, 3vw, 1.875rem);
		line-height: 1.2;
	}

	.section__header p {
		color: var(--text-secondary);
		margin-top: 0.75rem;
		font-size: 1.05rem;
		line-height: 1.6;
	}

	/* Smooth scroll offset for fixed header */
	html {
		scroll-padding-top: 6rem;
	}

	/* Selection color */
	::selection {
		background: var(--primary-soft-bg);
		color: var(--text-primary);
	}
</style>
