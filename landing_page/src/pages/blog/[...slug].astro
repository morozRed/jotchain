---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

export async function getStaticPaths() {
	const posts = await getCollection('blog', ({ data }) => !data.draft);
	return posts.map((post) => ({
		params: { slug: post.slug },
		props: { post },
	}));
}

const { post } = Astro.props;
const { data, body } = post;
const { Content } = await post.render();
---

<Layout title={`${data.title} | JotChain Blog`} description={data.description}>
	<div class="shell">
		<Header />

		<article class="post">
			<header class="post__header">
				<h1>{data.title}</h1>
				<div class="post__meta">
					{data.author && <span class="post__author">By {data.author}</span>}
					<time class="post__date" datetime={data.publishDate.toISOString()}>
						{data.publishDate.toLocaleDateString('en-US', {
							year: 'numeric',
							month: 'long',
							day: 'numeric',
						})}
					</time>
				</div>
				{data.tags && data.tags.length > 0 && (
					<div class="post__tags">
						{data.tags.map((tag) => (
							<span class="tag">{tag}</span>
						))}
					</div>
				)}
			</header>

			<div class="post__content">
				<Content />
			</div>

			<footer class="post__footer">
				<a href="/blog" class="post__back">‚Üê Back to Blog</a>
			</footer>
		</article>

		<Footer />
	</div>
</Layout>

<style>
	.shell {
		width: 100%;
		max-width: var(--max-width);
		display: flex;
		flex-direction: column;
		gap: 4rem;
	}

	.post {
		display: flex;
		flex-direction: column;
		gap: 2rem;
		padding-top: 2rem;
	}

	.post__header {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		text-align: center;
		max-width: 48rem;
		margin: 0 auto;
		width: 100%;
	}

	.post__header h1 {
		font-size: clamp(2rem, 5vw, 3rem);
		line-height: 1.2;
		letter-spacing: -0.02em;
		font-weight: 600;
	}

	.post__meta {
		display: flex;
		justify-content: center;
		gap: 1rem;
		flex-wrap: wrap;
		color: var(--text-secondary);
		font-size: 0.95rem;
	}

	.post__author {
		font-weight: 500;
	}

	.post__date {
		color: rgba(203, 213, 225, 0.65);
	}

	.post__tags {
		display: flex;
		justify-content: center;
		flex-wrap: wrap;
		gap: 0.5rem;
		margin-top: 0.5rem;
	}

	.tag {
		padding: 0.35rem 0.7rem;
		border-radius: 999px;
		background: rgba(148, 163, 184, 0.12);
		color: rgba(203, 213, 225, 0.8);
		font-size: 0.78rem;
	}

	.post__content {
		max-width: 48rem;
		margin: 0 auto;
		width: 100%;
		color: var(--text-secondary);
		line-height: 1.75;
		font-size: 1.05rem;
	}

	.post__content :global(h2) {
		color: var(--text-primary);
		font-size: 1.75rem;
		margin-top: 2.5rem;
		margin-bottom: 1rem;
		font-weight: 600;
	}

	.post__content :global(h3) {
		color: var(--text-primary);
		font-size: 1.4rem;
		margin-top: 2rem;
		margin-bottom: 0.75rem;
		font-weight: 600;
	}

	.post__content :global(p) {
		margin-bottom: 1.25rem;
	}

	.post__content :global(ul),
	.post__content :global(ol) {
		margin-bottom: 1.25rem;
		padding-left: 1.5rem;
	}

	.post__content :global(li) {
		margin-bottom: 0.5rem;
	}

	.post__content :global(a) {
		color: rgba(165, 180, 252, 0.9);
		text-decoration: underline;
	}

	.post__content :global(a:hover) {
		color: rgba(165, 180, 252, 1);
	}

	.post__content :global(code) {
		background: rgba(18, 22, 35, 0.6);
		padding: 0.2rem 0.4rem;
		border-radius: 4px;
		font-size: 0.9em;
	}

	.post__content :global(pre) {
		background: rgba(10, 14, 24, 0.82);
		border: 1px solid rgba(148, 163, 184, 0.1);
		border-radius: 12px;
		padding: 1.5rem;
		overflow-x: auto;
		margin-bottom: 1.25rem;
	}

	.post__content :global(pre code) {
		background: none;
		padding: 0;
	}

	.post__footer {
		max-width: 48rem;
		margin: 3rem auto 0;
		width: 100%;
		padding-top: 2rem;
		border-top: 1px solid rgba(148, 163, 184, 0.12);
	}

	.post__back {
		color: rgba(165, 180, 252, 0.9);
		font-weight: 500;
		transition: color 0.2s ease;
	}

	.post__back:hover {
		color: rgba(165, 180, 252, 1);
	}

	@media (max-width: 640px) {
		.post {
			padding-top: 1rem;
		}

		.post__content {
			font-size: 1rem;
		}
	}
</style>

