---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const allPosts = await getCollection('blog');
const publishedPosts = allPosts
	.filter((post) => !post.data.draft)
	.sort((a, b) => {
		const dateA = a.data.publishDate instanceof Date ? a.data.publishDate : new Date(a.data.publishDate);
		const dateB = b.data.publishDate instanceof Date ? b.data.publishDate : new Date(b.data.publishDate);
		return dateB.getTime() - dateA.getTime();
	});

const featuredPost = publishedPosts[0];
const otherPosts = publishedPosts.slice(1);
---

<Layout
	title="Blog | JotChain"
	description="Thoughts on work logging, meeting prep, and staying organized."
>
	<Header />

	<div class="page-wrapper">
		<section class="blog-header">
			<h1 class="fade-in fade-in-1">Blog</h1>
			<p class="fade-in fade-in-2">
				Thoughts on work logging, meeting prep, and staying organized.
			</p>
		</section>

		{publishedPosts.length > 0 ? (
			<section class="blog-content">
				{/* Featured Post */}
				{featuredPost && (
					<article class="featured-post fade-in fade-in-3">
						<div class="featured-post__content">
							<time datetime={featuredPost.data.publishDate.toISOString()}>
								{featuredPost.data.publishDate.toLocaleDateString('en-US', {
									year: 'numeric',
									month: 'long',
									day: 'numeric',
								})}
							</time>
							<h2>
								<a href={`/blog/${featuredPost.slug}`}>{featuredPost.data.title}</a>
							</h2>
							<p>{featuredPost.data.description}</p>
							<a href={`/blog/${featuredPost.slug}`} class="featured-post__link">
								Read more
							</a>
						</div>
					</article>
				)}

				{/* Posts Grid */}
				{otherPosts.length > 0 && (
					<div class="posts-grid">
						{otherPosts.map((post) => (
							<article class="post-card">
								<time datetime={post.data.publishDate.toISOString()}>
									{post.data.publishDate.toLocaleDateString('en-US', {
										year: 'numeric',
										month: 'long',
										day: 'numeric',
									})}
								</time>
								<h3>
									<a href={`/blog/${post.slug}`}>{post.data.title}</a>
								</h3>
								<p>{post.data.description}</p>
							</article>
						))}
					</div>
				)}
			</section>
		) : (
			<section class="empty-state">
				<p>No blog posts yet. Check back soon.</p>
			</section>
		)}
	</div>

	<Footer />
</Layout>

<style>
	.page-wrapper {
		width: 100%;
		max-width: var(--max-width);
		display: flex;
		flex-direction: column;
		gap: 3rem;
		padding: 4rem 0 6rem;
	}

	.blog-header {
		text-align: center;
	}

	.blog-header h1 {
		font-size: clamp(2rem, 4vw, 2.5rem);
		margin-bottom: 0.75rem;
	}

	.blog-header p {
		color: var(--text-secondary);
		font-size: 1.05rem;
	}

	.blog-content {
		display: flex;
		flex-direction: column;
		gap: 3rem;
	}

	/* Featured Post */
	.featured-post {
		display: grid;
		gap: 2rem;
		padding: 2rem;
		background: var(--surface);
		border: 1px solid var(--border);
		border-radius: var(--radius);
	}

	@media (min-width: 768px) {
		.featured-post {
			grid-template-columns: 1fr 1fr;
			gap: 3rem;
		}
	}

	.featured-post__content {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}

	.featured-post time {
		font-size: 0.875rem;
		color: var(--text-muted);
	}

	.featured-post h2 {
		font-size: 1.5rem;
		line-height: 1.3;
	}

	.featured-post h2 a {
		color: var(--text-primary);
	}

	.featured-post h2 a:hover {
		color: var(--primary);
	}

	.featured-post p {
		color: var(--text-secondary);
		line-height: 1.6;
		font-size: 1rem;
	}

	.featured-post__link {
		display: inline-flex;
		align-items: center;
		gap: 0.25rem;
		margin-top: 0.5rem;
		color: var(--primary);
		font-weight: 500;
		font-size: 0.95rem;
	}

	.featured-post__link:hover {
		text-decoration: underline;
	}

	.featured-post__image {
		border-radius: calc(var(--radius) - 4px);
		overflow: hidden;
	}

	.featured-post__image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	/* Posts Grid */
	.posts-grid {
		display: grid;
		gap: 1.5rem;
	}

	@media (min-width: 640px) {
		.posts-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	@media (min-width: 900px) {
		.posts-grid {
			grid-template-columns: repeat(3, 1fr);
		}
	}

	.post-card {
		padding: 1.5rem;
		background: var(--surface);
		border: 1px solid var(--border-subtle);
		border-radius: var(--radius);
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
		transition: border-color 0.15s ease;
	}

	.post-card:hover {
		border-color: var(--border-strong);
	}

	.post-card time {
		font-size: 0.8rem;
		color: var(--text-muted);
	}

	.post-card h3 {
		font-family: var(--font-body);
		font-size: 1.0625rem;
		font-weight: 600;
		line-height: 1.35;
	}

	.post-card h3 a {
		color: var(--text-primary);
	}

	.post-card h3 a:hover {
		color: var(--primary);
	}

	.post-card p {
		font-size: 0.9rem;
		color: var(--text-secondary);
		line-height: 1.5;
	}

	/* Empty State */
	.empty-state {
		text-align: center;
		padding: 4rem 2rem;
		color: var(--text-secondary);
	}
</style>
