---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import Header from '../../components/Header.astro';
import CTA from '../../components/CTA.astro';
import FeatureGrid from '../../components/FeatureGrid.astro';
import Testimonial from '../../components/Testimonial.astro';
import Footer from '../../components/Footer.astro';

export async function getStaticPaths() {
	const professions = await getCollection('professions');
	return professions.map((profession) => ({
		params: { profession: profession.slug },
		props: { profession },
	}));
}

const { profession } = Astro.props;
const { data, body } = profession;
const appSignupUrl = 'https://app.jotchain.com/sign_up';

// Convert benefits to feature grid format
const benefitItems = data.benefits.map((benefit) => ({
	title: benefit,
	description: '',
}));

// Convert pain points to feature grid format
const painItems = data.painPoints.map((pain) => ({
	title: pain,
	description: '',
}));
---

<Layout title={data.title} description={data.metaDescription}>
	<script type="application/ld+json" set:html={JSON.stringify({
		"@context": "https://schema.org",
		"@type": "SoftwareApplication",
		"name": "JotChain",
		"applicationCategory": "ProductivityApplication",
		"description": data.metaDescription,
		"offers": {
			"@type": "Offer",
			"price": "0",
			"priceCurrency": "USD"
		}
	})} />
	<div class="shell">
		<Header />

		<!-- Hero Section -->
		<section class="hero">
			<h1>{data.h1}</h1>
			<p class="subtitle">
				Stop forgetting what you worked on. JotChain helps {data.name.toLowerCase()}s
				document their work effortlessly and generate AI-powered summaries.
			</p>
			<div class="hero__actions">
				<CTA text={data.cta} href={appSignupUrl} variant="primary" />
			</div>
		</section>

		<!-- Pain Points Section -->
		<section class="section pain-points">
			<div class="section__intro">
				<h2>Sound Familiar?</h2>
			</div>
			<FeatureGrid items={painItems} />
		</section>

		<!-- Solution Section -->
		<section class="section solution">
			<div class="section__intro">
				<h2>How JotChain Helps {data.name}s</h2>
			</div>
			<FeatureGrid items={benefitItems} />
		</section>

		<!-- Use Cases Section -->
		<section class="section use-cases">
			<div class="section__intro">
				<h2>What {data.name}s Use JotChain For</h2>
			</div>
			<ul class="use-case-list">
				{data.useCases.map((useCase) => (
					<li>{useCase}</li>
				))}
			</ul>
		</section>

		<!-- How It Works -->
		<section class="section how-it-works">
			<div class="section__intro">
				<h2>Dead Simple. Actually Works.</h2>
			</div>
			<div class="steps">
				<div class="step">
					<h3>Jot Notes Throughout Your Day</h3>
					<p>Quick notes about what you're working on. No structure required.</p>
				</div>
				<div class="step">
					<h3>Mention Projects & People</h3>
					<p>Use @mentions to tag coworkers and projects for context.</p>
				</div>
				<div class="step">
					<h3>Get AI Summaries</h3>
					<p>Select a date range, get a polished summary of everything you did.</p>
				</div>
			</div>
		</section>

		<!-- Social Proof -->
		<section class="section testimonial-section">
			<Testimonial
				quote="I used to forget what I did by Friday. Now I have a perfect summary of my week in 10 seconds."
				author={`${data.name} at Tech Startup`}
			/>
		</section>

		<!-- CTA Section -->
		<section class="section final-cta">
			<div class="section__intro">
				<h2>Start Your Work Journal Today</h2>
				<p>Join {data.name.toLowerCase()}s who never forget their wins.</p>
			</div>
			<CTA text={data.cta} href={appSignupUrl} variant="primary" />
		</section>

		<Footer />
	</div>
</Layout>

<style>
	.shell {
		width: 100%;
		max-width: var(--max-width);
		display: flex;
		flex-direction: column;
		gap: 4rem;
	}

	.hero {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
		text-align: center;
		align-items: center;
		padding-top: 2rem;
	}

	.hero h1 {
		font-size: clamp(1.75rem, 4vw, 2.75rem);
		line-height: 1.15;
		letter-spacing: -0.02em;
		font-weight: 600;
		max-width: 700px;
	}

	.subtitle {
		color: var(--text-secondary);
		font-size: 1.05rem;
		line-height: 1.6;
		max-width: 34rem;
	}

	.hero__actions {
		display: flex;
		justify-content: center;
		margin-top: 0.5rem;
	}

	.section {
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	.section__intro {
		max-width: 600px;
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
		text-align: center;
		margin: 0 auto;
	}

	.section__intro h2 {
		font-size: clamp(1.5rem, 3vw, 1.875rem);
	}

	.section__intro p {
		color: var(--text-secondary);
		font-size: 1.05rem;
		line-height: 1.6;
	}

	.use-case-list {
		list-style: none;
		padding: 0;
		margin: 0;
		display: grid;
		gap: 0.75rem;
		max-width: 600px;
		margin: 0 auto;
	}

	.use-case-list li {
		padding: 1rem 1.25rem;
		border-radius: var(--radius);
		background: var(--surface);
		border: 1px solid var(--border-subtle);
		color: var(--text-secondary);
		position: relative;
		padding-left: 2.25rem;
		transition: border-color 0.15s ease, transform 0.2s ease;
	}

	.use-case-list li:hover {
		border-color: var(--border-strong);
		transform: translateY(-1px);
	}

	.use-case-list li::before {
		content: '';
		position: absolute;
		left: 1rem;
		top: 50%;
		transform: translateY(-50%);
		width: 6px;
		height: 6px;
		border-radius: 50%;
		background: var(--primary);
	}

	.steps {
		display: grid;
		gap: 1.5rem;
		grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
	}

	.step {
		padding: 1.5rem;
		border-radius: var(--radius);
		background: var(--surface);
		border: 1px solid var(--border-subtle);
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
		position: relative;
		transition: border-color 0.15s ease, transform 0.2s ease;
	}

	.step:hover {
		transform: translateY(-2px);
		border-color: var(--border-strong);
	}

	.step h3 {
		font-family: var(--font-body);
		font-size: 1.0625rem;
		margin: 0;
		font-weight: 600;
		color: var(--text-primary);
	}

	.step p {
		color: var(--text-secondary);
		line-height: 1.5;
		margin: 0;
		font-size: 0.95rem;
	}

	.testimonial-section {
		gap: 0;
	}

	.final-cta {
		text-align: center;
		padding: 3rem 1.5rem;
		background:
			radial-gradient(
				100% 50% at 50% 50%,
				var(--primary-soft-bg) 0%,
				transparent 100%
			),
			var(--background);
		width: 100vw;
		margin-left: 50%;
		transform: translateX(-50%);
		position: relative;
		border-top: none;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1.5rem;
	}

	.final-cta::before {
		content: '';
		position: absolute;
		inset: 0;
		background: var(--grain-pattern);
		opacity: 0.04;
		pointer-events: none;
	}

	.final-cta .section__intro {
		gap: 1rem;
		position: relative;
		z-index: 1;
	}

	.final-cta .section__intro h2 {
		font-size: clamp(1.25rem, 3vw, 1.75rem);
	}

	@media (max-width: 640px) {
		.shell {
			gap: 3rem;
		}

		.hero {
			padding-top: 1rem;
		}

		.section {
			gap: 1.5rem;
		}
	}
</style>

