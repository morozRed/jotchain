				))}
			</div>
		</section>

		<section class="section section--audience" id="audience">
			<div class="section__intro">
				<h2>Loved by engineers and product managers</h2>
				<p>
					From individual contributors to team leads, JotChain helps technical professionals
					stay prepared and communicate clearly.
				</p>
			</div>
			<div class="audience">
				{audience.map((persona) => (
					<article class="persona">
						<header>
							{/* <span class="persona__avatar" aria-hidden="true"></span> */}
							<h3>{persona.name}</h3>
						</header>
						<p>{persona.note}</p>
					</article>
				))}
			</div>
			<div class="commitments">
				{commitments.map((item) => (
					<div class="commitment">
						<h3>{item.title}</h3>
						<p>{item.description}</p>
					</div>
				))}
			</div>
		</section>

		<section class="section section--pricing" id="pricing">
			<div class="section__intro">
				<h2>Start with a 14-day trial, stay for the momentum</h2>
				<p>
					Try every workflow free for two weeks. When you&apos;re ready to keep the streak going, choose the monthly or yearly plan that fits best.
				</p>
			</div>
			<div class="pricing">
				{pricing.map((plan) => (
					<article class={`pricing-card${plan.highlighted ? ' pricing-card--highlighted' : ''}`}>
						<header>
							<div class="pricing-card__header-row">
								<h3>{plan.name}</h3>
								{plan.badge && <span class="pricing-card__badge">{plan.badge}</span>}
							</div>
							{plan.price && <span class="pricing-card__price">{plan.price}</span>}
							{plan.subtitle && <span class="pricing-card__subtitle">{plan.subtitle}</span>}
							<p>{plan.tagline}</p>
						</header>
						<ul>
							{plan.details.map((detail) => (
								<li>{detail}</li>
							))}
						</ul>
						<a class="button button--plan" href={plan.href ?? '#cta'}>{plan.cta}</a>
					</article>
				))}
			</div>
			<p class="pricing__note">
				Need something more bespoke for your team? Reach out at <a href="mailto:grig@jotchain.com"
					>grig@jotchain.com</a
				>.
			</p>
		</section>

		<section class="cta" id="cta">
			<div class="cta__content">
				<h2>Ready to get ahold of your context again?</h2>
				<p>
					Join engineers and managers using JotChain to log daily work, receive AI summaries,
					and walk into every stand-up prepared.
				</p>
				<div class="cta__actions">
					<a class="button button--primary" href={appSignupUrl}>Start free trial</a>
					<a class="cta__link" href={appSigninUrl}>Log in</a>
					<a class="cta__link" href="mailto:grig@jotchain.com">Talk with us</a>
				</div>
				<span class="cta__meta">14-day free trial · No credit card required</span>
			</div>
		</section>

		<script type="module">
			const initHeroPlaceholder = () => {
				const el = document.querySelector('[data-hero-placeholder]');
				if (!el) return;

				const phrases = ['X posts', 'blog posts', 'performance reviews', 'meeting prep', 'executive updates'];
				const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)');
				let index = 0;
				let timeoutId;

				const schedule = (fn, delay) => {
					timeoutId = window.setTimeout(() => {
						timeoutId = undefined;
						fn();
					}, delay);
				};

				const typePhrase = () => {
					const phrase = phrases[index];
					let charIndex = 0;

					const typeNext = () => {
						if (!el.isConnected) return;
						el.textContent = phrase.slice(0, charIndex);
						charIndex += 1;

						if (charIndex <= phrase.length) {
							schedule(typeNext, 80);
							return;
						}

						schedule(() => {
							index = (index + 1) % phrases.length;
							typePhrase();
						}, 2000);
					};

					typeNext();
				};

				if (phrases.length === 0) return;

				if (prefersReducedMotion.matches) {
					el.textContent = phrases[0];
					return;
				}

				typePhrase();
			};

			const initHeroNotesDemo = () => {
				const root = document.querySelector('[data-hero-stack]');
				if (!root) return;

				const card = root.querySelector('[data-hero-stack-card]');
				const noteElements = Array.from(root.querySelectorAll('[data-note]'));
				const insightPill = root.querySelector('[data-insight-pill]');
				const insightTitle = root.querySelector('[data-insight-title]');
				const insightBody = root.querySelector('[data-insight-body]');
				const funnelLabel = root.querySelector('[data-funnel-label]');
				const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)');

				if (
					!card ||
					noteElements.length === 0 ||
					!insightPill ||
					!insightTitle ||
					!insightBody ||
					!funnelLabel
				) {
					return;
				}

				const sequences = [
					{
						notes: [
							{
								time: '09:05 AM',
								text: 'Rolled out auth refactor with @Payments. Routing tests are green again.',
								tags: '#shipping · @payments',
							},
							{
								time: '10:42 AM',
								text: 'Met with @Ops to unblock dashboards. Logged follow-up tasks for Friday.',
								tags: '@ops · #analytics',
							},
							{
								time: '12:18 PM',
								text: 'Paired w/ @Sarah on bug bash and closed 5 production issues.',
								tags: '@sarah · #bugbash',
							},
							{
								time: '3:55 PM',
								text: 'Drafted blog on AI digests keeping execs synced. Need adoption metrics tomorrow.',
								tags: '@nico · #content',
							},
						],
						output: {
							pill: 'Executive update',
							title: 'Ready for meeting prep',
							body: 'Auth refactor shipped, payments are stable, and Ops dashboards are online. Next focus: staging DB metrics for Friday review.',
						},
					},
					{
						notes: [
							{
								time: '08:32 AM',
								text: 'Queued cron jobs for data sync, noted spike for @Platform follow-up.',
								tags: '#infra · @platform',
							},
							{
								time: '11:10 AM',
								text: 'Reviewed @Nico onboarding deck; captured edits + CTA tweaks.',
								tags: '@nico · #gtm',
							},
							{
								time: '1:24 PM',
								text: 'Stand-up prep: captured blockers, added @Sarah handoff notes.',
								tags: '#standup · @sarah',
							},
							{
								time: '4:06 PM',
								text: 'Scheduled AI digest for exec review. Confirmed timezone + cadence.',
								tags: '#digests · @leadership',
							},
						],
						output: {
							pill: 'Stand-up recap',
							title: 'Blockers cleared ahead of sync',
							body: 'Cron jobs queued, onboarding deck polished, and digests scheduled. Sarah has context to unblock analytics in tomorrow’s stand-up.',
						},
					},
					{
						notes: [
							{
								time: '09:48 AM',
								text: 'Captured customer rave on AI summaries during @Support office hours.',
								tags: '#voiceofcustomer · @support',
							},
							{
								time: '11:37 AM',
								text: 'Pulled metrics showing 68% faster meeting prep after tagging entries.',
								tags: '#analytics · @revops',
							},
							{
								time: '2:02 PM',
								text: 'Outlined social angles for product launch; highlighted exec-ready digests.',
								tags: '#social · @marketing',
							},
							{
								time: '5:12 PM',
								text: 'Drafted CTA for X post showcasing “log once → reuse everywhere”.',
								tags: '#content · #launch',
							},
						],
						output: {
							pill: 'X post',
							title: 'Log once → reuse everywhere',
							body: 'Multiple daily notes collapse into exec-ready briefs, stand-up recaps, and social copy—no second-guessing what happened.',
						},
					},
				];

				if (sequences.length === 0) return;

				let currentIndex = 0;
				const timers = new Set();

				const clearTimers = () => {
					timers.forEach((timerId) => window.clearTimeout(timerId));
					timers.clear();
				};

				const schedule = (fn, delay = 0) => {
					const id = window.setTimeout(() => {
						timers.delete(id);
						fn();
					}, delay);
					timers.add(id);
					return id;
				};

				const setNotes = (notes) => {
					noteElements.forEach((noteEl, index) => {
						const data = notes[index] ?? notes[notes.length - 1];
						if (!data) return;
						const timeEl = noteEl.querySelector('[data-note-time]');
						const textEl = noteEl.querySelector('[data-note-text]');
						const tagsEl = noteEl.querySelector('[data-note-tags]');
						if (timeEl) timeEl.textContent = data.time;
						if (textEl) textEl.textContent = data.text;
						if (tagsEl) tagsEl.textContent = data.tags;
					});
				};

				const setInsight = (output) => {
					insightPill.textContent = output.pill;
					insightTitle.textContent = output.title;
					insightBody.textContent = output.body;
				};

				const runSequence = () => {
					if (!root.isConnected) {
						clearTimers();
						return;
					}

					const sequence = sequences[currentIndex];
					if (!sequence) return;

					card.classList.remove('is-flipped');
					root.classList.remove('is-reduced');
					setNotes(sequence.notes);
					setInsight(sequence.output);
					funnelLabel.textContent = `Synthesizing ${sequence.notes.length} notes…`;

					const flipDelay = 3600;
					const holdDelay = 5200;

					schedule(() => {
						if (!root.isConnected) return;
						card.classList.add('is-flipped');
						funnelLabel.textContent = 'AI output ready';
					}, flipDelay);

					schedule(() => {
						if (!root.isConnected) return;
						currentIndex = (currentIndex + 1) % sequences.length;
						runSequence();
					}, flipDelay + holdDelay);
				};

				const renderStatic = () => {
					clearTimers();
					const sequence = sequences[0];
					if (!sequence) return;
					root.classList.add('is-reduced');
					card.classList.add('is-flipped');
					setNotes(sequence.notes);
					setInsight(sequence.output);
					funnelLabel.textContent = `Synthesizing ${sequence.notes.length} notes`;
				};

				const start = () => {
					clearTimers();
					if (prefersReducedMotion.matches) {
						renderStatic();
						return;
					}

					card.classList.remove('is-flipped');
					root.classList.remove('is-reduced');
					currentIndex = 0;
					runSequence();
				};

				prefersReducedMotion.addEventListener('change', () => {
					start();
				});

				start();
			};

			const initLandingPage = () => {
				initHeroPlaceholder();
				initHeroNotesDemo();
			};

			if (document.readyState === 'loading') {
				document.addEventListener('DOMContentLoaded', initLandingPage, { once: true });
			} else {
				initLandingPage();
			}
		</script>

		<Footer />
	</div>
</Layout>

<style>
