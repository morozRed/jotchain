---
import Layout from '../layouts/Layout.astro';

const features = [
	{
		label: 'Capture wins fast',
		title: 'Quick note capture that keeps up with your day',
		description:
			'Record accomplishments, 1-1 feedback, and customer updates in seconds. JotChain auto-tags every note so nothing gets lost.',
	},
	{
		label: 'AI summaries on demand',
		title: 'Performance reviews and stand-ups in 10 seconds',
		description:
			'Generate review packets, stand-up updates, and interview prep with a single click. Summaries keep your voice while highlighting real impact.',
	},
	{
		label: 'Automated digests',
		title: 'Daily and weekly recaps delivered where you work',
		description:
			'Inbox and Slack digests arrive before stand-up, exec syncs, or deal reviews so you walk in prepared every time.',
	},
	{
		label: 'Security you can trust',
		title: 'Encrypted storage with audit-ready controls',
		description:
			'Encryption at rest, role-based access, and export logs make it safe to centralize sensitive feedback and wins.',
	},
];

const workflow = [
	{
		step: '01',
		title: 'Capture wins as they happen',
		description:
			'Drop a note right after a productive meeting or launch. Tags, templates, and search make everything easy to find later.',
	},
	{
		step: '02',
		title: 'Let AI connect the dots',
		description:
			'Overnight, JotChain chains context across product, engineering, and revenue work to surface the leadership signals that matter.',
	},
	{
		step: '03',
		title: 'Show up ready for every conversation',
		description:
			'Wake up to daily digests, weekly recaps, and resume-ready exports so reviews, stand-ups, and interviews take minutes—not hours.',
	},
];

const audience = [
	{
		name: 'Alex · Engineering Manager',
		note: '"JotChain saved me hours during review season. The weekly summaries sound like me, just sharper."',
	},
	{
		name: 'Jordan · Tech Lead',
		note: '"Daily digests hit my inbox before stand-up so I bring the right metrics and blockers every time."',
	},
	{
		name: 'Maya · Product Lead',
		note: '"Finally a tool that connects product launches to revenue wins. Exec updates practically write themselves."',
	},
];

const commitments = [
	{
		title: 'Always available',
		description:
			'99% uptime targets with proactive monitoring. SSO and OAuth keep logins painless but protected.',
	},
	{
		title: 'Scale at your pace',
		description:
			'Start with a 14-day trial and keep the same $9/month plan as you grow. Invite collaborators when team workspaces roll out.',
	},
	{
		title: 'Transparent AI',
		description:
			'Every summary includes source notes and edit controls so you keep a human in the loop and avoid hallucinations.',
	},
];

const pricing = [
	{
		name: 'JotChain Pro',
		price: '$9 / month',
		tagline: '14-day free trial · cancel anytime',
		details: ['Unlimited notes & AI summaries', 'Inbox + Slack digests', 'Resume-ready exports'],
		cta: 'Start 14-day trial',
		highlighted: true,
	},
];
---

<Layout
	title="JotChain · AI Career OS for Modern Leaders"
	description="JotChain helps product, engineering, and revenue leaders capture wins, generate AI summaries, and arrive prepared for every review."
>
	<div class="shell">
		<header class="nav">
			<div class="brand">
				<span class="brand__glyph"></span>
				<span class="brand__name">JotChain</span>
			</div>
			<nav class="nav__links">
				<a href="#features">Product</a>
				<a href="#workflow">Workflow</a>
				<a href="#audience">Who it’s for</a>
				<a href="#pricing">Pricing</a>
			</nav>
			<div class="nav__actions">
				<a class="nav__ghost" href="#pricing">View pricing</a>
				<a class="nav__primary" href="#cta">Start 14-day trial</a>
			</div>
		</header>

		<section class="hero" id="top">
			<div class="hero__content">
				<span class="hero__pill">14-day free trial · No credit card required</span>
				<h1>Your AI career OS for modern leaders</h1>
				<p>
					Stop combing through scattered docs. JotChain captures every win, chains your notes overnight,
					and delivers ready-to-send summaries for reviews, stand-ups, and interviews.
				</p>
				<div class="hero__actions">
					<a class="button button--primary" href="#cta">Start free trial</a>
					<a class="button button--secondary" href="#workflow">See how it works</a>
				</div>
				<ul class="hero__metrics">
					<li>
						<strong>80%</strong>
						<span>Time saved prepping performance reviews</span>
					</li>
					<li>
						<strong>10 seconds</strong>
						<span>To generate review-ready AI summaries</span>
					</li>
					<li>
						<strong>99% uptime</strong>
						<span>Reliability for the notes you cannot afford to lose</span>
					</li>
				</ul>
			</div>
			<div class="hero__visual">
				<div class="panel panel--standup">
					<header>
						<span class="chip chip--glow">Daily stand-up draft</span>
						<span class="panel__time">7:00 AM · PST</span>
					</header>
					<ul>
						<li>
							<span class="dot dot--accent"></span>
							<span>Shipped usage-based billing — increased NRR by 6.4%.</span>
						</li>
						<li>
							<span class="dot"></span>
							<span>Coaching note: Casey unblocked migrations; flag for recognition.</span>
						</li>
						<li>
							<span class="dot"></span>
							<span>Upcoming risk: API latency trending up; include mitigation in next exec sync.</span>
						</li>
					</ul>
					<footer>
						<span class="panel__footer-label">Sources</span>
						<div class="panel__tags">
							<span class="tag">1-1 Note</span>
							<span class="tag">Release Retro</span>
							<span class="tag">Accomplishment</span>
						</div>
					</footer>
				</div>
				<div class="panel panel--summary">
					<header>
						<span class="chip">Monthly recap</span>
						<span class="panel__time">Ready to export · PDF & Markdown</span>
					</header>
					<p>
						JotChain highlighted 12 leadership signals, 3 coaching moments, and 5 metrics to headline
						in your next review or resume refresh.
					</p>
					<div class="panel__progress">
						<span style="width: 78%"></span>
					</div>
					<div class="panel__actions">
						<button type="button">Send to stakeholders</button>
						<button type="button" class="ghost">Open in workspace</button>
					</div>
				</div>
			</div>
		</section>

		<section class="section section--features" id="features">
			<div class="section__intro">
				<h2>Everything you need to track your impact</h2>
				<p>
					Purpose-built for cross-functional leaders who move fast and need to show results without chasing
					old notes.
				</p>
			</div>
			<div class="feature-grid">
				{features.map((feature) => (
					<article class="feature-card">
						<span class="feature-card__label">{feature.label}</span>
						<h3>{feature.title}</h3>
						<p>{feature.description}</p>
					</article>
				))}
			</div>
		</section>

		<section class="section section--workflow" id="workflow">
			<div class="section__intro">
				<h2>Your daily workflow, simplified</h2>
				<p>
					Three steps to ensure you never forget an accomplishment—or scramble before a review—again.
				</p>
			</div>
			<div class="workflow">
				{workflow.map((item) => (
					<div class="workflow__step">
						<span class="workflow__index">{item.step}</span>
						<h3>{item.title}</h3>
						<p>{item.description}</p>
					</div>
				))}
			</div>
		</section>

		<section class="section section--audience" id="audience">
			<div class="section__intro">
				<h2>Built for high performers across the org chart</h2>
				<p>
					Leaders across engineering, product, and revenue already rely on JotChain to stay prepared and
					communicate impact with confidence.
				</p>
			</div>
			<div class="audience">
				{audience.map((persona) => (
					<article class="persona">
						<header>
							<span class="persona__avatar" aria-hidden="true"></span>
							<h3>{persona.name}</h3>
						</header>
						<p>{persona.note}</p>
					</article>
				))}
			</div>
			<div class="commitments">
				{commitments.map((item) => (
					<div class="commitment">
						<h3>{item.title}</h3>
						<p>{item.description}</p>
					</div>
				))}
			</div>
		</section>

		<section class="section section--pricing" id="pricing">
			<div class="section__intro">
				<h2>Start with a 14-day trial, continue at $9/mo</h2>
				<p>
					Enjoy full product access during your trial. When it ends, stay on JotChain Pro for $9/month and
					keep every note, summary, and automation active.
				</p>
			</div>
			<div class="pricing">
				{pricing.map((plan) => (
					<article class={`pricing-card${plan.highlighted ? ' pricing-card--highlighted' : ''}`}>
						<header>
							<h3>{plan.name}</h3>
							{plan.price && <span class="pricing-card__price">{plan.price}</span>}
							<p>{plan.tagline}</p>
						</header>
						<ul>
							{plan.details.map((detail) => (
								<li>{detail}</li>
							))}
						</ul>
						<a class="button button--plan" href="#cta">{plan.cta}</a>
					</article>
				))}
			</div>
			<p class="pricing__note">
				Need something more bespoke for your team? Reach out at <a href="mailto:founder@jotchain.com"
					>founder@jotchain.com</a
				>.
			</p>
		</section>

		<section class="cta" id="cta">
			<div class="cta__content">
				<h2>Ready to ace your next review?</h2>
				<p>
					Join modern leaders using AI to track accomplishments, stay ready for every meeting, and accelerate
					their careers.
				</p>
				<form class="cta__form">
					<label class="sr-only" for="email">Email</label>
					<input id="email" type="email" placeholder="name@company.com" required />
					<button type="submit">Start free trial</button>
				</form>
				<span class="cta__meta">14 days free · No credit card required · Cancel anytime</span>
			</div>
		</section>

		<footer class="footer">
			<div class="brand">
				<span class="brand__glyph"></span>
				<span class="brand__name">JotChain</span>
			</div>
			<div class="footer__meta">
				<span>© {new Date().getFullYear()} JotChain. AI career OS for tech leads.</span>
				<nav>
					<a href="#features">Product</a>
					<a href="#workflow">Workflow</a>
					<a href="#pricing">Pricing</a>
					<a href="mailto:founder@jotchain.com">Contact</a>
				</nav>
			</div>
		</footer>
	</div>
</Layout>

<style>
	.shell {
		width: 100%;
		max-width: var(--max-width);
		display: flex;
		flex-direction: column;
		gap: 6rem;
	}

	.nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 1.5rem;
		padding: 0.75rem 1.2rem;
		border: 1px solid var(--stroke-faint);
		border-radius: 999px;
		backdrop-filter: blur(22px);
		background: rgba(10, 13, 22, 0.78);
		position: sticky;
		top: 1.5rem;
		z-index: 5;
		box-shadow: 0 18px 42px -32px rgba(7, 10, 18, 0.75);
	}

	.brand {
		display: inline-flex;
		align-items: center;
		gap: 0.65rem;
		font-weight: 600;
		letter-spacing: -0.01em;
	}

	.brand__glyph {
		width: 28px;
		height: 28px;
		border-radius: 10px;
		background: rgba(129, 140, 248, 0.85);
		box-shadow: 0 4px 14px rgba(129, 140, 248, 0.25);
	}

	.brand__name {
		font-size: 1rem;
	}

	.nav__links {
		display: none;
		gap: 1.5rem;
		font-size: 0.95rem;
		color: var(--text-secondary);
	}

	.nav__links a {
		opacity: 0.85;
	}

	.nav__actions {
		display: inline-flex;
		gap: 0.75rem;
		align-items: center;
	}

	.nav__ghost,
	.nav__primary {
		padding: 0.5rem 1.2rem;
		border-radius: 999px;
		font-size: 0.92rem;
		font-weight: 500;
	}

	.nav__ghost {
		border: 1px solid rgba(148, 163, 184, 0.25);
		color: var(--text-secondary);
		background: rgba(15, 18, 27, 0.35);
	}

	.nav__primary {
		background: var(--accent-primary);
		color: #05060a;
		box-shadow: 0 10px 20px -12px rgba(129, 140, 248, 0.5);
	}

	.hero {
		display: grid;
		gap: 3rem;
		align-items: center;
	}

	.hero__content {
		display: flex;
		flex-direction: column;
		gap: 1.75rem;
	}

	.hero__pill {
		display: inline-flex;
		padding: 0.45rem 0.9rem;
		border-radius: 999px;
		font-size: 0.75rem;
		letter-spacing: 0.08em;
		text-transform: uppercase;
		color: rgba(148, 163, 184, 0.8);
		background: rgba(148, 163, 184, 0.08);
		border: 1px solid rgba(148, 163, 184, 0.16);
		align-self: flex-start;
	}

	.hero h1 {
		font-size: clamp(2.5rem, 5vw, 3.6rem);
	}

	.hero p {
		color: var(--text-secondary);
		font-size: 1.05rem;
		line-height: 1.65;
		max-width: 34rem;
	}

	.hero__actions {
		display: flex;
		flex-wrap: wrap;
		gap: 0.9rem;
	}

	.button {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		gap: 0.4rem;
		border-radius: 12px;
		padding: 0.85rem 1.55rem;
		font-weight: 500;
		font-size: 0.96rem;
		border: 1px solid transparent;
		transition: transform 0.2s ease, box-shadow 0.2s ease, border-color 0.2s ease;
	}

	.button--primary {
		background: var(--accent-primary);
		color: #05060a;
		box-shadow: 0 15px 32px -18px rgba(129, 140, 248, 0.55);
	}

	.button--primary:hover {
		transform: translateY(-2px);
	}

	.button--secondary {
		border-color: rgba(148, 163, 184, 0.22);
		background: rgba(12, 16, 26, 0.7);
		color: rgba(226, 232, 240, 0.85);
	}

	.hero__metrics {
		display: grid;
		gap: 1.4rem;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		padding: 0;
		margin: 0;
		list-style: none;
	}

	.hero__metrics li {
		display: flex;
		flex-direction: column;
		gap: 0.3rem;
		padding: 1.1rem 1.2rem;
		background: rgba(11, 15, 24, 0.78);
		border-radius: 18px;
		border: 1px solid rgba(148, 163, 184, 0.12);
	}

	.hero__metrics strong {
		font-size: 1.35rem;
	}

	.hero__metrics span {
		color: var(--text-secondary);
		font-size: 0.95rem;
		line-height: 1.4;
	}

	.hero__visual {
		position: relative;
		display: grid;
		gap: 1.5rem;
	}

	.panel {
		border-radius: 18px;
		padding: 1.6rem;
		background: rgba(11, 15, 24, 0.92);
		border: 1px solid rgba(129, 140, 248, 0.14);
		box-shadow: 0 24px 48px -36px rgba(6, 9, 16, 0.9);
		backdrop-filter: blur(20px);
	}

	.panel header {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 1rem;
		margin-bottom: 1.1rem;
	}

	.chip {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		min-width: 160px;
		padding: 0.45rem 1.1rem;
		border-radius: 999px;
		font-size: 0.7rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.12em;
		background: rgba(17, 22, 34, 0.92);
		border: 1px solid rgba(129, 140, 248, 0.35);
		color: rgba(226, 232, 240, 0.85);
		box-shadow: 0 12px 28px -22px rgba(129, 140, 248, 0.5);
	}

	.chip--glow {
		background: rgba(22, 32, 32, 0.92);
		border-color: rgba(45, 212, 191, 0.45);
		color: rgba(204, 255, 244, 0.9);
	}

	.panel__time {
		font-size: 0.76rem;
		color: rgba(203, 213, 225, 0.65);
	}

	.panel ul {
		list-style: none;
		margin: 0;
		padding: 0;
		display: flex;
		flex-direction: column;
		gap: 0.85rem;
		color: var(--text-secondary);
		font-size: 0.95rem;
		line-height: 1.5;
	}

	.dot {
		width: 10px;
		height: 10px;
		border-radius: 999px;
		background: rgba(148, 163, 184, 0.6);
		box-shadow: 0 0 0 4px rgba(148, 163, 184, 0.08);
		margin-right: 0.6rem;
	}

	.dot--accent {
		background: var(--accent-secondary);
		box-shadow: 0 0 0 4px rgba(23, 227, 197, 0.1);
	}

	.panel ul li {
		display: flex;
		align-items: flex-start;
	}

	.panel ul li span:last-child {
		flex: 1;
	}

	.panel footer {
		display: flex;
		flex-direction: column;
		gap: 0.55rem;
		margin-top: 1.5rem;
	}

	.panel__footer-label {
		font-size: 0.75rem;
		text-transform: uppercase;
		letter-spacing: 0.12em;
		color: rgba(203, 213, 225, 0.55);
	}

	.panel__tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
	}

	.tag {
		padding: 0.35rem 0.7rem;
		border-radius: 999px;
		background: rgba(148, 163, 184, 0.12);
		color: rgba(203, 213, 225, 0.8);
		font-size: 0.78rem;
	}

	.panel--summary p {
		color: var(--text-secondary);
		line-height: 1.6;
	}

	.panel__progress {
		margin: 1.2rem 0 1.4rem;
		width: 100%;
		height: 6px;
		border-radius: 999px;
		background: rgba(148, 163, 184, 0.15);
		overflow: hidden;
	}

	.panel__progress span {
		display: block;
		height: 100%;
		background: var(--accent-secondary);
	}

	.panel__actions {
		display: flex;
		flex-wrap: wrap;
		gap: 0.75rem;
	}

	.panel__actions button {
		padding: 0.65rem 1.3rem;
		border-radius: 12px;
		border: none;
		font-weight: 500;
		background: rgba(129, 140, 248, 0.16);
		color: var(--text-primary);
		cursor: pointer;
	}

	.panel__actions button.ghost {
		background: rgba(148, 163, 184, 0.12);
		color: var(--text-secondary);
	}

	.section {
		display: flex;
		flex-direction: column;
		gap: 3rem;
	}

	.section__intro {
		max-width: 44rem;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.section__intro p {
		color: var(--text-secondary);
		font-size: 1.05rem;
		line-height: 1.7;
	}

	.feature-grid {
		display: grid;
		gap: 1.8rem;
		grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
	}

	.feature-card {
		padding: 1.8rem;
		border-radius: 20px;
		background: rgba(10, 14, 24, 0.82);
		border: 1px solid rgba(148, 163, 184, 0.1);
		display: flex;
		flex-direction: column;
		gap: 1.1rem;
		box-shadow: inset 0 1px 0 rgba(148, 163, 184, 0.06);
	}

	.feature-card__label {
		font-size: 0.8rem;
		text-transform: uppercase;
		letter-spacing: 0.12em;
		color: rgba(165, 180, 252, 0.78);
	}

	.feature-card h3 {
		font-size: 1.25rem;
	}

	.feature-card p {
		color: var(--text-secondary);
		line-height: 1.6;
	}

	.workflow {
		display: grid;
		gap: 1.6rem;
		grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
	}

	.workflow__step {
		padding: 1.9rem;
		border-radius: 20px;
		background: rgba(18, 22, 35, 0.6);
		border: 1px solid rgba(124, 125, 254, 0.15);
		display: flex;
		flex-direction: column;
		gap: 0.9rem;
		position: relative;
		overflow: hidden;
	}

	.workflow__step::after {
		content: '';
		position: absolute;
		inset: 0;
		background: rgba(129, 140, 248, 0.12);
		opacity: 0;
		transition: opacity 0.3s ease;
	}

	.workflow__step:hover::after {
		opacity: 1;
	}

	.workflow__index {
		font-size: 0.8rem;
		letter-spacing: 0.12em;
		text-transform: uppercase;
		color: rgba(203, 213, 225, 0.45);
	}

	.workflow__step h3 {
		font-size: 1.3rem;
	}

	.workflow__step p {
		color: var(--text-secondary);
		line-height: 1.6;
	}

	.section--audience {
		gap: 2.5rem;
	}

	.audience {
		display: grid;
		gap: 1.5rem;
		grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
	}

	.persona {
		padding: 1.8rem;
		border-radius: 20px;
		background: rgba(12, 14, 22, 0.55);
		border: 1px solid rgba(124, 125, 254, 0.14);
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.persona header {
		display: flex;
		align-items: center;
		gap: 0.9rem;
	}

	.persona__avatar {
		width: 40px;
		height: 40px;
		border-radius: 12px;
		background: rgba(129, 140, 248, 0.9);
		box-shadow: 0 8px 24px -12px rgba(129, 140, 248, 0.55);
	}

	.persona p {
		color: var(--text-secondary);
		line-height: 1.6;
	}

	.commitments {
		display: grid;
		gap: 1.6rem;
		grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
	}

