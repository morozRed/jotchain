---
import Layout from '../layouts/Layout.astro';

const features = [
	{
		label: 'Daily log',
		title: 'Capture wins, blockers, and context in seconds',
		description:
			'Compose a plain-text note with an optional tag at the end of each day. Submit instantly with Command/Ctrl + Enter.',
	},
	{
		label: 'Email digests',
		title: 'AI turns your notes into meeting-ready briefs',
		description:
			'We compile the entries you logged and generate clear summaries with sections and stats, ready to skim before you share updates.',
	},
	{
		label: 'Flexible schedules',
		title: 'Control cadence, timezone, and lead time',
		description:
			'Pick daily, weekly, monthly, or custom intervals, choose the summary window, and decide how many minutes before the meeting your email should land.',
	},
	{
		label: 'Timeline & streaks',
		title: 'Review your history without losing momentum',
		description:
			'Scroll a per-day timeline, see your current streak, and tidy up entries from the same dashboard—on desktop or phone.',
	},
];

const workflow = [
	{
		step: '01',
		title: 'Log what you worked on',
		description:
			'Capture wins, blockers, and context at the end of your day. Add an optional tag to keep related work together.',
	},
	{
		step: '02',
		title: 'Schedule when summaries go out',
		description:
			'Create email notifications with the cadence, timezone, lookback window, and lead time that match your stand-ups and reviews.',
	},
	{
		step: '03',
		title: 'Skim the email before the meeting',
		description:
			'AI assembles your recent notes into sections and stats so you can walk in prepared without rewriting anything.',
	},
];

const audience = [
	{
		name: 'Nico · Engineering Manager',
		note: '"Weekly summaries land before my 1:1s so I already know what each person shipped."',
	},
	{
		name: 'Chris · Software Engineer',
		note: '"Daily digests hit my inbox before stand-up. No more scrambling to remember yesterday."',
	},
	{
		name: 'Gregory · Tech Lead',
		note: '"Monthly recaps make status reports painless. The AI pulls the highlights straight from my notes."',
	},
];

const appSignupUrl = 'https://app.jotchain.com/sign_up';
const appSigninUrl = 'https://app.jotchain.com/sign_in';

const pricing = [
	{
		name: 'Monthly',
		price: '$6 / month',
		tagline: '14-day free trial · cancel anytime',
		details: [
			'Unlimited entries & AI summaries',
			'Email delivery before meetings',
			'Daily, weekly, monthly, and custom cadences',
			'Works great on desktop and mobile',
		],
		cta: 'Start 14-day trial',
		href: appSignupUrl,
		highlighted: false,
	},
	{
		name: 'Yearly',
		price: '$36 / year',
		tagline: '14-day free trial · cancel anytime',
		subtitle: 'Just $3/month, billed annually',
		details: [
			'Unlimited entries & AI summaries',
			'Email delivery before meetings',
			'Daily, weekly, monthly, and custom cadences',
			'Works great on desktop and mobile',
		],
		cta: 'Start 14-day trial',
		href: appSignupUrl,
		highlighted: true,
		badge: 'Best Value · Save 50%',
	},
];

const commitments = [
	{
		title: 'Private by default',
		description:
			'Your notes stay in your workspace. We only send content to our AI provider to generate your summary and don\'t use it for anything else.',
	},
	{
		title: 'Try first, pay later',
		description:
			'Test every workflow with a 14-day free trial. Keep your timeline going for $6/month or $36/year when you\'re ready.',
	},
	{
		title: 'Grounded summaries',
		description:
			'Emails include the time window, key stats, and sections pulled directly from your entries so you can trust what you share.',
	},
];
---

<Layout
	title="JotChain · AI stand-up summaries from your notes"
	description="Log daily progress, schedule AI email digests, and walk into every meeting prepared."
>
	<div class="shell">
		<header class="nav">
			<div class="brand">
				<span class="brand__glyph"></span>
				<span class="brand__name">JotChain</span>
			</div>
			<nav class="nav__links">
				<a href="#features">Product</a>
				<a href="#workflow">Workflow</a>
				<a href="#audience">Who it's for</a>
				<a href="#pricing">Pricing</a>
			</nav>
			<div class="nav__actions">
				<a class="nav__primary" href={appSignupUrl}>Start now</a>
			</div>
		</header>

		<section class="hero" id="top">
			<div class="hero__content">
				<span class="hero__pill">14-day free trial · No credit card required</span>
				<h1>Your work notes are everywhere. </br> Your context is nowhere.</h1>
				<p>
					Log what you did in 2 minutes. Get AI-generated summaries before every meeting.
					JotChain turns your daily work into clear, professional updates for stand-ups, syncs, and reviews.
				</p>
				<div class="hero__actions">
					<a class="button button--primary" href={appSignupUrl}>Start free trial</a>
					<a class="button button--secondary" href="#workflow">See how it works</a>
				</div>
				<ul class="hero__metrics">
					<li>
						<strong>2 minutes</strong>
						<span>Daily logging takes less time than your coffee break</span>
					</li>
					<li>
						<strong>30 mins before</strong>
						<span>Summaries arrive in your inbox before each meeting</span>
					</li>
					<li>
						<strong>Zero friction</strong>
						<span>Simple text field, no complex forms or setup</span>
					</li>
				</ul>
			</div>
			<div class="hero__visual">
				<div class="panel panel--standup">
					<header>
						<span class="chip chip--glow">Your daily stand-up prep</span>
						<span class="panel__time">8:30 AM · Inbox</span>
					</header>
					<ul>
						<li class="flex items-center">
							<span class="dot dot--accent"></span>
							<span>Finished API authentication refactor</span>
						</li>
						<li class="flex items-center">
							<span class="dot"></span>
							<span>Fixed bug in payment flow</span>
						</li>
						<li class="flex items-center">
							<span class="dot"></span>
							<span>Code reviewed 3 PRs for Sarah's team</span>
						</li>
					</ul>
					<footer>
						<span class="panel__footer-label">Based on your entries</span>
						<div class="panel__tags">
							<span class="tag">Yesterday</span>
							<span class="tag">Engineering</span>
						</div>
					</footer>
				</div>
				<div class="panel panel--summary">
					<header>
						<span class="chip">Weekly sync</span>
						<span class="panel__time">Friday 1:30 PM · Inbox</span>
					</header>
					<p>
						This week you completed the auth refactor, fixed 5 production bugs,
						and reviewed 12 PRs. Blocker: database performance on staging needs attention.
					</p>
					<div class="panel__progress">
						<span style="width: 78%"></span>
					</div>
					<div class="panel__actions">
						<button type="button">Ready for meeting ✓</button>
						<button type="button" class="ghost">View all entries</button>
					</div>
				</div>
			</div>
		</section>

		<section class="section section--features" id="features">
			<div class="section__intro">
				<h2>Everything you need to prep for meetings</h2>
				<p>
					Purpose-built for engineers and managers who want to show up prepared
					without spending hours trying to remember what they did.
				</p>
			</div>
			<div class="feature-grid">
				{features.map((feature) => (
					<article class="feature-card">
						<span class="feature-card__label">{feature.label}</span>
						<h3>{feature.title}</h3>
						<p>{feature.description}</p>
					</article>
				))}
			</div>
		</section>

		<section class="section section--workflow" id="workflow">
			<div class="section__intro">
				<h2>How it works</h2>
				<p>
					Three simple steps to never blank in a meeting again.
					It takes 2 minutes a day and runs on autopilot.
				</p>
			</div>
			<div class="workflow">
				{workflow.map((item) => (
					<div class="workflow__step">
						<span class="workflow__index">{item.step}</span>
						<h3>{item.title}</h3>
						<p>{item.description}</p>
					</div>
				))}
			</div>
		</section>

		<section class="section section--audience" id="audience">
			<div class="section__intro">
				<h2>Loved by engineers and product managers</h2>
				<p>
					From individual contributors to team leads, JotChain helps technical professionals
					stay prepared and communicate clearly.
				</p>
			</div>
			<div class="audience">
				{audience.map((persona) => (
					<article class="persona">
						<header>
							{/* <span class="persona__avatar" aria-hidden="true"></span> */}
							<h3>{persona.name}</h3>
						</header>
						<p>{persona.note}</p>
					</article>
				))}
			</div>
			<div class="commitments">
				{commitments.map((item) => (
					<div class="commitment">
						<h3>{item.title}</h3>
						<p>{item.description}</p>
					</div>
				))}
			</div>
		</section>

		<section class="section section--pricing" id="pricing">
			<div class="section__intro">
				<h2>Start with a 14-day trial, stay for the momentum</h2>
				<p>
					Try every workflow free for two weeks. When you&apos;re ready to keep the streak going, choose the monthly or yearly plan that fits best.
				</p>
			</div>
			<div class="pricing">
				{pricing.map((plan) => (
					<article class={`pricing-card${plan.highlighted ? ' pricing-card--highlighted' : ''}`}>
						<header>
							<div class="pricing-card__header-row">
								<h3>{plan.name}</h3>
								{plan.badge && <span class="pricing-card__badge">{plan.badge}</span>}
							</div>
							{plan.price && <span class="pricing-card__price">{plan.price}</span>}
							{plan.subtitle && <span class="pricing-card__subtitle">{plan.subtitle}</span>}
							<p>{plan.tagline}</p>
						</header>
						<ul>
							{plan.details.map((detail) => (
								<li>{detail}</li>
							))}
						</ul>
						<a class="button button--plan" href={plan.href ?? '#cta'}>{plan.cta}</a>
					</article>
				))}
			</div>
			<p class="pricing__note">
				Need something more bespoke for your team? Reach out at <a href="mailto:grig@jotchain.com"
					>grig@jotchain.com</a
				>.
			</p>
		</section>

		<section class="cta" id="cta">
			<div class="cta__content">
				<h2>Ready to get ahold of your context again?</h2>
				<p>
					Join engineers and managers using JotChain to log daily work, receive AI summaries,
					and walk into every stand-up prepared.
				</p>
				<div class="cta__actions">
					<a class="button button--primary" href={appSignupUrl}>Start free trial</a>
					<a class="cta__link" href={appSigninUrl}>Log in</a>
					<a class="cta__link" href="mailto:grig@jotchain.com">Talk with us</a>
				</div>
				<span class="cta__meta">14-day free trial · No credit card required</span>
			</div>
		</section>

		<footer class="footer">
			<div class="brand">
				<span class="brand__glyph"></span>
				<span class="brand__name">JotChain</span>
			</div>
			<div class="footer__meta">
				<span>© {new Date().getFullYear()} JotChain. Never blank in meetings again.</span>
				<nav>
					<a href="#features">Product</a>
					<a href="#workflow">Workflow</a>
					<a href="#pricing">Pricing</a>
					<a href="mailto:grig@jotchain.com">Contact</a>
					<a href="/privacy">Privacy</a>
					<a href="/terms">Terms</a>
				</nav>
			</div>
		</footer>
	</div>
</Layout>

<style>
	.shell {
		width: 100%;
		max-width: var(--max-width);
		display: flex;
		flex-direction: column;
		gap: 7rem;
	}

	.nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 1.5rem;
		padding: 0.75rem 1.2rem;
		border: 1px solid var(--stroke-faint);
		border-radius: 999px;
		backdrop-filter: blur(22px);
		background: rgba(10, 13, 22, 0.78);
		position: sticky;
		top: 1.5rem;
		z-index: 5;
		box-shadow: 0 18px 42px -32px rgba(7, 10, 18, 0.75);
	}

	.brand {
		display: inline-flex;
		align-items: center;
		gap: 0.65rem;
		font-weight: 600;
		letter-spacing: -0.01em;
	}

	.brand__glyph {
		width: 28px;
		height: 28px;
		border-radius: 10px;
		background: url('/favicon.svg') center/cover;
		box-shadow: 0 4px 14px rgba(129, 140, 248, 0.25);
	}

	.brand__name {
		font-size: 1rem;
	}

	.nav__links {
		display: none;
		gap: 1.5rem;
		font-size: 0.95rem;
		color: var(--text-secondary);
	}

	.nav__links a {
		opacity: 0.85;
	}

	.nav__actions {
		display: inline-flex;
		gap: 0.75rem;
		align-items: center;
	}

	.nav__ghost,
	.nav__primary {
		padding: 0.5rem 1.2rem;
		border-radius: 999px;
		font-size: 0.92rem;
		font-weight: 500;
	}

	.nav__ghost {
		border: 1px solid rgba(148, 163, 184, 0.25);
		color: var(--text-secondary);
		background: rgba(15, 18, 27, 0.35);
	}

	.nav__primary {
		background: var(--accent-primary);
		color: #05060a;
		box-shadow: 0 10px 20px -12px rgba(129, 140, 248, 0.5);
	}

	.hero {
		display: grid;
		gap: 3rem;
		align-items: center;
	}

	.hero__content {
		display: flex;
		flex-direction: column;
		gap: 1.75rem;
	}

	.hero__pill {
		display: inline-flex;
		padding: 0.45rem 0.9rem;
		border-radius: 999px;
		font-size: 0.75rem;
		letter-spacing: 0.08em;
		text-transform: uppercase;
		color: rgba(148, 163, 184, 0.8);
		background: rgba(148, 163, 184, 0.08);
		border: 1px solid rgba(148, 163, 184, 0.16);
		align-self: flex-start;
	}

	.hero h1 {
		font-size: clamp(2.5rem, 5vw, 3.6rem);
		line-height: 1.1;
		letter-spacing: -0.03em;
	}

	.hero p {
		color: var(--text-secondary);
		font-size: 1.05rem;
		line-height: 1.65;
		max-width: 34rem;
	}

	.hero__actions {
		display: flex;
		flex-wrap: wrap;
		gap: 0.9rem;
	}

	.button {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		gap: 0.4rem;
		border-radius: 12px;
		padding: 0.85rem 1.55rem;
		font-weight: 500;
		font-size: 0.96rem;
		border: 1px solid transparent;
		transition: transform 0.2s ease, box-shadow 0.2s ease, border-color 0.2s ease;
	}

	.button--primary {
		background: var(--accent-primary);
		color: #05060a;
		box-shadow: 0 15px 32px -18px rgba(129, 140, 248, 0.55);
	}

	.button--primary:hover {
		transform: translateY(-2px);
		box-shadow: 0 18px 38px -20px rgba(129, 140, 248, 0.7);
	}

	.button--secondary:hover {
		border-color: rgba(148, 163, 184, 0.35);
		background: rgba(15, 20, 32, 0.9);
	}

	.button--secondary {
		border-color: rgba(148, 163, 184, 0.22);
		background: rgba(12, 16, 26, 0.7);
		color: rgba(226, 232, 240, 0.85);
	}

	.hero__metrics {
		display: grid;
		gap: 1.4rem;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		padding: 0;
		margin: 0;
		list-style: none;
	}

	.hero__metrics li {
		display: flex;
		flex-direction: column;
		gap: 0.3rem;
		padding: 1.1rem 1.2rem;
		background: rgba(11, 15, 24, 0.78);
		border-radius: 18px;
		border: 1px solid rgba(148, 163, 184, 0.12);
	}

	.hero__metrics strong {
		font-size: 1.35rem;
	}

	.hero__metrics span {
		color: var(--text-secondary);
		font-size: 0.95rem;
		line-height: 1.4;
	}

	.hero__visual {
		position: relative;
		display: grid;
		gap: 1.5rem;
	}

	.panel {
		border-radius: 18px;
		padding: 1.6rem;
		background: rgba(11, 15, 24, 0.92);
		border: 1px solid rgba(129, 140, 248, 0.14);
		box-shadow: 0 24px 48px -36px rgba(6, 9, 16, 0.9);
		backdrop-filter: blur(20px);
		transition: transform 0.3s ease, box-shadow 0.3s ease;
	}

	.panel:hover {
		transform: translateY(-2px);
		box-shadow: 0 28px 56px -32px rgba(6, 9, 16, 0.95), 0 0 0 1px rgba(129, 140, 248, 0.25);
	}

	.panel header {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 1rem;
		margin-bottom: 1.1rem;
	}

	.chip {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		min-width: 160px;
		padding: 0.45rem 1.1rem;
		border-radius: 999px;
		font-size: 0.7rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.12em;
		background: rgba(17, 22, 34, 0.92);
		border: 1px solid rgba(129, 140, 248, 0.35);
		color: rgba(226, 232, 240, 0.85);
		box-shadow: 0 12px 28px -22px rgba(129, 140, 248, 0.5);
	}

	.chip--glow {
		background: rgba(22, 32, 32, 0.92);
		border-color: rgba(45, 212, 191, 0.45);
		color: rgba(204, 255, 244, 0.9);
	}

	.panel__time {
		font-size: 0.76rem;
		color: rgba(203, 213, 225, 0.65);
	}

	.panel ul {
		list-style: none;
		margin: 0;
		padding: 0;
		display: flex;
		flex-direction: column;
		gap: 0.85rem;
		color: var(--text-secondary);
		font-size: 0.95rem;
		line-height: 1.5;
	}

	.dot {
		width: 10px;
		height: 10px;
		border-radius: 999px;
		background: rgba(148, 163, 184, 0.6);
		box-shadow: 0 0 0 4px rgba(148, 163, 184, 0.08);
		margin-right: 0.6rem;
	}

	.dot--accent {
		background: var(--accent-secondary);
		box-shadow: 0 0 0 4px rgba(23, 227, 197, 0.1);
	}

	.panel ul li {
		display: flex;
		align-items: center;
	}

	.panel ul li span:last-child {
		flex: 1;
	}

	.panel footer {
		display: flex;
		flex-direction: column;
		gap: 0.55rem;
		margin-top: 1.5rem;
	}

	.panel__footer-label {
		font-size: 0.75rem;
		text-transform: uppercase;
		letter-spacing: 0.12em;
		color: rgba(203, 213, 225, 0.55);
	}

	.panel__tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
	}

	.tag {
		padding: 0.35rem 0.7rem;
		border-radius: 999px;
		background: rgba(148, 163, 184, 0.12);
		color: rgba(203, 213, 225, 0.8);
		font-size: 0.78rem;
	}

	.panel--summary p {
		color: var(--text-secondary);
		line-height: 1.6;
	}

	.panel__progress {
		margin: 1.2rem 0 1.4rem;
		width: 100%;
		height: 6px;
		border-radius: 999px;
		background: rgba(148, 163, 184, 0.15);
		overflow: hidden;
	}

	.panel__progress span {
		display: block;
		height: 100%;
		background: var(--accent-secondary);
	}

	.panel__actions {
		display: flex;
		flex-wrap: wrap;
		gap: 0.75rem;
	}

	.panel__actions button {
		padding: 0.65rem 1.3rem;
		border-radius: 12px;
		border: none;
		font-weight: 500;
		background: rgba(129, 140, 248, 0.16);
		color: var(--text-primary);
		cursor: pointer;
	}

	.panel__actions button.ghost {
		background: rgba(148, 163, 184, 0.12);
		color: var(--text-secondary);
	}

	.section {
		display: flex;
		flex-direction: column;
		gap: 3.5rem;
	}

	.section__intro {
		max-width: 44rem;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.section__intro p {
		color: var(--text-secondary);
		font-size: 1.05rem;
		line-height: 1.7;
	}

	.feature-grid {
		display: grid;
		gap: 1.8rem;
		grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
	}

	.feature-card {
		padding: 1.8rem;
		border-radius: 20px;
		background: rgba(10, 14, 24, 0.82);
		border: 1px solid rgba(148, 163, 184, 0.1);
		display: flex;
		flex-direction: column;
		gap: 1.1rem;
		box-shadow: inset 0 1px 0 rgba(148, 163, 184, 0.06);
		transition: all 0.3s ease;
	}

	.feature-card:hover {
		background: rgba(13, 18, 28, 0.92);
		border-color: rgba(129, 140, 248, 0.25);
		transform: translateY(-2px);
		box-shadow: inset 0 1px 0 rgba(148, 163, 184, 0.1), 0 12px 32px -16px rgba(129, 140, 248, 0.35);
	}

	.feature-card__label {
		font-size: 0.8rem;
		text-transform: uppercase;
		letter-spacing: 0.12em;
		color: rgba(165, 180, 252, 0.78);
	}

	.feature-card h3 {
		font-size: 1.25rem;
	}

	.feature-card p {
		color: var(--text-secondary);
		line-height: 1.6;
	}

	.workflow {
		display: grid;
		gap: 1.6rem;
		grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
	}

	.workflow__step {
		padding: 1.9rem;
		border-radius: 20px;
