---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import Footer from '../../components/Footer.astro';
import Header from '../../components/Header.astro';

export async function getStaticPaths() {
	const useCases = await getCollection('use-cases');
	return useCases.map((useCase) => ({
		params: { usecase: useCase.slug },
		props: { useCase },
	}));
}

const { useCase } = Astro.props;
const { data, body } = useCase;
const appSignupUrl = 'https://app.jotchain.com/sign_up';

const steps = data.howItWorks.map((step) => step);
const { Content } = await useCase.render();
const bodyText = typeof body === 'string' ? body.trim() : '';
const hasBody = bodyText.length > 100;
---

<Layout title={data.title} description={data.metaDescription}>
	<script type="application/ld+json" set:html={JSON.stringify({
		"@context": "https://schema.org",
		"@type": "Article",
		"headline": data.title,
		"description": data.metaDescription,
		"author": {
			"@type": "Organization",
			"name": "JotChain"
		}
	})} />

	<Header />

	<div class="page-wrapper">
		<!-- Breadcrumb -->
		<nav class="breadcrumb fade-in fade-in-1">
			<a href="/use-cases">Use Cases</a>
			<span class="breadcrumb__separator">/</span>
			<span>{data.name}</span>
		</nav>

		<!-- Hero Section -->
		<section class="hero">
			<div class="hero__content">
				<span class="hero__label fade-in fade-in-1">{data.name}</span>
				<h1 class="fade-in fade-in-2">{data.h1}</h1>
				<p class="hero__problem fade-in fade-in-3">{data.problem}</p>
				<div class="hero__actions fade-in fade-in-4">
					<a class="button button--primary" href={appSignupUrl}>Start free trial</a>
					<span class="hero__meta">14-day free trial. No credit card.</span>
				</div>
			</div>
		</section>

		<!-- Solution Section -->
		<section class="solution">
			<div class="solution__card">
				<span class="section__label">How Jotchain helps</span>
				<p class="solution__text">{data.solution}</p>
			</div>
		</section>

		<!-- Benefits Section -->
		<section class="benefits">
			<header class="section__header">
				<span class="section__label">What you get</span>
				<h2>Why teams trust Jotchain for {data.name.toLowerCase()}</h2>
			</header>

			<div class="benefits__grid">
				{data.benefits.slice(0, 4).map((benefit, index) => (
					<div class="benefit-card">
						<span class="benefit-card__number">{index + 1}</span>
						<p>{benefit}</p>
					</div>
				))}
			</div>
		</section>

		<!-- How It Works Section -->
		<section class="workflow">
			<header class="section__header">
				<span class="section__label">The workflow</span>
				<h2>How it works</h2>
				<p>A few intentional minutes per day. Jotchain turns those notes into the updates you need.</p>
			</header>

			<div class="workflow__steps">
				{steps.slice(0, 4).map((step, index) => (
					<div class="workflow__step">
						<div class="workflow__step-header">
							<span class="workflow__number">{index + 1}</span>
							{index < steps.length - 1 && <div class="workflow__line"></div>}
						</div>
						<p class="workflow__text">{step}</p>
					</div>
				))}
			</div>
		</section>

		<!-- Testimonial -->
		<section class="testimonial">
			<blockquote>
				<p>"Jotchain keeps our {data.name.toLowerCase()} updates sharp. By the time review time hits, the story writes itself."</p>
				<footer>
					<span class="testimonial__author">{data.name} lead</span>
					<span class="testimonial__role">Fast-growing product team</span>
				</footer>
			</blockquote>
		</section>

		<!-- Deep Dive Content -->
		{hasBody && (
			<section class="deep-dive">
				<header class="section__header">
					<span class="section__label">Learn more</span>
					<h2>About {data.name.toLowerCase()}</h2>
				</header>
				<div class="deep-dive__content">
					<Content />
				</div>
			</section>
		)}

		<!-- Final CTA -->
		<section class="final-cta">
			<h2>{data.cta}</h2>
			<p>Capture a week of notes and watch the summaries write themselves.</p>
			<div class="final-cta__actions">
				<a class="button button--primary" href={appSignupUrl}>Start free trial</a>
			</div>
			<span class="final-cta__meta">14-day free trial. No credit card required.</span>
		</section>
	</div>

	<Footer />
</Layout>

<style>
	.page-wrapper {
		width: 100%;
		max-width: var(--max-width);
		display: flex;
		flex-direction: column;
	}

	/* Breadcrumb */
	.breadcrumb {
		padding: 2rem 0 0;
		font-size: 0.85rem;
		color: var(--text-muted);
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.breadcrumb a {
		color: var(--text-secondary);
		transition: color 0.15s ease;
	}

	.breadcrumb a:hover {
		color: var(--primary);
	}

	.breadcrumb__separator {
		color: var(--border);
	}

	/* Section Label */
	.section__label {
		display: inline-block;
		font-family: var(--font-heading);
		font-size: 0.7rem;
		font-weight: 500;
		text-transform: uppercase;
		letter-spacing: 0.12em;
		color: var(--primary);
		margin-bottom: 0.75rem;
		position: relative;
		padding-left: 1.5rem;
	}

	.section__label::before {
		content: '';
		position: absolute;
		left: 0;
		top: 50%;
		transform: translateY(-50%);
		width: 1rem;
		height: 1px;
		background: var(--primary);
		opacity: 0.5;
	}

	.section__header {
		text-align: center;
		max-width: 560px;
		margin: 0 auto 3rem;
	}

	.section__header h2 {
		font-size: clamp(1.5rem, 3vw, 2rem);
		margin-bottom: 0.75rem;
	}

	.section__header p {
		color: var(--text-secondary);
		font-size: 1.05rem;
		line-height: 1.6;
	}

	/* Hero Section */
	.hero {
		padding: 3rem 0 5rem;
		text-align: center;
	}

	.hero__content {
		max-width: 680px;
		margin: 0 auto;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1.25rem;
	}

	.hero__label {
		display: inline-block;
		font-family: var(--font-heading);
		font-size: 0.7rem;
		font-weight: 500;
		text-transform: uppercase;
		letter-spacing: 0.12em;
		color: var(--primary);
		padding: 0.5rem 1rem;
		background: var(--primary-soft-bg);
		border: 1px solid var(--primary-soft-border);
		border-radius: 2rem;
	}

	.hero h1 {
		font-size: clamp(1.75rem, 4vw, 2.5rem);
		line-height: 1.2;
		letter-spacing: -0.02em;
	}

	.hero__problem {
		font-size: 1.1rem;
		line-height: 1.7;
		color: var(--text-secondary);
		max-width: 560px;
	}

	.hero__actions {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 0.75rem;
		margin-top: 0.5rem;
	}

	.hero__meta {
		font-size: 0.85rem;
		color: var(--text-muted);
	}

	/* Solution Section */
	.solution {
		padding: 0 0 5rem;
	}

	.solution__card {
		max-width: 640px;
		margin: 0 auto;
		padding: 2rem;
		background: var(--subtle);
		border: 1px solid var(--border-subtle);
		border-radius: var(--radius);
		text-align: center;
	}

	.solution__card .section__label {
		padding-left: 0;
	}

	.solution__card .section__label::before {
		display: none;
	}

	.solution__text {
		font-size: 1.1rem;
		line-height: 1.7;
		color: var(--text-secondary);
		margin: 0;
	}

	/* Benefits Section */
	.benefits {
		padding: 5rem 0;
		background: var(--subtle);
		width: 100vw;
		margin-left: 50%;
		transform: translateX(-50%);
		border-top: 1px solid var(--border-subtle);
	}

	.benefits__grid {
		display: grid;
		gap: 1.25rem;
		max-width: 800px;
		margin: 0 auto;
		padding: 0 1.5rem;
	}

	@media (min-width: 640px) {
		.benefits__grid {
			grid-template-columns: repeat(2, 1fr);
			padding: 0 2.5rem;
		}
	}

	.benefit-card {
		display: flex;
		gap: 1rem;
		padding: 1.5rem;
		background: var(--surface);
		border: 1px solid var(--border-subtle);
		border-radius: var(--radius);
		transition: border-color 0.2s ease, transform 0.2s ease;
	}

	.benefit-card:hover {
		border-color: var(--border);
		transform: translateY(-2px);
	}

	.benefit-card__number {
		flex-shrink: 0;
		width: 1.75rem;
		height: 1.75rem;
		border-radius: 50%;
		background: var(--primary-soft-bg);
		border: 1px solid var(--primary-soft-border);
		display: flex;
		align-items: center;
		justify-content: center;
		font-family: var(--font-heading);
		font-size: 0.75rem;
		font-weight: 600;
		color: var(--primary);
	}

	.benefit-card p {
		font-size: 0.95rem;
		line-height: 1.6;
		color: var(--text-secondary);
		margin: 0;
	}

	/* Workflow Section */
	.workflow {
		padding: 5rem 0;
		border-top: 1px solid var(--border-subtle);
	}

	.workflow__steps {
		display: flex;
		flex-direction: column;
		gap: 0;
		max-width: 560px;
		margin: 0 auto;
	}

	.workflow__step {
		display: flex;
		gap: 1.25rem;
		padding-bottom: 1.5rem;
	}

	.workflow__step:last-child {
		padding-bottom: 0;
	}

	.workflow__step-header {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 0;
	}

	.workflow__number {
		flex-shrink: 0;
		width: 2.25rem;
		height: 2.25rem;
		border-radius: 50%;
		background: var(--primary);
		display: flex;
		align-items: center;
		justify-content: center;
		font-family: var(--font-heading);
		font-size: 0.85rem;
		font-weight: 600;
		color: var(--primary-foreground);
	}

	.workflow__line {
		width: 2px;
		flex: 1;
		min-height: 2rem;
		background: var(--border-subtle);
		margin-top: 0.5rem;
	}

	.workflow__text {
		font-size: 1rem;
		line-height: 1.6;
		color: var(--text-secondary);
		margin: 0;
		padding-top: 0.35rem;
	}

	/* Testimonial */
	.testimonial {
		padding: 4rem 0;
		background: var(--subtle);
		width: 100vw;
		margin-left: 50%;
		transform: translateX(-50%);
		border-top: 1px solid var(--border-subtle);
		border-bottom: 1px solid var(--border-subtle);
	}

	.testimonial blockquote {
		max-width: 640px;
		margin: 0 auto;
		padding: 0 1.5rem;
		text-align: center;
	}

	.testimonial p {
		font-size: 1.25rem;
		line-height: 1.6;
		color: var(--text-primary);
		font-style: italic;
		margin: 0 0 1.5rem;
	}

	.testimonial footer {
		display: flex;
		flex-direction: column;
		gap: 0.25rem;
	}

	.testimonial__author {
		font-weight: 600;
		color: var(--text-primary);
	}

	.testimonial__role {
		font-size: 0.9rem;
		color: var(--text-muted);
	}

	/* Deep Dive */
	.deep-dive {
		padding: 5rem 0;
	}

	.deep-dive__content {
		max-width: 680px;
		margin: 0 auto;
		padding: 2rem;
		background: var(--surface);
		border: 1px solid var(--border-subtle);
		border-radius: var(--radius);
		font-size: 1rem;
		line-height: 1.75;
		color: var(--text-secondary);
	}

	.deep-dive__content :global(h2),
	.deep-dive__content :global(h3) {
		color: var(--text-primary);
		margin-top: 1.5rem;
		margin-bottom: 0.75rem;
	}

	.deep-dive__content :global(p) {
		margin-bottom: 1rem;
	}

	/* Final CTA */
	.final-cta {
		padding: 5rem 0 6rem;
		text-align: center;
		background: linear-gradient(
			180deg,
			var(--background) 0%,
			var(--primary-soft-bg) 100%
		);
		width: 100vw;
		margin-left: 50%;
		transform: translateX(-50%);
		border-top: 1px solid var(--border-subtle);
	}

	.final-cta h2 {
		font-size: clamp(1.5rem, 3vw, 2rem);
		margin-bottom: 0.75rem;
	}

	.final-cta p {
		color: var(--text-secondary);
		font-size: 1.05rem;
		margin-bottom: 1.5rem;
	}

	.final-cta__actions {
		display: flex;
		justify-content: center;
		margin-bottom: 1rem;
	}

	.final-cta__meta {
		font-size: 0.85rem;
		color: var(--text-muted);
	}
</style>
